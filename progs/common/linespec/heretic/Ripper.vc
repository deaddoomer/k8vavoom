class Ripper : Actor
  game(GAME_Heretic)
  __scriptid__(157);

//==========================================================================
//
//  DoSpecialDamage
//
//==========================================================================

override int DoSpecialDamage(EntityEx victim, EntityEx source, int damage)
{
  if (victim.Class == Ironlich)
  {
    // Less damage to Ironlich bosses
    damage = P_Random() & 1;
    if (!damage)
    {
      return -1;
    }
  }
  return ::DoSpecialDamage(victim, source, damage);
}

states
{
Spawn:
  FX18 M 4
  FX18 N 5
  Loop
Death:
  FX18 OPQRS 4 Bright
  Stop
}

defaultproperties
{
  Radius = 8.0;
  Height = 6.0;
  Speed = 490.0;
  MissileDamage = 1;
  bMissile = true;
  bNoBlockmap = true;
  bNoGravity = true;
  bDropOff = true;
  bNoTeleport = true;
  bActivatePCross = true;
  bRip = true;
  bActivateImpact = true;
  bBloodSplatter = true;
  DeathSound = 'weapons/blasterpowhit';
}
