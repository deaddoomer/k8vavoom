class Mace : HereticWeapon
  game(GAME_Heretic)
  __scriptid__(31);

EntityEx    FirstSpot;
int       SpotCount;

//==========================================================================
//
//  DoRespawn
//
//  Chooses the next spot to place the mace.
//
//==========================================================================

override bool DoRespawn()
{
  int       SpotIdx;
  EntityEx    Spot;

  // Do random mace placement
  if (SpotCount)
  {
    SpotIdx = P_Random() % SpotCount;
    for (Spot = FirstSpot; SpotIdx > 0; SpotIdx--)
    {
      Spot = Spot.Target;
    }

    UnlinkFromWorld();
    Origin = Spot.Origin;
    LinkToWorld(properFloorCheck:true);
  }
  return true;
}

states
{
Ready:
  MACE A 1 DoReadyWeapon
  Loop
Deselect:
  MACE A 1 A_Lower
  Loop
Select:
  MACE A 1 A_Raise
  Loop
Fire:
  MACE B 4
Hold:
  MACE CDEF 3 A_FireMacePL1
  MACE C 4 A_ReFire
  MACE DEFB 4
  Goto Ready
Spawn:
  WMCE A -1
  Stop
}

defaultproperties
{
  SelectionOrder = 1400;
  AmmoType1 = MaceAmmo;
  AmmoUse1 = 1;
  AmmoGive1 = 50;
  PSpriteSY = 15.0;
  PickupMessage = "$txt_wpnmace";
  SisterWeaponType = MacePowered;
  BotCombatDist = 384.0;
  bBotProjectile = true;
}
