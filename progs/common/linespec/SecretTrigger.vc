class SecretTrigger : Actor
  __mobjinfo__(9046);

//==========================================================================
//
//  BeginPlay
//
//==========================================================================

override void BeginPlay()
{
  ::BeginPlay();
  Level.TotalSecret++;
}

//==========================================================================
//
//  Activate
//
//==========================================================================

override bool Activate(EntityEx Activator)
{
  if (Activator && Activator.bIsPlayer)
  {
    if (Args[0] <= 1)
    {
      Activator.Player.centreprint("You found a secret area");
    }
    if (Args[0] == 0 || Args[0] == 2)
    {
      Activator.PlaySound('misc/secret', CHAN_AUTO);
    }
    Activator.Player.SecretCount++;
  }
  Level.CurrentSecret++;
  Destroy();
  return true;
}

defaultproperties
{
  bNoBlockmap = true;
  bNoSector = true;
  bNoGravity = true;
  bNoSplash = true;
}
