// Flags for A_WeaponReady
enum {
  WRF_NOBOB = 1,
  WRF_NOSWITCH = 2,
  WRF_NOPRIMARY = 4,
  WRF_NOSECONDARY = 8,
  WRF_NOFIRE = 12,
  WRF_ALLOWREFIRE = 32,
  WRF_ALLOWRELOAD = 64
};


