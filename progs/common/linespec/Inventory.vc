final void BecomeItem()
{
  UnlinkFromWorld();
  bNoSector = true;
  bNoBlockmap = true;
  LinkToWorld();
  SetTID(0);
  bSpecial = false;
  SetState(FindState('Held'));
}

//==========================================================================
//
//  BecomePickup
//
//==========================================================================

final void BecomePickup()
{
  if (Owner)
  {
    EntityEx(Owner).RemoveInventory(self);
  }
  UnlinkFromWorld();
  bNoSector = false;
  bNoBlockmap = false;
  LinkToWorld();
  bSpecial = default.bSpecial;
  SetState(IdleState);
}

