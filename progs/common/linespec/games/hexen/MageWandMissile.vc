class MageWandMissile : FastProjectile;


//===========================================================================
//
//  SpawnBlasterEffects
//
//===========================================================================
override void SpawnBlasterEffects () {
  if (P_Random() < 128) {
    float z = fmax(FloorZ, Origin.z-8.0);
    Spawn(MageWandSmoke, vector(Origin.x, Origin.y, z));
  }
}


states {
Spawn:
  MWND CD 4 Bright
  Loop
Death:
  MWND E 4 Bright
  MWND F 3 Bright
  MWND G 4 Bright
  MWND H 3 Bright
  MWND I 4 Bright
  Stop
}


defaultproperties {
  Radius = 12.0;
  Height = 8.0;
  Speed = 6440.0;
  MissileDamage = 2;
  bRip = true;
  bCannotPush = true;
  bNoDamageThrust = true;
  SightSound = 'MageWandFire';
}
