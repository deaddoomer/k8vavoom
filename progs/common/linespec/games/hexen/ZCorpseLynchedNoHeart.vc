class ZCorpseLynchedNoHeart : Actor
  game(GAME_Hexen)
  __mobjinfo__(109);

//==========================================================================
//
//  BeginPlay
//
//==========================================================================

override void BeginPlay()
{
  ::BeginPlay();
  // Special stuff
  auto A = Spawn(BloodPool, vector(Origin.x, Origin.y, ONFLOORZ));
  if (A) A.CarryBloodTranslations(self);
}

//==========================================================================
//
//  A_CorpseBloodDrip
//
//==========================================================================

[decorate] final void A_CorpseBloodDrip()
{
  if (Random() > 0.5)
  {
    return;
  }
  auto A = Spawn(CorpseBloodDrip, Origin + vector(0.0, 0.0, Height / 2.0));
  if (A) A.CarryBloodTranslations(self);
}

states
{
Spawn:
  CPS5 A 140 A_CorpseBloodDrip
  Wait
}

defaultproperties
{
  Radius = 10.0;
  Height = 100.0;
  bSolid = true;
  bSpawnCeiling = true;
  bNoGravity = true;
}
