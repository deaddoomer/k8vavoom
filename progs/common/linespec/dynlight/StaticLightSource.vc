class StaticLightSource : Actor __mobjinfo__(1502);


override void OnMapSpawn (mthing_t *mthing) {
  ::OnMapSpawn(mthing);
  float l;
  if (!mthing->arg1) l = 200.0; else l = float(mthing->arg1)*8.0;
  Level.AddStaticLight(none, vector(mthing->x, mthing->y, mthing->height), l);
  Destroy();
}


defaultproperties {
}
