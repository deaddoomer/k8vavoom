class PowerFrightener : Powerup;


//==========================================================================
//
//  InitEffect
//
//==========================================================================
override void InitEffect () {
  if (Owner && Owner.Player) {
    PlayerEx(Owner.Player).Cheats |= PlayerEx::CF_FRIGHTENING;
  }
}


//==========================================================================
//
//  EndEffect
//
//==========================================================================
override void EndEffect () {
  if (Owner && Owner.Player) {
    PlayerEx(Owner.Player).Cheats &= ~PlayerEx::CF_FRIGHTENING;
  }
}


defaultproperties {
  EffectTime = 60.0;
  bShowTimer = true;
  PowerupTimerName = "Fright";
}
