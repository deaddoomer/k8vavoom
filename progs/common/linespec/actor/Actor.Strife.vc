  Weapon Wpn = PlayerEx(Player).ReadyWeapon;
  if (!Wpn) return;

  float savedangle = Angles.yaw;
  Angles.yaw = AngleMod360(Angles.yaw+(Random()-Random())*45.0/8.0/float(1<<(Accuracy*5/100)));
