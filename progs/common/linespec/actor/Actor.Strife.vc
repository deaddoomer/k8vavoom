//==========================================================================
[decorate] final void A_StalkerAttack () {
  if (bNoGravity) {
    // land if we are on ceiling
    SetState(FindState('Drop'));
  } else {
    if (!Target) return;

    A_FaceTarget();
    if (CheckMeleeRange()) Target.Damage(self, self, (P_Random()&7)*2+2, spawnBlood:true);
  }
}


