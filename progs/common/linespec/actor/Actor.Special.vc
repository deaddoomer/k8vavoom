//============================================================================
//
//  A_SetBlend
//
//============================================================================
final void A_SetBlend (string Col1, float A, int Tics, optional string Col2) {
  int C1 = ParseColor(Col1);
  int C2 = ParseColor(Col2);
  A = fclamp(A, 0, 1);

  // huh?
  if (C1 == -1) C1 = 0;
  if (C2 == -1) C2 = 0;
  if (!specified_Col2) C2 = C1;

  FlashFader F = Spawn(FlashFader);
  F.Init(float((C1>>16)&0xff)/255.0, float((C1>>8)&0xff)/255.0, float(C1&0xff)/255.0,
         A,
         float((C2>>16)&0xff)/255.0, float((C2>>8)&0xff)/255.0, float(C2&0xff)/255.0,
         0.0, float(Tics)/35.0, self);
}


//============================================================================
//
//  A_CheckSight
//
//============================================================================
final void A_CheckSight (state Label) {
  // state jumps should not affect state chain results
  if (XLevel.StateCall) XLevel.StateCall->Result = false;

  foreach (auto i; 0..MAXPLAYERS) {
    if (!Level.Game.Players[i] || !Level.Game.Players[i].bSpawned) continue;
    if (!Level.Game.Players[i].Camera) {
      //k8: this can happens when player is switching cameras (why?)
      //    we can check it with brutalv20, with "+vscript_command give PowerStrength"
      dprint("%C: EMPTY CAMERA for player #%d!", self, i);
      continue;
    }
    if (Level.Game.Players[i].Camera.CanSee(self)) return;
  }

  DoJump(Label);
}


//==========================================================================
//
//  A_CheckFloor
//
//  Checks if an object hit the floor
//
//==========================================================================
final void A_CheckFloor (state Label) {
  // state jumps should not affect state chain results
  if (XLevel.StateCall) XLevel.StateCall->Result = false;
  if (Origin.z <= FloorZ) DoJump(Label);
}


