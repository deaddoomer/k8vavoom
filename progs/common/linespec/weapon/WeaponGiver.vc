class WeaponGiver : Weapon
  abstract;

//==========================================================================
//
//  TryPickup
//
//==========================================================================

override bool TryPickup(EntityEx Toucher)
{
  if (DropItemList.Num && ClassIsChildOf(DropItemList[0].Type, Weapon))
  {
    Weapon Wpn = Weapon(Spawn(DropItemList[0].Type, default, default, default, false));
    if (Wpn)
    {
      Wpn.bAlwaysPickup = false;
      if (!Wpn.TryPickup(Toucher))
      {
        Wpn.Destroy();
        return false;
      }
      GoAwayAndDie();
      return true;
    }
  }
  return false;
}

