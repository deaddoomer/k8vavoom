// used to keep player stats
class PlayerReplicationInfo : Thinker native;

BasePlayer Player;
int PlayerNum;

string PlayerName;
string UserInfo;

ubyte TranslStart;
ubyte TranslEnd;
int Color;

int Frags;
int Deaths;
int KillCount;
int ItemCount;
int SecretCount;


replication {
  reliable if (Role == ROLE_Authority)
    PlayerNum, PlayerName, UserInfo, TranslStart, TranslEnd, Color,
    Frags, Deaths, KillCount, ItemCount, SecretCount;
}


defaultproperties {
  bAlwaysRelevant = true;
}
