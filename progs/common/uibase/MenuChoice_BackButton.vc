class MenuChoice_BackButton : MenuTextButton;

//==========================================================================
//
//  OnDraw
//
//==========================================================================

void OnDraw()
{
  SetFont('bigfont');
  int Col = IsFocus() ? CR_YELLOW : CR_UNTRANSLATED;
  DrawText(0, 0, Text, Col);
}

//==========================================================================
//
//  OnMouseClick
//
//==========================================================================

void OnMouseClick(int X, int Y)
{
  GetClGame().PopMenu();
}

//==========================================================================
//
//  OnFocusReceived
//
//==========================================================================

void OnFocusReceived()
{
//  ::OnFocusReceived();
}

defaultproperties
{
  TextFont = 'bigfont';
  Text = "x";
  Height = 23;
}
