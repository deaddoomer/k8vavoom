class MenuTitleText : Widget;

string Text;
//bool centerText;


//==========================================================================
//
//  SetOrigin
//
//==========================================================================
override void SetOrigin(int OrgX, int OrgY) {
  SetFont('bigfont');
  SetPos(OrgX-TextWidth(Text)/2, OrgY-TextHeight(Text));
  SetSize(TextWidth(Text), TextHeight(Text));
}


//==========================================================================
//
//  FixSize
//
//==========================================================================
void FixSize (optional int deltay) {
  SetFont('bigfont');
  SetSize(TextWidth(Text), TextHeight(Text)+deltay);
  //print("FixSize: <%q>", Text);
}


//==========================================================================
//
//  OnDraw
//
//==========================================================================
override void OnDraw () {
  SetFont('bigfont');
  /*
