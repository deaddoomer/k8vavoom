class MenuModel : Widget;

TVec Origin;
float Angle;
void *Model;
int Frame;
int NextFrame;
string Skin;
int TranslStart;
int TranslEnd;
int Color;


override void OnCreate () {
  ::OnCreate();
  Disable();
}


override void OnDraw () {
  R_DrawModelFrame(Origin, Angle, Model, Frame, NextFrame, Skin, TranslStart, TranslEnd, Color);
}


defaultproperties {
  Skin = "";
  Width = 320;
  Height = 200;
}
