class ConDlgChoice : MenuSmallTextButton;

int ImpulseNum;
int Price;


override void OnDraw () {
  int y = 0;
       if (TextVAlign == vbottom) y += Height-1;
  else if (TextVAlign == vcenter) y += Height/2;

  string text = Text;
  if (Price) {
    if (IsFocused) {
      text = va("%s \cDfor \cJ%d\cD gold", text, Price);
    } else {
      text = va("%s \cQfor \cX%d\cQ gold", text, Price);
    }
  }

  SetFont(TextFont);
  SetTextAlign(TextHAlign, TextVAlign);
  DrawText(CursorXOffs, y, text, (IsFocused ? TextColorFocus : TextColor));
}


override void ActivateEvent () {
  CmdBuf_AddText("Impulse %d\n", ImpulseNum);
  //StopLocalSounds();
  //GetClGame().PopMenu();
  auto par = FindParentWithClass(MenuScreen);
  if (par) par.DoPopMenu(userAbort:false);
}


defaultproperties {
  TextHAlign = hleft;
  TextColorFocus = CR_WHITE;
  TextColor = CR_ORANGE;
}
