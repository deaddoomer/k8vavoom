class HelpText : Widget;

private string mText;
bool atTop;


final string text {
  get { return mText; }
  set { setText(value); }
}


// ////////////////////////////////////////////////////////////////////////// //
void setText (string text) {
  while (text && text[0] <= ' ') text = text[1..$];
  while (text && text[$-1] <= ' ') text = text[0..$-1];
  mText = SplitTextWithNewlines(text, GetVirtualWidth()-16);

  SetFont('smallfont');
  SetTextAlign(hleft, vtop);
  SetSize(TextWidth(mText)+8, TextHeight(mText)+8);
}


override void OnDraw () {
  if (!mText || Width < 1 || Height < 1) return;
  SetOrigin((GetVirtualWidth()-Width)/2, (atTop ? 2 : GetVirtualHeight()-Height-2));
  SetFont('smallfont');
  SetTextAlign(hleft, vtop);
  ShadeRect(0, 0, Width, Height, GetCvarF('menu_darkening'));
  DrawText(4, 4, mText, CR_ORANGE);
}


defaultproperties {
  X = 0;
  Y = 0;
  Width = 0;
  Height = 0;
  Focusable = false;
}
