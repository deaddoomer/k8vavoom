class MenuSelector_SmallLeft : MenuSelector_SmallBase;


//==========================================================================
//
//  OnCreate
//
//==========================================================================
override void OnCreate () {
  ::OnCreate();
  auto oldFont = GetFont();
  scope(exit) SetFont(oldFont);
  /*
  SetFont('smallfont');
  Width = TextWidth("*")+8;
  Height = TextHeight("*");
  */
  SetFont('consolefont');
  Width = TextWidth("\x0d")+8;
  Height = TextHeight("\x0d");
}


//==========================================================================
//
//  OnDraw
//
//==========================================================================
override void OnDraw () {
  /*
  SetFont('smallfont');
  SetTextAlign(hright, vtop);
  DrawText(8, yofs, "*", GetMarkColor());
  */
  SetFont('consolefont');
  SetTextAlign(hright, vtop);
  DrawText(8, yofs, "\x0d", GetMarkColor());
  SetFont('smallfont');
}


defaultproperties {
  OrgXDelta = -10;
}
