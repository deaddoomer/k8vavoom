class MenuChoice_LoadSlot : ChoiceSaveLoadSlotBase;


//==========================================================================
//
//  ActivateSlot
//
//==========================================================================
override void ActivateSlot () {
  if (!Status) return; // don't try to load from an empty slot
  CmdBuf_AddText("Load %d\n", SlotNum);
  GetClGame().ForceMenuOff();
  LocalSound('menu/choose');
}


