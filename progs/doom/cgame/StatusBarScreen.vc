//==========================================================================
//
//  Seconds2Str
//
//==========================================================================
static final string Seconds2Str (float secs) {
  int s = int(secs);
  int m = s/60;
  s %= 60;
  return (m ? va("%s:%02s", m, s) : va("%s", s));
}


