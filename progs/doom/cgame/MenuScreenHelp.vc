class MenuScreenHelp : MenuScreenHelpBase;


override void CreateChoices () {
  AppendHelpPage('titlepic', atitle:true); // so i can view titlepic
  // add help screens only if they are not from IWAD
  AppendHelpPage((IsAnyDoom2 ? 'help' : 'help1'), nonIWAD:true);
  if (!IsAnyDoom2 && !WadLumpPresent('e4m1')) AppendHelpPage('help2', nonIWAD:true);
  AppendBoomHelpScreens();
}
