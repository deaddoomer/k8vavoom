//==========================================================================
//
//  QuitResponse
//
//==========================================================================

void QuitResponse(int ch)
{
	if (ch != K_y)
		return;

	CmdBuf_AddText("Quit\n");
}

//==========================================================================
//
//  menu_quit
//
//==========================================================================

void menu_quit(void)
{
	LocalSound("Chat");
	MB_StartMessage("ARE YOU SURE YOU WANT TO QUIT?", QuitResponse, true);
}

