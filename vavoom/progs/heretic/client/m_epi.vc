//  SharewareResponse
//
//==========================================================================

void SharewareResponse(int key)
{
	menu_help();
}

//==========================================================================
//
//	MenuChoice_Episode1
//
//==========================================================================

class MenuChoice_Episode1:MenuBigTextButton
{
	int EpisodeNum;

	void ActivateEvent(void)
	{
		if (shareware && EpisodeNum > 1)
		{
			MB_StartMessage("ONLY AVAILABLE IN THE REGISTERED VERSION",
				MB_Shareware, false);
			return;
		}
		MenuEpisode = EpisodeNum;
		menu_skill();
	}

	defaultproperties
	{
		Text = "CITY OF THE DAMNED";
		EpisodeNum = 1;
	}
}

