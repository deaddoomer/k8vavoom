// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

// FUNCTION PROTOTYPES -----------------------------------------------------

void menu_skill(void);

// DATA DECLARATIONS -------------------------------------------------------

int MenuEpisode;

// CODE --------------------------------------------------------------------

//==========================================================================
//
//  menu_episode_callback
//
//==========================================================================

void menu_episode_callback(menucommon_t * item, int msg)
{
	if (msg == MMSG_RECEIVE_FOCUS)
	{
		MenuEpisode = item->id;
	}
}

//==========================================================================
//
//  SharewareResponse
//
//==========================================================================

void SharewareResponse(int key)
{
	menu_help();
}

//==========================================================================
//
//  shareware_func
//
//==========================================================================

void shareware_func(void)
{
	MB_StartMessage("ONLY AVAILABLE IN THE REGISTERED VERSION",
		SharewareResponse, false);
}

//==========================================================================
//
//	MenuScreenEpisode
//
//==========================================================================

class MenuScreenEpisode:MenuScreen
{
	menutext_t epi1;
	menutext_t epi2;
	menutext_t epi3;
	menutext_t epi4;
	menutext_t epi5;
	menutext_t title;

	defaultproperties
	{
		SelectorType = MenuSelector_BigArrow;
	}
}

void menu_episode(void)
{
	MenuScreenEpisode EpisodeMenu;
	int x = 48;
	int y = 40;

	EpisodeMenu = MenuScreenEpisode(SpawnMenu(MenuScreenEpisode));

	MenuText_InitFunc(&EpisodeMenu.epi1, x, y, "CITY OF THE DAMNED", TEXT_BIG,
		menu_skill);
	EpisodeMenu.epi1.callback = menu_episode_callback;
	EpisodeMenu.epi1.id = 1;
	MenuItemWrapper(EpisodeMenu.AddItem(MenuItemWrapper)).item = &EpisodeMenu.epi1;
	y += 18;

	MenuText_InitFunc(&EpisodeMenu.epi2, x, y, "HELL'S MAW", TEXT_BIG,
		shareware ? shareware_func : menu_skill);
	EpisodeMenu.epi2.callback = menu_episode_callback;
	EpisodeMenu.epi2.id = 2;
	MenuItemWrapper(EpisodeMenu.AddItem(MenuItemWrapper)).item = &EpisodeMenu.epi2;
	y += 18;

	MenuText_InitFunc(&EpisodeMenu.epi3, x, y, "THE DOME OF D'SPARIL",
		TEXT_BIG, shareware ? shareware_func : menu_skill);
	EpisodeMenu.epi3.callback = menu_episode_callback;
	EpisodeMenu.epi3.id = 3;
	MenuItemWrapper(EpisodeMenu.AddItem(MenuItemWrapper)).item = &EpisodeMenu.epi3;
	y += 18;

	if (ExtendedWAD)
	{
		MenuText_InitFunc(&EpisodeMenu.epi4, x, y, "THE OSSUARY", TEXT_BIG,
			menu_skill);
		EpisodeMenu.epi4.callback = menu_episode_callback;
		EpisodeMenu.epi4.id = 4;
		MenuItemWrapper(EpisodeMenu.AddItem(MenuItemWrapper)).item = &EpisodeMenu.epi4;
		y += 18;

		MenuText_InitFunc(&EpisodeMenu.epi5, x, y, "THE STAGNANT DEMESNE",
			TEXT_BIG, menu_skill);
		EpisodeMenu.epi5.callback = menu_episode_callback;
		EpisodeMenu.epi5.id = 5;
		MenuItemWrapper(EpisodeMenu.AddItem(MenuItemWrapper)).item = &EpisodeMenu.epi5;
	}

	MenuText_InitTitle(&EpisodeMenu.title, 160, 24, "WHICH EPISODE?",
		TEXT_BIGC);
	MenuItemWrapper(EpisodeMenu.AddItem(MenuItemWrapper)).item = &EpisodeMenu.title;

	PushMenuScreen(EpisodeMenu);
}

