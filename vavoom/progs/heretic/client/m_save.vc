// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

class MenuScreenSaveGame:MenuScreen
{
	menusaveslot_t slot[NUMSLOTS];
	menutext_t title;

	defaultproperties
	{
		SelectorType = MenuSelector_BigArrow;
	}
}

// FUNCTION PROTOTYPES -----------------------------------------------------

// DATA DECLARATIONS -------------------------------------------------------

MenuScreenSaveGame SaveMenu;

// CODE --------------------------------------------------------------------

//==========================================================================
//
//  save_func
//
//==========================================================================

void save_func(menucommon_t * aitem, int msg)
{
	menusaveslot_t *item = (menusaveslot_t *) aitem;

	if (msg != MMSG_ACTIVATE)
	{
		return;
	}

	// we are going to be intercepting all chars
	enteringText = true;
	InputLine_Init(&slot_enter_text);

	if (item->status)
	{
		InputLine_SetValue(&slot_enter_text, ARR2STR(item->text));
	}
	LocalSound('MenuSelect');
}

//==========================================================================
//
//  menu_save
//
//==========================================================================

void menu_save(void)
{
	int x = 80;
	int y = 40;
	int i;

/*	if (sv.active && svs.max_clients > 1)
	{
		MB_StartMessage("can't save net game", NULL, false);
		return;
	}

	if (!sv.active || sv.intermission)
	{
		MB_StartMessage("you can't save if you aren't playing!", NULL, false);
		return;
	}*/

	enteringText = false;

	SaveMenu = MenuScreenSaveGame(SpawnMenu(MenuScreenSaveGame));

	for (i = 0; i < NUMSLOTS; i++)
	{
		MenuSaveSlot_Init(&SaveMenu.slot[i], x, y);
		SaveMenu.slot[i].callback = save_func;
		SaveMenu.slot[i].id = i;
		SaveMenu.slot[i].status =
			SV_GetSaveString(i, ARR2STR(SaveMenu.slot[i].text));
		MenuItemWrapper(SaveMenu.AddItem(MenuItemWrapper)).item = &SaveMenu.slot[i];
		y += 18;
	}

	MenuText_InitTitle(&SaveMenu.title, 160, 24, "SAVE GAME", TEXT_BIGC);
	MenuItemWrapper(SaveMenu.AddItem(MenuItemWrapper)).item = &SaveMenu.title;

	PushMenuScreen(SaveMenu);
}

