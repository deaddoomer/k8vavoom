//==========================================================================
//
//	MenuScreenSoundOptions
//
//==========================================================================

class MenuScreenSoundOptions:MenuScreen
{
	defaultproperties
	{
		Choices[0] = MenuChoice_SoundVolume;
		Choices[1] = MenuChoice_MusicVolume;
		Choices[2] = MenuChoice_SwapStereo;
		Choices[3] = MenuChoice_CDMusic;
		ChoicesStartX = 160;
		ChoicesStartY = 37;
		SelectorType = MenuSelector_SmallRight;
		Title = "SOUND SETTINGS";
	}
}

void menu_sound(void)
{
	PushMenuScreen(SpawnMenu(MenuScreenSoundOptions));
}

