//==========================================================================
//
//	MenuChoice_SoundVolume
//
//==========================================================================

class MenuChoice_SoundVolume:MenuChoiceSlider
{
	float GetInitialValue(void)
	{
		return itof(GetCvar("sfx_volume"));
	}

	boolean SetNewValue(float newValue)
	{
		SetCvar("sfx_volume", ftoi(newValue));
		return true;
	}

	defaultproperties
	{
		Text = "Sound volume";
		MaxValue = 15.0;
	}
}

