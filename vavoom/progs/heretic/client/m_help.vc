// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

class MenuScreenHelp:MenuScreen
{
	menubitmap_t pic;
	int numpages;
	int curpage;

	defaultproperties
	{
	}
}

// FUNCTION PROTOTYPES -----------------------------------------------------

// DATA DECLARATIONS -------------------------------------------------------

MenuScreenHelp HelpMenu;

string page_names[4] = { "HELP1", "HELP2", "CREDIT", "ORDER" };

// CODE --------------------------------------------------------------------

//==========================================================================
//
//  UseHelp
//
//==========================================================================

boolean UseHelp(menucommon_t * item, int key)
{
	HelpMenu.curpage++;
	LocalSound('MenuClose');

	if (key == K_ESCAPE || HelpMenu.curpage >= HelpMenu.numpages)
	{
		ForceMenuOff();
	}
	else
	{
		HelpMenu.pic.handle =
			R_RegisterPic(page_names[HelpMenu.curpage], PIC_RAW);
	}
	return true;
}

//==========================================================================
//
//  menu_help
//
//==========================================================================

void menu_help(void)
{
	HelpMenu = MenuScreenHelp(SpawnMenu(MenuScreenHelp));

	if (shareware)
	{
		HelpMenu.numpages = 4;
	}
	else
	{
		HelpMenu.numpages = 3;
	}
	HelpMenu.curpage = 0;

	MenuBitmap_Init(&HelpMenu.pic, 0, 0, 0, page_names[HelpMenu.curpage],
		PIC_RAW);
	MenuItemWrapper(HelpMenu.AddItem(MenuItemWrapper)).item = &HelpMenu.pic;
	HelpMenu.pic.responder = UseHelp;

	PushMenuScreen(HelpMenu);
}

