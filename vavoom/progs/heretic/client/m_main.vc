// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

struct menu_main_t
{
	menu_t			menu;
	menutext_t		single;
	menutext_t		multi;
	menutext_t		options;
	menutext_t		help;
	menutext_t		quit;
	menubitmap_t	logo;
	menuanim_t		anim1;
	menuanim_t		anim2;
};

// FUNCTION PROTOTYPES -----------------------------------------------------

void menu_single(void);
void menu_multi(void);
void menu_options(void);
void menu_help(void);
void menu_quit(void);

// DATA DECLARATIONS -------------------------------------------------------

menu_main_t		MainMenu;

// CODE --------------------------------------------------------------------

//==========================================================================
//
//	menu_main
//
//==========================================================================

void menu_main(void)
{
	int x;
	int y;

	x = 110;
	y = 56;

    InitMenu(&MainMenu.menu);

	if (local_server)
	{
		MenuText_InitFunc(&MainMenu.single, x, y, "Single Player", TEXT_BIG, menu_single);
		AddMenuItem(&MainMenu.menu, &MainMenu.single);
		y += 18;
	}

	MenuText_InitFunc(&MainMenu.multi, x, y, "Multiplayer", TEXT_BIG, menu_multi);
	AddMenuItem(&MainMenu.menu, &MainMenu.multi);
	y += 18;

	MenuText_InitFunc(&MainMenu.options, x, y, "Options", TEXT_BIG, menu_options);
	AddMenuItem(&MainMenu.menu, &MainMenu.options);
	y += 18;

	MenuText_InitFunc(&MainMenu.help, x, y, "Help", TEXT_BIG, menu_help);
	AddMenuItem(&MainMenu.menu, &MainMenu.help);
	y += 18;

	MenuText_InitFunc(&MainMenu.quit, x, y, "Quit game", TEXT_BIG, menu_quit);
	AddMenuItem(&MainMenu.menu, &MainMenu.quit);

	MenuBitmap_Init(&MainMenu.logo, 88, 0, MNF_INACTIVE, "M_HTIC", PIC_PATCH);
	AddMenuItem(&MainMenu.menu, &MainMenu.logo);

	MenuAnim_Init(&MainMenu.anim1, 40, 10, MNF_INACTIVE, 12, 18, 0, true);
	MainMenu.anim1.pics[0] = R_RegisterPic("M_SKL00", PIC_PATCH);
