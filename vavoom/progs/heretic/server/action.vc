//==========================================================================
//
//  Actor::A_RestoreSpecialThing1
//
//  Make a special thing visible again.
//
//==========================================================================

void Actor::A_RestoreSpecialThing1(void)
{
	if (Class == ItemWeaponMace)
	{
		// Do random mace placement
		RepositionMace(this);
	}
	Translucency -= 100;
	StartSoundName(this, 'Respawn', CHAN_VOICE);
}

//==========================================================================
//
//  Actor::A_RestoreSpecialThing2
//
//==========================================================================

void Actor::A_RestoreSpecialThing2(void)
{
	Flags |= MF_SPECIAL;
	SetState(SpawnState);
}

//==========================================================================
//
//  Actor::A_HideThing
//
//==========================================================================

void Actor::A_HideThing(void)
{
	Translucency += 100;
}

//==========================================================================
//
//  Actor::A_UnHideThing
//
//==========================================================================

void Actor::A_UnHideThing(void)
{
	Translucency -= 100;
}

//==========================================================================
//
//  Actor::A_RestoreArtifact
//
//==========================================================================

void Actor::A_RestoreArtifact(void)
{
	Flags |= MF_SPECIAL;
	SetState(SpawnState);
	StartSoundName(this, 'Respawn', CHAN_VOICE);
}

//==========================================================================
//
//  Actor::A_InitKeyGizmo
//
//==========================================================================

void Actor::A_InitKeyGizmo(void)
{
	mobj_t *mo;
	int state;

	switch (Class)
	{
	case KeyGizmoBlue:
		state = S_KGZ_BLUEFLOAT1;
		break;
	case KeyGizmoGreen:
		state = S_KGZ_GREENFLOAT1;
		break;
	case KeyGizmoYellow:
		state = S_KGZ_YELLOWFLOAT1;
		break;
	default:
		break;
	}
	mo = P_SpawnMobj(origin.x, origin.y, origin.z + 60.0, KeyGizmoFloat);
	mo->SetState(state);
}

//==========================================================================
//
//  Actor::A_ESound
//
//==========================================================================

void Actor::A_ESound(void)
{
	switch (Class)
	{
	case SoundWaterfall:
		StartSoundName(this, 'Waterfall', CHAN_VOICE);
		break;
	case SoundWind:
		StartSoundName(this, 'Wind', CHAN_VOICE);
		break;
	}
}

