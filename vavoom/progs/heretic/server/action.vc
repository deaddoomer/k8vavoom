//==========================================================================
//
//  Actor::A_InitKeyGizmo
//
//==========================================================================

void Actor::A_InitKeyGizmo(void)
{
	Actor A;
	int state;

	switch (Class)
	{
	case KeyGizmoBlue:
		state = S_KGZ_BLUEFLOAT1;
		break;
	case KeyGizmoGreen:
		state = S_KGZ_GREENFLOAT1;
		break;
	case KeyGizmoYellow:
		state = S_KGZ_YELLOWFLOAT1;
		break;
	default:
		break;
	}
	A = Spawn(KeyGizmoFloat, Origin + vector(0.0, 0.0, 60.0));
	A.SetState(state);
}

//==========================================================================
//
//  Actor::A_ESound
//
//==========================================================================

void Actor::A_ESound(void)
{
	switch (Class)
	{
	case SoundWaterfall:
		PlaySound('Waterfall', CHAN_VOICE);
		break;
	case SoundWind:
		PlaySound('Wind', CHAN_VOICE);
		break;
	}
}

