		{
			if (shareware && (i == arti_superhealth || i == arti_teleport))
			{
				continue;
			}
			for (j = 0; j < 16; j++)
			{
				PlayerPawn(players[0].MO).GiveArtifact(i);
			}
		}
		cprint(&players[0], "YOU GOT IT");
	}
