//==========================================================================
//
//  Cheat_God
//
//==========================================================================

void Cheat_God(void)
{
	players[0].Cheats ^= CF_GODMODE;
	if (players[0].Cheats & CF_GODMODE)
	{
		cprint(&players[0], "GOD MODE ON");
	}
	else
	{
		cprint(&players[0], "GOD MODE OFF");
	}
}

//==========================================================================
//
//  Cheat_NoClip
//
//==========================================================================

void Cheat_NoClip(void)
{
	players[0].Cheats ^= CF_NOCLIP;
	if (players[0].Cheats & CF_NOCLIP)
	{
		cprint(&players[0], "NO CLIPPING ON");
	}
	else
	{
		cprint(&players[0], "NO CLIPPING OFF");
	}
}

