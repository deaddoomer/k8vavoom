//==========================================================================
//
//  Cheat_God
//
//==========================================================================

void Cheat_God(void)
{
	Player player;

	player = svvars->Players[0];
	player.Cheats ^= CF_GODMODE;
	if (player.Cheats & CF_GODMODE)
	{
		cprint(player, "GOD MODE ON");
	}
	else
	{
		cprint(player, "GOD MODE OFF");
	}
}

