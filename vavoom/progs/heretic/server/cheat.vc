//==========================================================================
//
//  Cheat_KillAll
//
//==========================================================================

void Cheat_KillAll(void)
{
	Player player;

	player = svvars->Players[0];
	P_Massacre();
	cprint(player, "MASSACRE");
}

//==========================================================================
//
//  Cheat_Morph
//
//==========================================================================

void Cheat_Morph(void)
{
	Player player;

	player = svvars->Players[0];
	if (player.ChickenTime)
	{
		if (player.UndoPlayerChicken())
		{
			cprint(player, "CHICKEN OFF");
		}
	}
	else if (player.MO.ChickenMorphPlayer())
	{
		cprint(player, "CHICKEN ON");
	}
}

//==========================================================================
//
//  Cheat_NoWeapons
//
//==========================================================================

void Cheat_NoWeapons(void)
{
	int i;
	Player player;

	player = svvars->Players[0];
	if (player.ChickenTime)
	{
		return;
	}
	for (i = 1; i < 8; i++)
	{
		player.WeaponOwned[i] = false;
	}
	player.PendingWeapon = wp_staff;
	cprint(player, "CHEATER - YOU DON'T DESERVE WEAPONS");
}

