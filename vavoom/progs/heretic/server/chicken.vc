//==========================================================================
//
//  Actor::A_ChicLook
//
//==========================================================================

void Actor::A_ChicLook(void)
{
	if (UpdateChicken(this, 10))
	{
		return;
	}
	A_Look();
}

//==========================================================================
//
//  Actor::A_ChicChase
//
//==========================================================================

void Actor::A_ChicChase(void)
{
	if (UpdateChicken(this, 3))
	{
		return;
	}
	A_Chase();
}

//==========================================================================
//
//  Actor::A_Feathers
//
//==========================================================================

void Actor::A_Feathers(void)
{
	int i;
	int count;
	mobj_t *mo;

	if (health > 0)
	{
		// Pain
		count = P_Random() < 32 ? 2 : 1;
	}
	else
	{
		// Death
		count = 5 + (P_Random() & 3);
	}
	for (i = 0; i < count; i++)
	{
		mo = P_SpawnMobj(origin.x, origin.y, origin.z + 20.0, MT_FEATHER);
		mo->target = this;
		mo->velocity.x = (Random() - Random()) * 35.0;
		mo->velocity.y = (Random() - Random()) * 35.0;
		mo->velocity.z = (1.0 + Random() * 2.0) * 35.0;
		SetMobjState(mo, S_FEATHER1 + (P_Random() & 7));
	}
}

//==========================================================================
//
//  Actor::A_ChicAttack
//
//==========================================================================

void Actor::A_ChicAttack(void)
{
	if (UpdateChicken(this, 18))
	{
		return;
	}
	if (!target)
	{
		return;
	}
	if (P_CheckMeleeRange(this))
	{
		target->Damage(this, this, 1 + (P_Random() & 1));
	}
}

//==========================================================================
//
//  Actor::A_ChicPain
//
//==========================================================================

void Actor::A_ChicPain(void)
{
	if (UpdateChicken(this, 10))
	{
		return;
	}
	StartSound(this, sound_pain, CHAN_VOICE);
}

