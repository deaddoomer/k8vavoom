//==========================================================================
//
//  Actor::A_BlueSpark
//
//==========================================================================

void Actor::A_BlueSpark(void)
{
	int i;
	mobj_t *mo;

	for (i = 0; i < 2; i++)
	{
		mo = P_SpawnMobj(origin.x, origin.y, origin.z, Sorcerer2MissileSpark);
		mo->velocity.x = (Random() - Random()) * 2.0 * 35.0;
		mo->velocity.y = (Random() - Random()) * 2.0 * 35.0;
		mo->velocity.z = (1.0 + Random()) * 35.0;
	}
}

//==========================================================================
//
//  Actor::A_GenWizard
//
//==========================================================================

void Actor::A_GenWizard(void)
{
	mobj_t *mo;
	mobj_t *fog;

	mo = P_SpawnMobj(origin.x, origin.y, origin.z, Wizard);
	mo->origin.z = origin.z - mo->Height / 2.0;
	if (!P_TestMobjLocation(mo))
	{
		// Didn't fit
		P_RemoveMobj(mo);
		return;
	}
	velocity = vector(0.0, 0.0, 0.0);
	SetState(DeathState);
	Flags &= ~MF_MISSILE;
	fog = P_SpawnMobj(origin.x, origin.y, origin.z, TeleportFog);
	StartSoundName(fog, 'Teleport', CHAN_VOICE);
}

