//==========================================================================
//
//  Actor::A_Srcr2Decide
//
//==========================================================================

void Actor::A_Srcr2Decide(void)
{
	int chance;

	if (!BossSpotCount)
	{
		// No spots
		return;
	}
	switch (Health / (spawnhealth / 8))
	{
	case 0:
		chance = 192;
		break;
	case 1:
		chance = 120;
		break;
	case 2:
		chance = 120;
		break;
	case 3:
		chance = 120;
		break;
	case 4:
		chance = 64;
		break;
	case 5:
		chance = 64;
		break;
	case 6:
		chance = 32;
		break;
	case 7:
		chance = 16;
		break;
	case 8:
		chance = 0;
		break;
	}
	if (P_Random() < chance)
	{
		DSparilTeleport(this);
	}
}

//==========================================================================
//
//  Actor::A_Srcr2Attack
//
//==========================================================================

void Actor::A_Srcr2Attack(void)
{
	int chance;

	if (!target)
	{
		return;
	}
	StartSound(NULL, sound_attack, CHAN_AUTO);
	if (P_CheckMeleeRange(this))
	{
		target->Damage(self, self, HITDICE(20));
		return;
	}
	chance = Health < spawnhealth / 2 ? 96 : 48;
	if (P_Random() < chance)
	{
		// Wizard spawners
		SpawnMissileAngles(this, Sorcerer2Missile2,
			AngleMod360(angles.yaw - 45.0), 30.0);
		SpawnMissileAngles(this, Sorcerer2Missile2,
			AngleMod360(angles.yaw + 45.0), 30.0);
	}
	else
	{
		// Blue bolt
		SpawnMissile(this, target, Sorcerer2Missile1);
	}
}

