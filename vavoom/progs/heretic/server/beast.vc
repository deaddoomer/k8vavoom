//==========================================================================
//
//  Actor::A_BeastAttack
//
//==========================================================================

void Actor::A_BeastAttack(void)
{
	if (!Enemy)
	{
		return;
	}
	PlaySound(AttackSound, CHAN_WEAPON);
	if (CheckMeleeRange())
	{
		Enemy.Damage(self, self, HITDICE(3));
		return;
	}
	SpawnMissile(this, &Enemy, BeastBall);
}

//==========================================================================
//
//  Actor::A_BeastPuff
//
//==========================================================================

void Actor::A_BeastPuff(void)
{
	TVec org;

	if (P_Random() > 64)
	{
		org.x = Origin.x + (Random() - Random()) * 4.0;
		org.y = Origin.y + (Random() - Random()) * 4.0;
		org.z = Origin.z + (Random() - Random()) * 4.0;
		SpawnActor(org, Puffy);
	}
}

