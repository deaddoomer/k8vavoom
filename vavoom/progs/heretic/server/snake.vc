//==========================================================================
//
//	A_SnakeAttack
//
//==========================================================================

void A_SnakeAttack(mobj_t* actor)
{
	if (!actor->target)
	{
		SetMobjState(actor, S_SNAKE_WALK1);
		return;
	}
	StartSound(actor, actor->sound_attack);
	A_FaceTarget(actor);
	SpawnMissile(actor, actor->target, MT_SNAKEPRO_A);
}

