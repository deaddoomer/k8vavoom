//==========================================================================
//
//  Actor::A_SnakeAttack
//
//==========================================================================

void Actor::A_SnakeAttack(void)
{
	if (!target)
	{
		SetState(S_SNAKE_WALK1);
		return;
	}
	StartSound(self, sound_attack, CHAN_WEAPON);
	A_FaceTarget();
	SpawnMissile(this, target, SnakeProjectileA);
}

//==========================================================================
//
//  Actor::A_SnakeAttack2
//
//==========================================================================

void Actor::A_SnakeAttack2(void)
{
	if (!target)
	{
		SetState(S_SNAKE_WALK1);
		return;
	}
	StartSound(self, sound_attack, CHAN_WEAPON);
	A_FaceTarget();
	SpawnMissile(this, target, SnakeProjectileB);
}

