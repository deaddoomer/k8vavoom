//==========================================================================
//
//	A_SpawnTeleGlitter
//
//==========================================================================

void A_SpawnTeleGlitter(mobj_t* actor)
{
	mobj_t*	mo;

	mo = P_SpawnMobj(actor->origin.x + Random() * 32.0 - 16.0,
		actor->origin.y + Random() * 32.0 - 16.0,
		actor->subsector->sector->floorheight, MT_TELEGLITTER);
	mo->velocity.z = 0.25 * 35.0;
}

//==========================================================================
//
//	A_SpawnTeleGlitter2
//
//==========================================================================

void A_SpawnTeleGlitter2(mobj_t* actor)
{
	mobj_t*	mo;

	mo = P_SpawnMobj(
		actor->origin.x + Random() * 32.0 - 16.0,
		actor->origin.y + Random() * 32.0 - 16.0,
		actor->subsector->sector->floorheight, MT_TELEGLITTER2);
	mo->velocity.z = 0.25 * 35.0;
}

//==========================================================================
//
//	A_AccTeleGlitter
//
//==========================================================================

void A_AccTeleGlitter(mobj_t* actor)
{
	if (++actor->health > 35)
	{
		actor->velocity.z += actor->velocity.z / 2.0;
	}
}

