//==========================================================================
//
//  Actor::A_SpawnTeleGlitter
//
//==========================================================================

void Actor::A_SpawnTeleGlitter(void)
{
	mobj_t *mo;

	mo = P_SpawnMobj(origin.x + Random() * 32.0 - 16.0,
		origin.y + Random() * 32.0 - 16.0,
		floorz, MT_TELEGLITTER);
	mo->velocity.z = 0.25 * 35.0;
}

//==========================================================================
//
//  Actor::A_SpawnTeleGlitter2
//
//==========================================================================

void Actor::A_SpawnTeleGlitter2(void)
{
	mobj_t *mo;

	mo = P_SpawnMobj(origin.x + Random() * 32.0 - 16.0,
		origin.y + Random() * 32.0 - 16.0,
		floorz, MT_TELEGLITTER2);
	mo->velocity.z = 0.25 * 35.0;
}

//==========================================================================
//
//  Actor::A_AccTeleGlitter
//
//==========================================================================

void Actor::A_AccTeleGlitter(void)
{
	if (++Health > 35)
	{
		velocity.z += velocity.z / 2.0;
	}
}

