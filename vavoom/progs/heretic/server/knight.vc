//==========================================================================
//
//  Actor::A_KnightAttack
//
//==========================================================================

void Actor::A_KnightAttack(void)
{
	if (!target)
	{
		return;
	}
	if (P_CheckMeleeRange(this))
	{
		target->Damage(this, this, HITDICE(3));
		StartSoundName(this, "KnightAttack2", CHAN_WEAPON);
		return;
	}
	// Throw axe
	StartSound(this, sound_attack, CHAN_WEAPON);
	if (Class == MT_KNIGHTGHOST || P_Random() < 40)
	{
		// Red axe
		SpawnMissile(this, target, MT_REDAXE);
		return;
	}
	// Green axe
	SpawnMissile(this, target, MT_KNIGHTAXE);
}

//==========================================================================
//
//  Actor::A_DripBlood
//
//==========================================================================

void Actor::A_DripBlood(void)
{
	mobj_t *mo;

	mo = P_SpawnMobj(origin.x + (Random() - Random()) * 8.0,
		origin.y + (Random() - Random()) * 8.0, origin.z, MT_BLOOD);
	mo->velocity.x = (Random() - Random()) * 4.0 * 35.0;
	mo->velocity.y = (Random() - Random()) * 4.0 * 35.0;
	mo->flags2 |= MF2_LOGRAV;
}

