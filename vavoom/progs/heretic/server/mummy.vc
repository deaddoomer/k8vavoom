//==========================================================================
//
//	A_MummyAttack
//
//==========================================================================

void A_MummyAttack(mobj_t* actor)
{
	if (!actor->target)
	{
		return;
	}
	StartSound(actor, actor->sound_attack);
	if (P_CheckMeleeRange(actor))
	{
		DamageMobj(actor->target, actor, actor, HITDICE(2));
		StartSoundName(actor, "MumyAttack2");
		return;
	}
	StartSoundName(actor, "MumyAttack1");
}

//==========================================================================
//
//	A_MummyAttack2
//
//	Mummy leader missile attack.
//
//==========================================================================

void A_MummyAttack2(mobj_t* actor)
{
	mobj_t*	mo;

	if (!actor->target)
	{
		return;
	}
	if (P_CheckMeleeRange(actor))
	{
		DamageMobj(actor->target, actor, actor, HITDICE(2));
		return;
	}
	mo = SpawnMissile(actor, actor->target, MT_MUMMYFX1);
	if (mo)
	{
		mo->specialmobj1 = actor->target;
	}
}

//==========================================================================
//
//	A_MummySoul
//
//==========================================================================

void A_MummySoul(mobj_t* mummy)
{
	mobj_t* mo;

	mo = P_SpawnMobj(mummy->origin.x, mummy->origin.y, mummy->origin.z + 10.0, MT_MUMMYSOUL);
	mo->velocity.z = 1.0 * 35.0;
}

//==========================================================================
//
// PROC A_MummyFX1Seek
//
//==========================================================================

void A_MummyFX1Seek(mobj_t* actor)
{
	P_SeekerMissile(actor, ANGLE_1 * 10, ANGLE_1 * 20);
}

