//==========================================================================
//
//  Actor::A_WizAtk1
//
//==========================================================================

void Actor::A_WizAtk1(void)
{
	A_FaceTarget();
	Translucency = 0;
}

//==========================================================================
//
//  Actor::A_WizAtk2
//
//==========================================================================

void Actor::A_WizAtk2(void)
{
	A_FaceTarget();
	Translucency = 33;
}

//==========================================================================
//
//  Actor::A_WizAtk3
//
//==========================================================================

void Actor::A_WizAtk3(void)
{
	mobj_t *mo;
	float angle;
	TAVec ang;

	Translucency = 0;
	if (!Target)
	{
		return;
	}
	PlaySound(AttackSound, CHAN_WEAPON);
	if (CheckMeleeRange())
	{
		Target.Damage(self, self, HITDICE(4));
		return;
	}
	mo = SpawnMissile(this, &Target, WizardMissile);
	if (mo)
	{
		VectorAngles(&mo->Velocity, &ang);
		angle = mo->Angles.yaw;
		SpawnMissileAngles(this, WizardMissile,
			AngleMod360(angle - (45.0 / 8.0)), ang.pitch);
		SpawnMissileAngles(this, WizardMissile,
			AngleMod360(angle + (45.0 / 8.0)), ang.pitch);
	}
}

//==========================================================================
//
//  Actor::A_GhostOff
//
//==========================================================================

void Actor::A_GhostOff(void)
{
	Translucency = 0;
}

