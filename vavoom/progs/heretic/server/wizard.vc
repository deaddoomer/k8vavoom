//==========================================================================
//
//  Actor::A_WizAtk1
//
//==========================================================================

void Actor::A_WizAtk1(void)
{
	A_FaceTarget();
	translucency = 0;
}

//==========================================================================
//
//  Actor::A_WizAtk2
//
//==========================================================================

void Actor::A_WizAtk2(void)
{
	A_FaceTarget();
	translucency = 33;
}

//==========================================================================
//
//  Actor::A_WizAtk3
//
//==========================================================================

void Actor::A_WizAtk3(void)
{
	mobj_t *mo;
	float angle;
	TAVec ang;

	translucency = 0;
	if (!target)
	{
		return;
	}
	StartSound(this, sound_attack, CHAN_WEAPON);
	if (P_CheckMeleeRange(this))
	{
		target->Damage(this, this, HITDICE(4));
		return;
	}
	mo = SpawnMissile(this, target, MT_WIZFX1);
	if (mo)
	{
		VectorAngles(&mo->velocity, &ang);
		angle = mo->angles.yaw;
		SpawnMissileAngles(this, MT_WIZFX1,
			AngleMod360(angle - (45.0 / 8.0)), ang.pitch);
		SpawnMissileAngles(this, MT_WIZFX1,
			AngleMod360(angle + (45.0 / 8.0)), ang.pitch);
	}
}

//==========================================================================
//
//  Actor::A_GhostOff
//
//==========================================================================

void Actor::A_GhostOff(void)
{
	translucency = 0;
}

