class FinaleScreen : Window;

ClientGameBase ClGame;

int f_episode;
int f_map;

float FinaleTime;

int fpage1;
int fpage2;

//==========================================================================
//
//  StartFinale
//
//==========================================================================

void StartFinale()
{
	FindEpisodeAndMap(ClGame.level->MapName, &f_episode, &f_map);

	FinaleTime = 0.0;
	switch (f_episode)
	{
	case 1:
		if (!WadLumpPresent('e2m1'))
		{
			fpage1 = R_RegisterPic('order');
		}
		else
		{
			fpage1 = R_RegisterPic('credit');
		}
		break;
	case 2:
		fpage1 = R_RegisterPicPal('e2end', 'e2pal');
		break;
	case 3:
		fpage1 = R_RegisterPic('final1');
		fpage2 = R_RegisterPic('final2');
		break;
	case 4:	// Just show credits screen for extended episodes
	case 5:
		fpage1 = R_RegisterPic('credit');
		break;
	}

#ifdef FIXME
	S_StartSong("mus_cptd", P_GetCDEnd1Track(), true);
#else
	CmdBuf_AddText("music loop mus_cptd\n");
#endif
}

//==========================================================================
//
//	Tick
//
//==========================================================================

void Tick(float DeltaTime)
{
	FinaleTime += DeltaTime;
}

//==========================================================================
//
//  DrawWindow
//
//==========================================================================

void DrawWindow(GC gc)
{
	switch (f_episode)
	{
	case 3:
		F_DemonScroll();
		break;
	default:
		gc.DrawFullScreenPic(fpage1);
		break;
	}
}

//==========================================================================
//
//  FindEpisodeAndMap
//
//==========================================================================

void FindEpisodeAndMap(name Name, int *epi, int *map)
{
	int e;
	int m;

	for (e = 1; e <= 5; e++)
	{
		for (m = 1; m <= 9; m++)
		{
			if (Name == StrToName(va("e%dm%d", e, m)))
			{
				*epi = e;
				*map = m;
				return;
			}
		}
	}
	*epi = 4;
	*map = 1;
}

//==========================================================================
//
//  F_DemonScroll
//
//==========================================================================

void F_DemonScroll()
{
	SetVirtualScreen(320, 200);
	if (FinaleTime < 2.0)
	{
		R_DrawPic(0, 0, fpage1);
	}
	else if (FinaleTime < 22.0)
	{
		int yval = ftoi((FinaleTime - 2.0) * 10.0);

		R_DrawPic(0, yval, fpage1);
		R_DrawPic(0, yval - 200, fpage2);
	}
	else
	{
		//else, we'll just sit here and wait, for now
		R_DrawPic(0, 0, fpage2);
	}
	SetVirtualScreen(640, 480);
}

//==========================================================================
//
//	VisibilityChanged
//
//==========================================================================

void VisibilityChanged(bool bNewVisibility)
{
	bTickEnabled = bNewVisibility;
}

defaultproperties
{
	bTickEnabled = true;
	Width = 640;
	Height = 480;
}
