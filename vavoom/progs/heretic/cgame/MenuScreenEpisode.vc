class MenuScreenEpisode:MenuScreen;

void CreateChoices(void)
{
	if (ExtendedWAD)
	{
		Choices[3] = MenuChoice_Episode4;
		Choices[4] = MenuChoice_Episode5;
	}
	::CreateChoices();
}

defaultproperties
{
	Choices[0] = MenuChoice_Episode1;
	Choices[1] = MenuChoice_Episode2;
	Choices[2] = MenuChoice_Episode3;
	ChoicesStartX = 48;
	ChoicesStartY = 40;
	SelectorType = MenuSelector_BigArrow;
	Title = "WHICH EPISODE?";
}

