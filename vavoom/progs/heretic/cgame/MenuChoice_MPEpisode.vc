class MenuChoice_MPEpisode : MenuChoiceEnum;

MenuChoice_Level Levels;

void InitWindow()
{
	::InitWindow();
	MaxValue = !WadLumpPresent('e2m1') ? 1 : WadLumpPresent('extended') ? 5 : 3;
}

bool SetNewValue(int newValue)
{
	Levels.InitMapList(newValue);
	return true;
}

defaultproperties
{
	Text = "Episode";
	EnumNames[0] = "CITY OF THE DAMNED";
	EnumNames[1] = "HELL'S MAW";
	EnumNames[2] = "THE DOME OF D'SPARIL";
	EnumNames[3] = "THE OSSUARY";
	EnumNames[4] = "THE STAGNANT DEMESNE";
}

