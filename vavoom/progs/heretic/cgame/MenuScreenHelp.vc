class MenuScreenHelp : MenuScreen;

MenuHelpPage Page;
name PageNames[4];
int NumPages;
int CurPage;

void CreateChoices()
{
	if (!WadLumpPresent('e2m1'))
	{
		NumPages = 4;
	}

	Page = MenuHelpPage(NewChild(MenuHelpPage));
	Page.SetPage(PageNames[CurPage]);

	::CreateChoices();
}

bool Key(int key)
{
	CurPage++;
	LocalSound('menu/clear');

	if (key == K_ESCAPE || CurPage >= NumPages)
	{
		ClGame.ForceMenuOff();
	}
	else
	{
		Page.SetPage(PageNames[CurPage]);
	}
	return true;
}

defaultproperties
{
	PageNames[0] = 'help1';
	PageNames[1] = 'help2';
	PageNames[2] = 'credit';
	PageNames[3] = 'order';
	NumPages = 3;
	CurPage = 0;
}

