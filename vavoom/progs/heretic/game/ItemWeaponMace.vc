class ItemWeaponMace : WeaponPickup
	__mobjinfo__(2002);

//==========================================================================
//
//  A_RestoreSpecialThing1
//
//  Chooses the next spot to place the mace.
//
//==========================================================================

void A_RestoreSpecialThing1()
{
	int spot;

	// Do random mace placement
	spot = P_Random() % MaceSpotCount;
	UnlinkFromWorld();
	Origin.x = MaceSpot_x[spot];
	Origin.y = MaceSpot_y[spot];
	LinkToWorld();
	Origin.z = FloorZ;

	::A_RestoreSpecialThing1();
}

__states__
{
	S_WMCE('WMCE', 0, 'weapons/g_mace.md2', 0, -1.0, S_NULL) { }
}

defaultproperties
{
	WeaponType = wp_mace;
	IdleState = S_WMCE;
}

