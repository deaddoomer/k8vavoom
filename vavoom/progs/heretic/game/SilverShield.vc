class SilverShield : Pickup
	__mobjinfo__(85)
	__scriptid__(68);

//==========================================================================
//
//  TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	return Player(Toucher.Player).GiveArmor(1);
}

//==========================================================================
//
//	HidePickup
//
//==========================================================================

void HidePickup()
{
	if (Level.Game.deathmatch && !bDropped)
	{
		HideSpecialThing();
	}
	else
	{
		Destroy();
	}
}

__states__
{
	S_ITEM_SHLD1('SHLD', 0, -1.0, none) = none
}

defaultproperties
{
	bFloatBob = true;
	IdleState = S_ITEM_SHLD1;
	PickupMessage = "$txt_itemshield1";
}
