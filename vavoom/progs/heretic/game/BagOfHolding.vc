class BagOfHolding : Inventory
	__mobjinfo__(8)
	__scriptid__(136);

//==========================================================================
//
//  TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	class<Ammo>	Cls;

	if (!Player(Toucher.Player).bBackpack)
	{
		Player(Toucher.Player).bBackpack = true;
		foreach AllClasses(Ammo, Cls)
		{
			//	Only direct descendants.
			if (GetClassParent(Cls) != Ammo)
			{
				continue;
			}
			Ammo AmmoItem = Ammo(Toucher.FindInventory(Cls));
			if (!AmmoItem)
			{
				AmmoItem = Spawn(Cls);
				AmmoItem.AttachToOwner(Toucher);
				AmmoItem.Amount = 0;
			}
			AmmoItem.MaxAmount = AmmoItem.BackpackMaxAmount;
{
int count = AmmoItem.BackpackAmount;
	int prevAmmo;

	if (!count)
	{
		continue;
	}
	if (AmmoItem.Amount == AmmoItem.MaxAmount)
	{
		continue;
	}
	if (Level.Game.gameskill == sk_baby || Level.Game.gameskill == sk_nightmare)
	{
		// extra ammo in baby mode and nightmare mode
		count += count >> 1;
	}
	prevAmmo = AmmoItem.Amount;

	AmmoItem.Amount += count;
	if (AmmoItem.Amount > AmmoItem.MaxAmount)
	{
		AmmoItem.Amount = AmmoItem.MaxAmount;
	}
	if (prevAmmo)
	{
		// Don't attempt to change weapons if the player already had
		// ammo of the type just given
		continue;
	}
	Player(Toucher.Player).GotAmmo(AmmoItem);
	continue;
}
		}
	}
	else
	{
		foreach AllClasses(Ammo, Cls)
		{
			//	Only direct descendants.
			if (GetClassParent(Cls) != Ammo)
			{
				continue;
			}
{
	int prevAmmo;

	Ammo AmmoItem2 = Ammo(Toucher.FindInventory(Cls));
	int count = AmmoItem2.BackpackAmount;
	if (!count)
	{
		continue;
	}
	if (AmmoItem2.Amount == AmmoItem2.MaxAmount)
	{
		continue;
	}
	if (Level.Game.gameskill == sk_baby || Level.Game.gameskill == sk_nightmare)
	{
		// extra ammo in baby mode and nightmare mode
		count += count >> 1;
	}
	prevAmmo = AmmoItem2.Amount;

	AmmoItem2.Amount += count;
	if (AmmoItem2.Amount > AmmoItem2.MaxAmount)
	{
		AmmoItem2.Amount = AmmoItem2.MaxAmount;
	}
	if (prevAmmo)
	{
		// Don't attempt to change weapons if the player already had
		// ammo of the type just given
		continue;
	}
	Player(Toucher.Player).GotAmmo(AmmoItem2);
}
		}
	}
	GoAwayAndDie();
	return true;
}

__states__
{
	S_ITEM_BAGH1('BAGH', 0, -1.0, none) = none
}

defaultproperties
{
	Height = 32.0;
	bCountItem = true;
	bFloatBob = true;
	IdleState = S_ITEM_BAGH1;
	PickupMessage = "$txt_itembagofholding";
}
