class KnightAxe : Projectile
	__scriptid__(127);

//==========================================================================
//
//  OnMapSpawn
//
//==========================================================================

void OnMapSpawn(mthing_t* mthing)
{
	::OnMapSpawn(mthing);
	if (Level.Game.fastparm)
		Speed = 630.0;
}

//==========================================================================
//
//  A_ContMobjSound
//
//==========================================================================

final void A_ContMobjSound()
{
	PlaySound('hknight/axewhoosh', CHAN_VOICE);
}

__states__
{
	S_SPINAXE1('SPAX', 0 | FF_FULLBRIGHT, 3.0 / 35.0, S_SPINAXE2) = A_ContMobjSound
	S_SPINAXE2('SPAX', 1 | FF_FULLBRIGHT, 3.0 / 35.0, S_SPINAXE3) = none
	S_SPINAXE3('SPAX', 2 | FF_FULLBRIGHT, 3.0 / 35.0, S_SPINAXE1) = none
	S_SPINAXEX1('SPAX', 3 | FF_FULLBRIGHT, 6.0 / 35.0, S_SPINAXEX2) = none
	S_SPINAXEX2('SPAX', 4 | FF_FULLBRIGHT, 6.0 / 35.0, S_SPINAXEX3) = none
	S_SPINAXEX3('SPAX', 5 | FF_FULLBRIGHT, 6.0 / 35.0, none) = none
}

defaultproperties
{
	Radius = 10.0;
	Height = 8.0;
	Speed = 315.0;
	MissileDamage = 2;
	bWindThrust = true;
	bThruGhost = true;
	IdleState = S_SPINAXE1;
	DeathState = S_SPINAXEX1;
	DeathSound = 'hknight/hit';
	Effects = EF_DL_GREEN;
}
