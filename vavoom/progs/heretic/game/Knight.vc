class Knight : Pawn
	__mobjinfo__(64)
	__scriptid__(6);

//==========================================================================
//
//	DropStuff
//
//==========================================================================

void DropStuff()
{
	DropItem(ItemAmmoCrossbowWimpy, 5, 0.328125);
}

//==========================================================================
//
//  A_KnightAttack
//
//==========================================================================

final void A_KnightAttack()
{
	if (!Enemy)
	{
		return;
	}
	if (CheckMeleeRange())
	{
		Enemy.Damage(self, self, HITDICE(3));
		PlaySound('hknight/melee', CHAN_WEAPON);
		return;
	}
	// Throw axe
	PlaySound(AttackSound, CHAN_WEAPON);
	if (Class == KnightGhost || Random() < 0.15625)
	{
		// Red axe
		SpawnMissile(Enemy, KnightRedAxe);
		return;
	}
	// Green axe
	SpawnMissile(Enemy, KnightAxe);
}

