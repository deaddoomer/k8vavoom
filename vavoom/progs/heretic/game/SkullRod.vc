class SkullRod : WeaponEx
	__mobjinfo__(2004)
	__scriptid__(30);

//===========================================================================
//
//  A_FireSkullRodPL1
//
//===========================================================================

final void A_FireSkullRodPL1()
{
	EntityEx	A;

	if (EntityEx(Owner).FindInventory(SkullRodAmmo).Amount < USE_SKRD_AMMO_1)
	{
		return;
	}
	DecAmmo(USE_SKRD_AMMO_1);
	A = Actor(Owner).SpawnPlayerMissile(HornRodFX1);
	// Randomize the first frame
	if (A && P_Random() > 128)
	{
		A.SetState(HornRodFX1::S_HRODFX1_2);
	}
}

//===========================================================================
//
//  A_FireSkullRodPL2
//
//  The special2 field holds the player number that shot the rain missile.
// The specialmobj1 field is used for the seeking routines, special1 as a
// counter for the sound looping.
//
//===========================================================================

final void A_FireSkullRodPL2()
{
	HornRodFX2	A;
	EntityEx	AimTarget;

	DecAmmo(Level.Game.deathmatch ? USE_SKRD_AMMO_1 : USE_SKRD_AMMO_2);
	A = HornRodFX2(Actor(Owner).SpawnPlayerMissileEx(HornRodFX2, true, AimTarget));
	// Use MissileMobj instead of the return value from
	// SpawnPlayerMissile because we need to give info to the mobj
	// even if it exploded immediately.
	if (Level.Game.netgame)
	{
		// Multi-player game
		A.RainColour = Owner.Player.GetPlayerNum();
	}
	else
	{
		// Always use red missiles in single player games
		A.RainColour = 2;
	}
	if (AimTarget)
	{
		A.Tracer = AimTarget;
		A.bSeekerMissile = true;
	}
	A.PlaySound('weapons/hornrodpowshoot', CHAN_WEAPON);
}

