class KeyGizmoGreen : Decoration
	__mobjinfo__(95);

//==========================================================================
//
//  A_InitKeyGizmo
//
//==========================================================================

final void A_InitKeyGizmo()
{
	Spawn(KeyGizmoFloatGreen, Origin + vector(0.0, 0.0, 60.0));
}

states
{
Spawn:
	KGZ1 A 1
	KGZ1 A 1 A_InitKeyGizmo
	KGZ1 A -1
	Stop
}

defaultproperties
{
	Radius = 16.0;
	Height = 50.0;
	bSolid = true;
	bStaticLight = true;
	LightColour = RGB(0, 255, 0);
	LightOffset = vector(0.0, 0.0, 68.0);
	LightRadius = 118.0;
}
