class ItemBagOfHolding : Pickup
	__mobjinfo__(8)
	__scriptid__(136);

//==========================================================================
//
//  TouchSpecial
//
//==========================================================================

void TouchSpecial(Actor Toucher)
{
	int i;
	name sound;

	if (!Toucher.bPickUp)
	{
		// can't remove thing
		return;
	}
	if (Toucher.Health <= 0)
	{
		// Toucher is dead
		return;
	}
	sound = 'misc/i_pkup';
	Toucher.Player.Backpack = true;
	Toucher.Player.GiveAmmo(am_goldwand, AMMO_GWND_WIMPY);
	Toucher.Player.GiveAmmo(am_blaster, AMMO_BLSR_WIMPY);
	Toucher.Player.GiveAmmo(am_crossbow, AMMO_CBOW_WIMPY);
	Toucher.Player.GiveAmmo(am_skullrod, AMMO_SKRD_WIMPY);
	Toucher.Player.GiveAmmo(am_phoenixrod, AMMO_PHRD_WIMPY);
	cprint(Toucher.Player, TXT_ITEMBAGOFHOLDING);
	if (Special)
	{
		Level.ExecuteActionSpecial(Special, Args[0], Args[1], Args[2], Args[3],
			Args[4], NULL, 0, Toucher);
		Special = 0;
	}
	if (bCountItem)
	{
		Toucher.Player.ItemCount++;
		Level.Game.level->currentitems++;
	}
	if (Level.Game.deathmatch && !bDropped)
	{
		HideSpecialThing();
	}
	else
	{
		Remove();
	}
	Toucher.Player.BonusFlash += BONUSADD;
	Toucher.PlaySound(sound, CHAN_ITEM);
}

__states__
{
	S_ITEM_BAGH1('BAGH', 0, 'items/bag.md2', 0, -1.0, S_NULL) { }
}

defaultproperties
{
	bCountItem = true;
	bFloatBob = true;
	IdleState = S_ITEM_BAGH1;
}

