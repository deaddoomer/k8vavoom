class ItemBagOfHolding : Pickup
	__mobjinfo__(8)
	__scriptid__(136);

//==========================================================================
//
//  TouchSpecial
//
//==========================================================================

void TouchSpecial(Actor Toucher)
{
	int i;
	name sound;

	if (!Toucher.bPickUp)
	{
		// can't remove thing
		return;
	}
	if (Toucher.Health <= 0)
	{
		// Toucher is dead
		return;
	}
	sound = 'misc/i_pkup';
	Player(Toucher.Player).Backpack = true;
	Player(Toucher.Player).GiveAmmo(am_goldwand, 10);
	Player(Toucher.Player).GiveAmmo(am_blaster, 10);
	Player(Toucher.Player).GiveAmmo(am_crossbow, 5);
	Player(Toucher.Player).GiveAmmo(am_skullrod, 20);
	Player(Toucher.Player).GiveAmmo(am_phoenixrod, 1);
	Toucher.Player.cprint("BAG OF HOLDING");
	if (Special)
	{
		Level.ExecuteActionSpecial(Special, Args[0], Args[1], Args[2], Args[3],
			Args[4], NULL, 0, Toucher);
		Special = 0;
	}
	if (bCountItem)
	{
		Toucher.Player.ItemCount++;
		Level.Game.level->currentitems++;
	}
	if (Level.Game.deathmatch && !bDropped)
	{
		HideSpecialThing();
	}
	else
	{
		Remove();
	}
	Player(Toucher.Player).BonusFlash += BONUSADD;
	Toucher.PlaySound(sound, CHAN_ITEM);
}

__states__
{
	S_ITEM_BAGH1('BAGH', 0, -1.0, none) { }
}

defaultproperties
{
	bCountItem = true;
	bFloatBob = true;
	IdleState = S_ITEM_BAGH1;
}
