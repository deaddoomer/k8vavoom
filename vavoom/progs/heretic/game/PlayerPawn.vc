class PlayerPawn : Pawn
	abstract;

int Attack2State;
int FireDeathState;

bool bSafeToRemove;

//==========================================================================
//
//	A_AddPlayerCorpse
//
//==========================================================================

void A_AddPlayerCorpse(void)
{
	if (HereticLevelInfo(Level).bodyqueslot >= BODYQUESIZE)
	{
		// Too many player corpses - remove an old one
		HereticLevelInfo(Level).bodyque[HereticLevelInfo(Level).bodyqueslot % BODYQUESIZE].Remove();
	}
	HereticLevelInfo(Level).bodyque[HereticLevelInfo(Level).bodyqueslot % BODYQUESIZE] = self;
	HereticLevelInfo(Level).bodyqueslot++;
}

defaultproperties
{
	ReactionCount = 0;
	bCountKill = false;
	bActivateMCross = false;
	bCheckNoMonsters = false;
	bCheckLineBlockMonsters = false;
	bDropOff = true;
}

