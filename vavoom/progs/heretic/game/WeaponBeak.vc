class WeaponBeak : Weapon;

//===========================================================================
//
//  A_BeakRaise
//
//===========================================================================

void A_BeakRaise()
{
	Player.ViewStates[ps_weapon].SY = WEAPONTOP;
	Player.SetViewState(ps_weapon, ReadyState);
}

//===========================================================================
//
//  A_BeakReady
//
//===========================================================================

void A_BeakReady()
{
	if (Player.Buttons & BT_ATTACK)
	{
		// Chicken beak attack
		Player.bAttackDown = true;
		Player.MO.SetState(Actor(Player.MO).MissileState);
		if (Player(Player).Powers[pw_weaponlevel2])
		{
			Player.SetViewState(ps_weapon, AttackState2);
		}
		else
		{
			Player.SetViewState(ps_weapon, AttackState);
		}
		HereticLevelInfo(Player.MO.Level).NoiseAlert(Actor(Player.MO), Actor(Player.MO));
	}
	else
	{
		if (Player.MO.State == Actor(Player.MO).MissileState)
		{
			// Take out of attack state
			Player.MO.SetState(Actor(Player.MO).IdleState);
		}
		Player.bAttackDown = false;
	}
}

//===========================================================================
//
//  A_BeakAttackPL1
//
//===========================================================================

void A_BeakAttackPL1()
{
	int damage;
	TVec dir;

	damage = 1 + (P_Random() & 3);
	dir = Actor(Player.MO).AimLineAttack(Player.MO.Angles, MELEERANGE);
	Actor(Player.MO).LineAttack(dir, MELEERANGE, damage, BeakPuff);
	if (Actor(Player.MO).linetarget)
	{
		Player.MO.Angles.yaw =
			atan2(Actor(Player.MO).linetarget.Origin.y - Player.MO.Origin.y,
			Actor(Player.MO).linetarget.Origin.x - Player.MO.Origin.x);
		Player.bFixAngle = true;
	}
	Player.MO.PlaySound('chicken/peck', CHAN_VOICE);
	Player(Player).ChickenPeck = 12;
	Player.ViewStates[ps_weapon].StateTime -= Random() * 0.25;
}

//===========================================================================
//
//  A_BeakAttackPL2
//
//===========================================================================

void A_BeakAttackPL2()
{
	int damage;
	TVec dir;

	damage = HITDICE(4);
	dir = Actor(Player.MO).AimLineAttack(Player.MO.Angles, MELEERANGE);
	Actor(Player.MO).LineAttack(dir, MELEERANGE, damage, BeakPuff);
	if (Actor(Player.MO).linetarget)
	{
		Player.MO.Angles.yaw =
			atan2(Actor(Player.MO).linetarget.Origin.y - Player.MO.Origin.y,
			Actor(Player.MO).linetarget.Origin.x - Player.MO.Origin.x);
		Player.bFixAngle = true;
	}
	Player.MO.PlaySound('chicken/peck', CHAN_VOICE);
	Player(Player).ChickenPeck = 12;
	Player.ViewStates[ps_weapon].StateTime -= Random() * 0.125;
}

__states__
{
	S_BEAKREADY('BEAK', 0, 1.0 / 35.0, S_BEAKREADY) { A_BeakReady(); }
	S_BEAKDOWN('BEAK', 0, 1.0 / 35.0, S_BEAKDOWN) { A_Lower(); }
	S_BEAKUP('BEAK', 0, 1.0 / 35.0, S_BEAKUP) { A_BeakRaise(); }
	S_BEAKATK1_1('BEAK', 0, 18.0 / 35.0, S_BEAKREADY) { A_BeakAttackPL1(); }
	S_BEAKATK2_1('BEAK', 0, 12.0 / 35.0, S_BEAKREADY) { A_BeakAttackPL2(); }
}

defaultproperties
{
	Ammo = am_noammo;
	UpState = S_BEAKUP;
	DownState = S_BEAKDOWN;
	ReadyState = S_BEAKREADY;
	AttackState = S_BEAKATK1_1;
	HoldAttackState = S_BEAKATK1_1;
	UpState2 = S_BEAKUP;
	DownState2 = S_BEAKDOWN;
	ReadyState2 = S_BEAKREADY;
	AttackState2 = S_BEAKATK2_1;
	HoldAttackState2 = S_BEAKATK2_1;
	PSpriteSY = 15.0;
}
