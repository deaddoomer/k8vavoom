class Snake:Pawn
	__mobjinfo__(92);

//==========================================================================
//
//	DropStuff
//
//==========================================================================

void DropStuff(void)
{
	DropItem(ItemAmmoPhoenixWimpy, 5, 0.328125);
}

//==========================================================================
//
//  A_SnakeAttack
//
//==========================================================================

void A_SnakeAttack(void)
{
	if (!Enemy)
	{
		SetState(SeeState);
		return;
	}
	PlaySound(AttackSound, CHAN_WEAPON);
	A_FaceTarget();
	SpawnMissile(Enemy, SnakeProjectileA);
}

//==========================================================================
//
//  A_SnakeAttack2
//
//==========================================================================

void A_SnakeAttack2(void)
{
	if (!Enemy)
	{
		SetState(SeeState);
		return;
	}
	PlaySound(AttackSound, CHAN_WEAPON);
	A_FaceTarget();
	SpawnMissile(Enemy, SnakeProjectileB);
}

