class EnchantedShield : Inventory
	__mobjinfo__(31)
	__scriptid__(69);

//==========================================================================
//
//  TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	if (Player(Toucher.Player).GiveArmor(2))
	{
		GoAwayAndDie();
		return true;
	}
	return false;
}

__states__
{
	S_ITEM_SHD2_1('SHD2', 0, -1.0, none) = none
}

defaultproperties
{
	Height = 32.0;
	bFloatBob = true;
	IdleState = S_ITEM_SHD2_1;
	PickupMessage = "$txt_itemshield2";
}
