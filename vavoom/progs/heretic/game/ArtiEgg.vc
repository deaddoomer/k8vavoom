class ArtiEgg : Inventory
	__mobjinfo__(30)
	__scriptid__(14);

//==========================================================================
//
//	Use
//
//==========================================================================

bool Use(bool Pickup)
{
	EntityEx(Owner).SpawnPlayerMissile(EggFX);
	EntityEx(Owner).SpawnPlayerMissileAngle(EggFX,
		AngleMod360(Owner.Angles.yaw - 7.5));
	EntityEx(Owner).SpawnPlayerMissileAngle(EggFX,
		AngleMod360(Owner.Angles.yaw + 7.5));
	EntityEx(Owner).SpawnPlayerMissileAngle(EggFX,
		AngleMod360(Owner.Angles.yaw - 15.0));
	EntityEx(Owner).SpawnPlayerMissileAngle(EggFX,
		AngleMod360(Owner.Angles.yaw + 15.0));
	return true;
}

__states__
{
	S_ARTI_EGGC1('EGGC', 0, 6.0 / 35.0, S_ARTI_EGGC2) = none
	S_ARTI_EGGC2('EGGC', 1, 6.0 / 35.0, S_ARTI_EGGC3) = none
	S_ARTI_EGGC3('EGGC', 2, 6.0 / 35.0, S_ARTI_EGGC4) = none
	S_ARTI_EGGC4('EGGC', 1, 6.0 / 35.0, S_ARTI_EGGC1) = none
}

defaultproperties
{
	Height = 32.0;
	MaxAmount = DefMaxAmount;
	PickupSound = 'misc/p_pkup';
	PickupMessage = "$txt_artiegg";
	IconName = 'artieggc';
	bCountItem = true;
	bFloatBob = true;
	bPickupFlash = true;
	bInvBar = true;
	IdleState = S_ARTI_EGGC1;
}
