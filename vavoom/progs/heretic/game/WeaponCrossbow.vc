class WeaponCrossbow : Weapon;

//===========================================================================
//
//  A_FireCrossbowPL1
//
//===========================================================================

final void A_FireCrossbowPL1()
{
	Player(Owner.Player).Ammo[am_crossbow] -= USE_CBOW_AMMO_1;
	Actor(Owner).SpawnPlayerMissile(CrossbowFX1);
	Actor(Owner).SpawnPlayerMissileAngle(CrossbowFX3,
		AngleMod360(Owner.Angles.yaw - (45.0 / 10.0)));
	Actor(Owner).SpawnPlayerMissileAngle(CrossbowFX3,
		AngleMod360(Owner.Angles.yaw + (45.0 / 10.0)));
}

//===========================================================================
//
//  A_FireCrossbowPL2
//
//===========================================================================

final void A_FireCrossbowPL2()
{
	Player(Owner.Player).Ammo[am_crossbow] -=
		Level.Game.deathmatch ? USE_CBOW_AMMO_1 : USE_CBOW_AMMO_2;
	Actor(Owner).SpawnPlayerMissile(CrossbowFX2);
	Actor(Owner).SpawnPlayerMissileAngle(CrossbowFX2,
		AngleMod360(Owner.Angles.yaw - (45.0 / 10.0)));
	Actor(Owner).SpawnPlayerMissileAngle(CrossbowFX2,
		AngleMod360(Owner.Angles.yaw + (45.0 / 10.0)));
	Actor(Owner).SpawnPlayerMissileAngle(CrossbowFX3,
		AngleMod360(Owner.Angles.yaw - (45.0 / 5.0)));
	Actor(Owner).SpawnPlayerMissileAngle(CrossbowFX3,
		AngleMod360(Owner.Angles.yaw + (45.0 / 5.0)));
}

