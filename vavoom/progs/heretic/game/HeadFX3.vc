class HeadFX3 : Actor;

//==========================================================================
//
//  A_HeadFireGrow
//
//==========================================================================

final void A_HeadFireGrow()
{
	Health--;
	Origin.z += 9.0;
	if (Health == 0)
	{
		SetState(FindState('Grown'));
	}
}

states
{
Spawn:
	FX06 ABC 4 A_HeadFireGrow
	Loop
Grown:
	FX06 ABC 5
	Loop
Death:
	FX06 DEFG 5
	Stop
}

defaultproperties
{
	Radius = 14.0;
	Height = 12.0;
	Speed = 350.0;
	FastSpeed = 630.0;
	MissileDamage = 5;
	RenderStyle = STYLE_Add;
	bMissile = true;
	bNoBlockmap = true;
	bNoGravity = true;
	bDropOff = true;
	bNoTeleport = true;
	bActivatePCross = true;
	bWindThrust = true;
	bBloodSplatter = true;
}
