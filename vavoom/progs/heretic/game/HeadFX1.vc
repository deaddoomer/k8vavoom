class HeadFX1 : Projectile
	__scriptid__(164);

//==========================================================================
//
//  OnMapSpawn
//
//==========================================================================

void OnMapSpawn(mthing_t* mthing)
{
	::OnMapSpawn(mthing);
	if (Level.Game.fastparm)
		Speed = 700.0;
}

//==========================================================================
//
//  A_HeadIceImpact
//
//==========================================================================

final void A_HeadIceImpact()
{
	int i;
	float angle;
	Actor shard;

	for (i = 0; i < 8; i++)
	{
		shard = Spawn(HeadFX2, Origin);
		angle = itof(i) * 45.0;
		shard.Target = Target;
		shard.Angles.yaw = angle;
		shard.Velocity.x = shard.Speed * cos(angle);
		shard.Velocity.y = shard.Speed * sin(angle);
		shard.Velocity.z = -0.6 * 35.0;
		shard.CheckMissileSpawn();
	}
}

states
{
Spawn:
	FX05 ABC 6
	Loop
Death:
	FX05 D 5 A_HeadIceImpact
	FX05 EFG 5
	Stop
}

defaultproperties
{
	Radius = 12.0;
	Height = 6.0;
	Speed = 455.0;
	MissileDamage = 1;
	RenderStyle = STYLE_Add;
	bThruGhost = true;
	bDynamicLight = true;
	DLightColour = RGB(6, 9, 159);
	DLightRadius = 126.0;
}
