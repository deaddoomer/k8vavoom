class Sorcerer2FX2 : Projectile
	__scriptid__(146);

//==========================================================================
//
//  A_GenWizard
//
//==========================================================================

final void A_GenWizard()
{
	Actor A;
	Actor fog;

	A = Spawn(Wizard, Origin);
	A.Origin.z = Origin.z - A.Height / 2.0;
	if (!A.TestLocation())
	{
		// Didn't fit
		A.Destroy();
		return;
	}
	Velocity = vector(0.0, 0.0, 0.0);
	SetState(FindState('Death'));
	bMissile = false;
	fog = Spawn(TeleportFog, Origin);
	fog.PlaySound('misc/teleport', CHAN_VOICE);
}

states
{
Spawn:
	FX11 A 35 Bright
	FX11 A 5 Bright A_GenWizard
	FX11 B 5 Bright
	Goto Spawn+1
Death:
	FX11 CDEFG 5 Bright
	Stop
}

defaultproperties
{
	Radius = 10.0;
	Height = 6.0;
	Speed = 210.0;
	MissileDamage = 10;
	DLightColour = RGB(80, 80, 253);
	DLightRadius = 200.0;
}
