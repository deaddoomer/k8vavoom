{
	S_SOR2FX2_1('FX11', 0 | FF_FULLBRIGHT, 35.0 / 35.0, S_SOR2FX2_2) = none
	S_SOR2FX2_2('FX11', 0 | FF_FULLBRIGHT, 5.0 / 35.0, S_SOR2FX2_3) = A_GenWizard
