class ArtiSuperHealth : Inventory
	__mobjinfo__(32)
	__scriptid__(25);

//==========================================================================
//
//	Use
//
//==========================================================================

bool Use(bool Pickup)
{
	return Player(Owner.Player).GiveBody(100);
}

__states__
{
	S_ARTI_SPHL1('SPHL', 0, 350.0 / 35.0, S_ARTI_SPHL1) = none
}

defaultproperties
{
	Height = 32.0;
	MaxAmount = DefMaxAmount;
	PickupSound = 'misc/p_pkup';
	PickupMessage = "$txt_artisuperhealth";
	IconName = 'artisphl';
	bCountItem = true;
	bFloatBob = true;
	bPickupFlash = true;
	bInvBar = true;
	IdleState = S_ARTI_SPHL1;
}
