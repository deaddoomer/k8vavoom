class BeastBall : Projectile
	__scriptid__(120);

//==========================================================================
//
//  OnMapSpawn
//
//==========================================================================

void OnMapSpawn(mthing_t* mthing)
{
	::OnMapSpawn(mthing);
	if (Level.Game.fastparm)
		Speed = 700.0;
}

//==========================================================================
//
//  A_BeastPuff
//
//==========================================================================

final void A_BeastPuff()
{
	TVec org;

	if (P_Random() > 64)
	{
		org.x = Origin.x + (Random() - Random()) * 4.0;
		org.y = Origin.y + (Random() - Random()) * 4.0;
		org.z = Origin.z + (Random() - Random()) * 4.0;
		Spawn(Puffy, org);
	}
}

states
{
Spawn:
	FRB1 AABBCC 2 A_BeastPuff
	Loop
Death:
	FRB1 DEFGH 4
	Stop
}

defaultproperties
{
	Radius = 9.0;
	Height = 8.0;
	Speed = 420.0;
	MissileDamage = 4;
	RenderStyle = STYLE_Add;
	bWindThrust = true;
}
