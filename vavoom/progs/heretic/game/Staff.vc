class Staff : HereticWeapon;

//===========================================================================
//
//  A_StaffAttackPL1
//
//===========================================================================

final void A_StaffAttackPL1()
{
	TAVec		angles;
	int			damage;
	TVec		dir;
	EntityEx	AimTarget;

	damage = 5 + (P_Random() & 15);
	angles = Owner.Angles;
	angles.yaw = AngleMod360(angles.yaw +
		(Random() - Random()) * 45.0 / 8.0);
	AimTarget = Actor(Owner).AimLineAttack(dir, angles, MELEERANGE);
	Actor(Owner).LineAttack(dir, MELEERANGE, damage, StaffPuff, true);
	if (AimTarget)
	{
		// turn to face target
		Owner.Angles.yaw = atan2(AimTarget.Origin.y - Owner.Origin.y,
			AimTarget.Origin.x - Owner.Origin.x);
		Owner.Player.bFixAngle = true;
	}
}

//===========================================================================
//
//  A_StaffAttackPL2
//
//===========================================================================

final void A_StaffAttackPL2()
{
	TAVec		angles;
	int			damage;
	TVec		dir;
	EntityEx	AimTarget;

	// P_inter.c:DamageMobj() handles target momentums
	damage = 18 + (P_Random() & 63);

	angles = Owner.Angles;
	angles.yaw = AngleMod360(angles.yaw +
		(Random() - Random()) * 45.0 / 8.0);
	AimTarget = Actor(Owner).AimLineAttack(dir, angles, MELEERANGE);
	Actor(Owner).LineAttack(dir, MELEERANGE, damage, StaffPuff2, true);
	if (AimTarget)
	{
		// turn to face target
		Owner.Angles.yaw = atan2(AimTarget.Origin.y - Owner.Origin.y,
			AimTarget.Origin.x - Owner.Origin.x);
		Owner.Player.bFixAngle = true;
	}
}

states
{
Ready:
	STFF A 1 A_WeaponReady
	Loop
Deselect:
	STFF A 1 A_Lower
	Loop
Select:
	STFF A 1 A_Raise
	Loop
Fire:
	STFF B 6
	STFF C 8 A_StaffAttackPL1
	STFF B 8 A_ReFire
	Goto Ready
}

defaultproperties
{
	Slot = 1;
	SelectionOrder = 3800;
	PSpriteSY = 0.0;
	SisterWeaponType = StaffPowered;
	BotCombatDist = 1.0;
	bWimpyWeapon = true;
	bBotMelee = true;
}
