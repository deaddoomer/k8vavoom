class GauntletPuff2 : Effect;

states
{
Spawn:
	PUF1 E 4 Bright A_Lights
	PUF1 FGH 4
	Stop
}

defaultproperties
{
	RenderStyle = STYLE_Translucent;
	Alpha = 0.666;
	PuffVelZ = 0.8 * 35.0;
	bPuffOnActors = true;
	bDynamicLight = true;
	DLightColour = RGB(239, 0, 0);
	DLightRadius = 86.0;
}
