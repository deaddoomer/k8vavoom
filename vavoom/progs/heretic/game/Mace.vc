class Mace : WeaponPickup
	__mobjinfo__(2002);

//==========================================================================
//
//  A_RestoreSpecialThing1
//
//  Chooses the next spot to place the mace.
//
//==========================================================================

void A_RestoreSpecialThing1()
{
	int spot;

	// Do random mace placement
	spot = P_Random() % HereticLevelInfo(Level).MaceSpotCount;
	UnlinkFromWorld();
	Origin.x = HereticLevelInfo(Level).MaceSpot_x[spot];
	Origin.y = HereticLevelInfo(Level).MaceSpot_y[spot];
	LinkToWorld();
	Origin.z = FloorZ;

	::A_RestoreSpecialThing1();
}

__states__
{
	S_WMCE('WMCE', 0, -1.0, none) = none
}

defaultproperties
{
	WeaponType = wp_mace;
	IdleState = S_WMCE;
}
