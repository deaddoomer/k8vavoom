class ImpLeader : Imp
	__mobjinfo__(5);

//==========================================================================
//
//  A_ImpMsAttack2
//
//  Fireball attack of the imp leader.
//
//==========================================================================

void A_ImpMsAttack2()
{
	if (!Enemy)
	{
		return;
	}
	PlaySound(AttackSound, CHAN_WEAPON);
	if (CheckMeleeRange())
	{
		Enemy.Damage(self, self, 5 + (P_Random() & 7));
		return;
	}
	SpawnMissile(Enemy, ImpBall);
}

__states__
{
	//	Missile attack
	S_IMP_MSATK2_1('IMPX', 3, 'monsters/gargoyle/base.md2', 27, 0.1, S_IMP_MSATK2_2) { A_FaceTarget(); }
	S_IMP_MSATK2_2('IMPX', 3, 'monsters/gargoyle/base.md2', 28, 0.1, S_IMP_MSATK2_3) { }
	S_IMP_MSATK2_3('IMPX', 4, 'monsters/gargoyle/base.md2', 29, 0.1, S_IMP_MSATK2_4) { A_FaceTarget(); }
	S_IMP_MSATK2_4('IMPX', 4, 'monsters/gargoyle/base.md2', 30, 0.1, S_IMP_MSATK2_5) { }
	S_IMP_MSATK2_5('IMPX', 5, 'monsters/gargoyle/base.md2', 31, 0.1, S_IMP_MSATK2_6) { A_ImpMsAttack2(); }
	S_IMP_MSATK2_6('IMPX', 5, 'monsters/gargoyle/base.md2', 32, 0.1, S_IMP_FLY1) { }
}

defaultproperties
{
	Health = 80;
	GibsHealth = -40;
	MeleeState = S_NULL;
	MissileState = S_IMP_MSATK2_1;
	AttackSound = 'himp/leaderattack';
}

