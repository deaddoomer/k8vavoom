	LICH A 4 A_Pain
	Goto See
Death:
	LICH C 7
	LICH D 7 A_Scream
	LICH EF 7
	LICH G 7 A_NoBlocking
	LICH H 7
	LICH I -1 A_BossDeath
	Stop
}

