class CrossbowFX2 : CrossbowFX1
	__scriptid__(148);

//===========================================================================
//
//  A_BoltSpark
//
//===========================================================================

void A_BoltSpark()
{
	Actor spark;

	if (P_Random() > 50)
	{
		spark = Spawn(CrossbowFX4, Origin);
		spark.Origin.x += (Random() - Random()) * 4.0;
		spark.Origin.y += (Random() - Random()) * 4.0;
	}
}

__states__
{
	S_CRBOWFX2('FX03', 1 | FF_FULLBRIGHT, 'missiles/arrows.md2', 0, 1.0 / 35.0, S_CRBOWFX2) { A_BoltSpark(); }
}

defaultproperties
{
	Speed = 1120.0;
	MissileDamage = 6;
	IdleState = S_CRBOWFX2;
}

