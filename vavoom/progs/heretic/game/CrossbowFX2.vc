class CrossbowFX2 : CrossbowFX1
	__scriptid__(148);

//===========================================================================
//
//  A_BoltSpark
//
//===========================================================================

final void A_BoltSpark()
{
	Actor spark;

	if (P_Random() > 50)
	{
		spark = Spawn(CrossbowFX4, Origin);
		spark.Origin.x += (Random() - Random()) * 4.0;
		spark.Origin.y += (Random() - Random()) * 4.0;
	}
}

states
{
Spawn:
	FX03 B 1 Bright A_BoltSpark
	Loop
}

defaultproperties
{
	Speed = 1120.0;
	MissileDamage = 6;
}
