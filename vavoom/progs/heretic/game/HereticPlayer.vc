class HereticPlayer : PlayerPawn;

//==========================================================================
//
//	A_FlameSnd
//
//==========================================================================

final void A_FlameSnd()
{
	PlaySound('misc/burn', CHAN_WEAPON);	// Burn sound
}

states
{
Spawn:
	PLAY A -1
	Stop
See:
	PLAY ABCD 4
	Loop
Melee:
Missile:
	PLAY F 6 Bright
	PLAY E 12
	Goto Spawn
Pain:
	PLAY G 4
	PLAY G 4 A_Pain
	Goto Spawn
Death:
	PLAY H 6
	PLAY I 6 A_PlayerScream
	PLAY JK 6
	PLAY L 6 A_NoBlocking
	PLAY MNO 6
	PLAY P -1
	Stop
XDeath:
	PLAY Q 5 A_PlayerScream
	PLAY R 5 { A_SkullPop(); }
	PLAY S 5 A_NoBlocking
	PLAY TUVWX 5
	PLAY Y -1
	Stop
Burn:
	FDTH A 5 Bright A_FlameSnd
	FDTH B 4 Bright
	FDTH C 5 Bright
	FDTH D 4 Bright A_PlayerScream
	FDTH E 5 Bright
	FDTH F 4 Bright
	FDTH G 5 Bright A_FlameSnd
	FDTH H 4 Bright
	FDTH I 5 Bright
	FDTH J 4 Bright
	FDTH K 5 Bright
	FDTH L 4 Bright
	FDTH M 5 Bright
	FDTH N 4 Bright
	FDTH O 5 Bright A_NoBlocking
	FDTH P 4 Bright
	FDTH Q 5 Bright
	FDTH R 4 Bright
	ACLO E 35 A_CheckPlayerDone
	Wait
BurnGone:
	ACLO E 8
	Stop
}

defaultproperties
{
	Health = 100;
	Radius = 16.0;
	Height = 56.0;
	PainChance = 1.0;
	TranslStart = 225;
	TranslEnd = 240;
	bOnmobjCopyVel = true;
	DisplayName = "Corvus";

	DropItemList.Num = 3;
	DropItemList[0].Type = GoldWandAmmo; DropItemList[0].Amount = 50;
	DropItemList[1].Type = Staff; DropItemList[1].Amount = 1;
	DropItemList[2].Type = GoldWand; DropItemList[2].Amount = 1;
}
