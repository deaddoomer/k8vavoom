//===========================================================================
//
//  SetupPsprites
//
//  Called at start of level for each player
//
//===========================================================================

void SetupPsprites()
{
	int i;

	// Remove all  ViewEnts
	for (i = 0; i < NUMPSPRITES; i++)
	{
		ViewEnts[i].State = none;
	}
	// Spawn the ready weapon
	BringUpWeapon();
}

//===========================================================================
//
//  MovePsprites
//
//  Called every tic by player thinking routine
//
//===========================================================================

void MovePsprites()
{
	int i;
	ViewEntity e;

	for (i = 0; i < NUMPSPRITES; i++)
	{
		e = ViewEnts[i];
		if (e.State)	// a null state means not active
		{
			// drop tic count and possibly change state
			if (e.StateTime != -1.0)	// a -1 tic count never changes
			{
				e.StateTime -= Level.Game.frametime;
				if (e.StateTime <= 0.0)
				{
					e.StateTime = 0.0;
					SetPsprite(i, e.NextState);
				}
			}
		}
	}
	ViewEnts[ps_flash].SX = ViewEnts[ps_weapon].SX;
	ViewEnts[ps_flash].SY = ViewEnts[ps_weapon].SY;
}

//===========================================================================
//
//  CheckAmmo
//
//  Returns true if there is enough ammo to shoot.  If not, selects the
// next weapon to use.
//
//===========================================================================

bool CheckAmmo()
{
	int ammo;
	int *ammoUse;
	int count;

	ammo = Weapon(ViewEnts[ps_weapon]).Ammo;
	if (Powers[pw_weaponlevel2] && !Level.Game.deathmatch)
	{
		ammoUse = &MainGameInfo(Level.Game).WeaponAmmoUsePL2[0];
	}
	else
	{
		ammoUse = &MainGameInfo(Level.Game).WeaponAmmoUsePL1[0];
	}
	count = ammoUse[ReadyWeapon];
	if (ammo == am_noammo || Ammo[ammo] >= count)
	{
		return true;
	}
	// out of ammo, pick a weapon to change to
	do
	{
		if (WeaponOwned[wp_skullrod]
			&& Ammo[am_skullrod] > ammoUse[wp_skullrod])
		{
			PendingWeapon = wp_skullrod;
		}
		else if (WeaponOwned[wp_blaster]
			&& Ammo[am_blaster] > ammoUse[wp_blaster])
		{
			PendingWeapon = wp_blaster;
		}
		else if (WeaponOwned[wp_crossbow]
			&& Ammo[am_crossbow] > ammoUse[wp_crossbow])
		{
			PendingWeapon = wp_crossbow;
		}
		else if (WeaponOwned[wp_mace]
			&& Ammo[am_mace] > ammoUse[wp_mace])
		{
			PendingWeapon = wp_mace;
		}
		else if (Ammo[am_goldwand] > ammoUse[wp_goldwand])
		{
			PendingWeapon = wp_goldwand;
		}
		else if (WeaponOwned[wp_gauntlets])
		{
			PendingWeapon = wp_gauntlets;
		}
		else if (WeaponOwned[wp_phoenixrod]
			&& Ammo[am_phoenixrod] > ammoUse[wp_phoenixrod])
		{
			PendingWeapon = wp_phoenixrod;
		}
		else
		{
			PendingWeapon = wp_staff;
		}
	}
	while (PendingWeapon == wp_nochange);
	if (Powers[pw_weaponlevel2])
	{
		SetPsprite(ps_weapon, Weapon(ViewEnts[ps_weapon]).DownState2);
	}
	else
	{
		SetPsprite(ps_weapon, Weapon(ViewEnts[ps_weapon]).DownState);
	}
	return false;
}

//===========================================================================
//
//  FireWeapon
//
//===========================================================================

void FireWeapon()
{
	state attackState;

	if (!CheckAmmo())
	{
		return;
	}
	MO.SetState(PlayerPawn(MO).Attack2State);
	if (Powers[pw_weaponlevel2])
	{
		attackState = Refire ?
			Weapon(ViewEnts[ps_weapon]).HoldAttackState2 :
			Weapon(ViewEnts[ps_weapon]).AttackState2;
	}
	else
	{
		attackState = Refire ?
			Weapon(ViewEnts[ps_weapon]).HoldAttackState :
			Weapon(ViewEnts[ps_weapon]).AttackState;
	}
	SetPsprite(ps_weapon, attackState);
	HereticLevelInfo(Level).NoiseAlert(Actor(MO), Actor(MO));
	if (ReadyWeapon == wp_gauntlets && !Refire)
	{
		// Play the sound for the initial gauntlet attack
		MO.PlaySound('weapons/gauntletsuse', CHAN_WEAPON);
	}
}

