class SorcererFX1 : Projectile
	__scriptid__(144);

//==========================================================================
//
//  OnMapSpawn
//
//==========================================================================

void OnMapSpawn(mthing_t* mthing)
{
	::OnMapSpawn(mthing);
	if (Level.Game.fastparm)
		Speed = 980.0;
}

states
{
Spawn:
	FX14 ABC 6 Bright
	Loop
Death:
	FX14 DEFGH 5 Bright
	Stop
}

defaultproperties
{
	Radius = 10.0;
	Height = 10.0;
	Speed = 700.0;
	MissileDamage = 10;
	DamageType = 'Fire';
	bDynamicLight = true;
	DLightColour = RGB(192, 95, 21);
	DLightRadius = 126.0;
}
