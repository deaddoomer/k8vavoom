class TeleGlitter1 : Actor
	__scriptid__(166);

//==========================================================================
//
//  A_AccTeleGlitter
//
//==========================================================================

final void A_AccTeleGlitter()
{
	if (++Health > 35)
	{
		Velocity.z += Velocity.z / 2.0;
	}
}

states
{
Spawn:
	TGLT A 2 Bright
	TGLT B 2 Bright A_AccTeleGlitter
	TGLT C 2 Bright
	TGLT D 2 Bright A_AccTeleGlitter
	TGLT E 2 Bright
	Loop
}

defaultproperties
{
	Radius = 20.0;
	Height = 16.0;
	bMissile = true;
	bNoBlockmap = true;
	bNoGravity = true;
	bDynamicLight = true;
	DLightColour = RGB(255, 179, 179);
	DLightRadius = 66.0;
}
