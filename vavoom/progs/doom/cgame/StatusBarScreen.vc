	ST_MAXAMMO0X		= 314,
	ST_MAXAMMO0Y		= 173,
	ST_MAXAMMO1X		= 314,
	ST_MAXAMMO1Y		= 179,
	ST_MAXAMMO2X		= 314,
	ST_MAXAMMO2Y		= 191,
	ST_MAXAMMO3X		= 314,
	ST_MAXAMMO3Y		= 185,

//  Fullscreen widgets
