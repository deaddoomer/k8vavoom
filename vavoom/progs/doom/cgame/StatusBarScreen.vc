	ST_AMMOX			= 44,
	ST_AMMOY			= 171,

// HEALTH number pos.
	ST_HEALTHX			= 90,
	ST_HEALTHY			= 171,

// Frags pos.
	ST_FRAGSX			= 138,
	ST_FRAGSY			= 171,

// Weapon pos.
	ST_ARMSBGX			= 104,
	ST_ARMSBGY			= 168,
	ST_ARMSX			= 111,
	ST_ARMSY			= 172,
	ST_ARMSXSPACE		= 12,
	ST_ARMSYSPACE		= 10,

// Location of marine face
	ST_FACESX			= 143,
	ST_FACESY			= 168,

// ARMOR number pos.
	ST_ARMORX			= 221,
	ST_ARMORY			= 171,

// Key icon positions.
	ST_KEY0X			= 239,
	ST_KEY0Y			= 171,
	ST_KEY1X			= 239,
	ST_KEY1Y			= 181,
	ST_KEY2X			= 239,
	ST_KEY2Y			= 191,

// Ammunition counter.
	ST_AMMO0X			= 288,
	ST_AMMO0Y			= 173,
	ST_AMMO1X			= 288,
	ST_AMMO1Y			= 179,
	ST_AMMO2X			= 288,
	ST_AMMO2Y			= 191,
	ST_AMMO3X			= 288,
	ST_AMMO3Y			= 185,

// Indicate maximum ammunition.
