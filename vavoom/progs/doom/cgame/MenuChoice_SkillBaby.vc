class MenuChoice_SkillBaby : MenuBigTextButton;

int SkillLevel;

void ActivateEvent()
{
	if (SkillLevel == sk_nightmare)
	{
		GetClGame().MessageBoxStartMessage("are you sure? this skill level\nisn\'t even remotely fair.\n\npress y or n.",
			ClientGame::MB_Nightmare, true);
		return;
	}
	GetClGame().NewGame(SkillLevel);
}

defaultproperties
{
	Text = "I\'m too young to die.";
	SkillLevel = sk_baby;
}
