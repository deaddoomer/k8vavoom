void IM_DrawLF()
{
	picinfo_t info;
	int y = WI_TITLEY;

	// draw <LevelName>
	if (ClGame.im.LeaveTitlePatch)
	{
		R_GetPicInfo(LeaveTitlePic, &info);
		DrawPic(320 - info.width / 2, y, LeaveTitlePic);
		y += info.height + TextHeight("DUMMY") / 4;
