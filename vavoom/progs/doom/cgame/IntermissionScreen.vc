		SetTextAlign(hcentre, vtop);
		DrawText(320, y, ClGame.im.LeaveName);
		y += (5 * TextHeight("DUMMY")) / 4;
	}

	// draw "Finished!"
	SetTextAlign(hcentre, vtop);
	DrawText(320, y, "finished");
}

