//==========================================================================
//
//  F_BunnyScroll
//
//==========================================================================

void F_BunnyScroll()
{
	int scrolled;
	int stage;

	scrolled = ftoi((FinaleTime - 6.5) * 16.0);
	SetVirtualScreen(320, 200);
	if (scrolled <= 0)
	{
		R_DrawPic(0, 0, fpage1);
	}
	else if (scrolled >= 320)
	{
		R_DrawPic(0, 0, fpage2);
	}
	else
	{
		R_DrawPic(scrolled, 0, fpage1);
		R_DrawPic(scrolled - 320, 0, fpage2);
	}
	SetVirtualScreen(640, 480);

	if (FinaleTime < 32.0)
	{
		return;
	}
	if (FinaleTime < 35.0)
	{
		R_DrawPic((640 - 13 * 8) / 2, (480 - 8 * 8) / 2, fend[0]);
		laststage = 0;
		return;
	}

	stage = ftoi((FinaleTime - 35.0) * 7.0);
	if (stage > 6)
	{
		stage = 6;
	}
	if (stage > laststage)
	{
		LocalSound('weapons/pistol');
		laststage = stage;
	}
	R_DrawPic((640 - 13 * 8) / 2, (480 - 8 * 8) / 2, fend[stage]);
}

