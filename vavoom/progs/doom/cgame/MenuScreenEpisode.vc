class MenuScreenEpisode : MenuScreen;

void InitWindow()
{
	if (!(WadLumpPresent('e2m1') && WadLumpPresent('e4m1')))
	{
		Choices[3] = none;
	}
	::InitWindow();
}

defaultproperties
{
	Choices[0] = MenuChoice_Episode1;
	Choices[1] = MenuChoice_Episode2;
	Choices[2] = MenuChoice_Episode3;
	Choices[3] = MenuChoice_Episode4;
	ChoicesStartX = 48;
	ChoicesStartY = 40;
	SelectorType = MenuSelector_Skull;
	Title = "WHICH EPISODE?";
}
