class MenuScreenHelp:MenuScreen;

MenuHelpPage Pic;
#ifndef DOOM2
int NumPages;
int CurPage;
#endif

//==========================================================================
//
//	CreateChoices
//
//==========================================================================

void CreateChoices(void)
{
#ifndef DOOM2
	if (ExtendedWAD)
	{
		NumPages = 1;
	}
	else
	{
		NumPages = 2;
	}
	CurPage = 0;
#endif

	Pic = MenuHelpPage(NewChild(MenuHelpPage));
}

//==========================================================================
//
//	Key
//
//==========================================================================

bool Key(int key)
{
	LocalSound('menu/clear');
#ifdef DOOM2
	ForceMenuOff();
#else
	CurPage++;
	if (key == K_ESCAPE || CurPage >= NumPages)
	{
		ForceMenuOff();
	}
	else
	{
		Pic.SetPage("HELP2");
	}
#endif
	return true;
}

