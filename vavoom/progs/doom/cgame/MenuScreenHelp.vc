class MenuScreenHelp : MenuScreen;

MenuHelpPage Pic;
#ifndef DOOM2
int NumPages;
int CurPage;
#endif

//==========================================================================
//
//	CreateChoices
//
//==========================================================================

void CreateChoices()
{
#ifndef DOOM2
	if (WadLumpPresent('e4m1'))
	{
		NumPages = 1;
	}
	else
	{
		NumPages = 2;
	}
	CurPage = 0;
#endif

	Pic = MenuHelpPage(NewChild(MenuHelpPage));
}

//==========================================================================
//
//	Key
//
//==========================================================================

bool OnKeyDown(int key)
{
	LocalSound('menu/clear');
#ifdef DOOM2
	ClGame.ForceMenuOff();
#else
	CurPage++;
	if (key == K_ESCAPE || CurPage >= NumPages)
	{
		ClGame.ForceMenuOff();
	}
	else
	{
		Pic.SetPage('help2');
	}
#endif
	return true;
}

