class MenuChoiceEpisode : MenuTextButton;

int PicHandle;
name EpisodeMap;
bool bNoSkillMenu;

//==========================================================================
//
//	OnDraw
//
//==========================================================================

void OnDraw()
{
	if (PicHandle > 0)
	{
		DrawPic(0, 0, PicHandle);
	}
	else
	{
		T_SetFont(font_big);
		T_SetAlign(hleft, vtop);
		DrawText(0, 0, Text);
	}
}

defaultproperties
{
	Height = 18;
}
