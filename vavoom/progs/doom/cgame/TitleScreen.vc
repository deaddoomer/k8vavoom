class TitleScreen : Window;

ClientGameBase ClGame;

// demo loop control
int demosequence;

float pagetime;
int page_pic;

//==========================================================================
//
//  AdvanceDemo
//
//  This cycles through the demo sequences.
//
//==========================================================================

void AdvanceDemo()
{
	demosequence++;
#ifndef DOOM2
	if (WadLumpPresent('e4m1'))
		demosequence %= 7;
	else
#endif
		demosequence %= 6;

	switch (demosequence)
	{
	case 0:
		page_pic = R_RegisterPic('titlepic');
#ifndef DOOM2
		pagetime = 170.0 / 35.0;
//      S_StartSong("D_INTRO", P_GetCDTitleTrack(), false);
		CmdBuf_AddText("music play d_intro\n");
#else
		pagetime = 11.0;
//      S_StartSong("D_DM2TTL", P_GetCDTitleTrack(), false);
		CmdBuf_AddText("music play d_dm2ttl\n");
#endif
		break;

	case 1:
		CmdBuf_AddText("PlayDemo demo1\n");
		break;

	case 2:
		pagetime = 200.0 / 35.0;
		page_pic = R_RegisterPic('credit');
		break;

	case 3:
		CmdBuf_AddText("PlayDemo demo2\n");
		break;

	case 4:
#ifndef DOOM2
		pagetime = 200.0 / 35.0;
		if (WadLumpPresent('e4m1'))
		{
			page_pic = R_RegisterPic('credit');
		}
		else
		{
			page_pic = R_RegisterPic('help2');
		}
#else
		pagetime = 11.0;
		page_pic = R_RegisterPic('titlepic');
		CmdBuf_AddText("music play d_dm2ttl\n");
#endif
		break;

	case 5:
		CmdBuf_AddText("PlayDemo demo3\n");
		break;

#ifndef DOOM2
		// THE DEFINITIVE DOOM Special Edition demo
	case 6:
		CmdBuf_AddText("PlayDemo demo4\n");
		break;
#endif
	}
}

//==========================================================================
//
//  ForceTitle
//
//==========================================================================

void ForceTitle()
{
#ifndef DOOM2
	pagetime = 5.0;
#else
	pagetime = 11.0;
#endif
	page_pic = R_RegisterPic('titlepic');
}

//==========================================================================
//
//	VisibilityChanged
//
//==========================================================================

void VisibilityChanged(bool bNewVisibility)
{
	bTickEnabled = bNewVisibility;
}

//==========================================================================
//
//	Tick
//
//==========================================================================

void Tick(float DeltaTime)
{
	pagetime -= DeltaTime;
	if (demosequence == -1 || (!ClGame.MenuActive() && pagetime < 0.0))
	{
		AdvanceDemo();
	}
}

//==========================================================================
//
//  DrawWindow
//
//==========================================================================

void DrawWindow(GC gc)
{
	gc.DrawFullScreenPic(page_pic);
}

//==========================================================================
//
//  OnHostEndGame
//
//==========================================================================

void OnHostEndGame()
{
	if (demosequence != -1)
		AdvanceDemo();
	ForceTitle();
}

//==========================================================================
//
//  OnHostError
//
//==========================================================================

void OnHostError()
{
	demosequence = -1;
	ForceTitle();
}

//==========================================================================
//
//  StopDemoLoop
//
//==========================================================================

void StopDemoLoop()
{
	demosequence = -1;	// not in the demo loop now
}

defaultproperties
{
	bTickEnabled = true;
	Width = 320;
	Height = 200;
	demosequence = -1;	// -1 = don't play demos
}
