class MenuChoice_Skin : MenuChoiceEnum;

MenuModel Mdl;
name SkinNames[MAX_ENUM_CHOICES];

void InitWindow()
{
	void* model;
	name SkinName;
	string SkinDesc;
	int i;

	model = InstallModel("models/players/doomguy/player.xml");
	for (i = 0; i < MAX_ENUM_CHOICES; i++)
	{
		if (!GetModelSkinInfo(model, i, SkinName, SkinDesc))
		{
			break;
		}
		SkinNames[i] = SkinName;
		EnumNames[i] = SkinDesc;
	}

	::InitWindow();
}

void SetSkin(int skinNum)
{
	Mdl.Skin = va("%n", SkinNames[skinNum]);
}

int GetInitialValue()
{
	int i;
	string curskin;

	curskin = GetCvarS('skin');
	for (i = 0; i < MaxValue; i++)
	{
		if (!stricmp(curskin, va("%n", SkinNames[i])))
		{
			break;
		}
	}
	if (i == MaxValue)
	{
		i = 0;
		SetCvarS('skin', va("%n", SkinNames[0]));
	}
	return i;
}

bool SetNewValue(int newValue)
{
	SetCvarS('skin', va("%n", SkinNames[newValue]));
	SetSkin(newValue);
	return true;
}

defaultproperties
{
	Text = "Skin";
	bLeftAlign = true;
}
