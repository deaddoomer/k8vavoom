//==========================================================================
//
//	MenuHelpPage
//
//==========================================================================

class MenuHelpPage:MenuStaticBitmap
{
	void SetPage(string pageName)
	{
		Handle = R_RegisterPic(pageName, PicType);
	}

	defaultproperties
	{
#ifdef DOOM2
		PicName = "HELP";
#else
		PicName = "HELP1";
#endif
	}
}

//==========================================================================
//
//	MenuScreenHelp
//
//==========================================================================

class MenuScreenHelp:MenuScreen
{
	MenuHelpPage Pic;
#ifndef DOOM2
	int NumPages;
	int CurPage;
#endif

	void CreateChoices(void)
	{
#ifndef DOOM2
		if (ExtendedWAD)
		{
			NumPages = 1;
		}
		else
		{
			NumPages = 2;
		}
		CurPage = 0;
#endif

		Pic = MenuHelpPage(NewChild(MenuHelpPage));
	}

	boolean Key(int key)
	{
		LocalSound('MenuClose');
#ifdef DOOM2
		ForceMenuOff();
#else
		CurPage++;
		if (key == K_ESCAPE || CurPage >= NumPages)
		{
			ForceMenuOff();
		}
		else
		{
			Pic.SetPage("HELP2");
		}
#endif
		return true;
	}

	defaultproperties
	{
	}
}

void menu_help(void)
{
	PushMenuScreen(SpawnMenu(MenuScreenHelp));
}

