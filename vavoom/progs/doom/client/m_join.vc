//**
//**    Join net game menu
//**
//**************************************************************************

void menu_search(void);

//==========================================================================
//
//	MenuChoice_Search
//
//==========================================================================

class MenuChoice_Search:MenuSmallTextButton
{
	void ActivateEvent(void)
	{
		menu_search();
	}

	defaultproperties
	{
		Text = "Search for games...";
		TextHAlign = hleft;
	}
}

//==========================================================================
//
//	MenuChoice_JoinAt
//
//==========================================================================

class MenuChoice_JoinAt:MenuInputLine
{
	void ValueChanged(void)
	{
		::ValueChanged();
		if (Value[0])
		{
			CmdBuf_AddText("Connect %s\n", ARR2STR(Value));
		}
	}

	defaultproperties
	{
		Text = "Join Game At";
	}
}

//==========================================================================
//
//	MenuScreenJoinGame
//
//==========================================================================

class MenuScreenJoinGame:MenuScreen
{
	defaultproperties
	{
		Choices[0] = MenuChoice_Search;
		Choices[1] = MenuChoice_JoinAt;
		ChoicesStartX = 64;
		ChoicesStartY = 40;
		SelectorType = MenuSelector_SmallLeft;
		Title = "JOIN GAME";
	}
}

//==========================================================================
//
//	MenuScreenSList
//
//==========================================================================

class MenuScreenSList:MenuScreen
{
	defaultproperties
	{
		Choices[0] = MenuSList;
		Title = "JOIN GAME";
	}
}

void menu_join_game(void)
{
	PushMenuScreen(SpawnMenu(MenuScreenJoinGame));
}

void menu_search(void)
{
	PushMenuScreen(SpawnMenu(MenuScreenSList));
}

