// CODE --------------------------------------------------------------------

//==========================================================================
//
//  QuitResponse
//
//==========================================================================

void QuitResponse(int ch)
{
	if (ch != K_y)
		return;

	LocalSoundTillDone(quitsounds[P_Random() & 7]);

	CmdBuf_AddText("Quit\n");
}

//==========================================================================
//
//  menu_quit
//
//==========================================================================

void menu_quit(void)
{
	LocalSound("Chat");
	MB_StartMessage(va("%s\n\n(press y to quit)",
			endmsg[P_Random() % NUM_END_MESSAGES]), QuitResponse, true);
}

