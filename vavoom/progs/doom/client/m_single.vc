// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

// FUNCTION PROTOTYPES -----------------------------------------------------

#ifdef DOOM2
void menu_skill(void);
#else
void menu_episode(void);
#endif
void menu_load(void);
void menu_save(void);

// DATA DECLARATIONS -------------------------------------------------------

// CODE --------------------------------------------------------------------

//==========================================================================
//
//	MenuChoice_NewGame
//
//==========================================================================

class MenuChoice_NewGame:MenuBigTextButton
{
	defaultproperties
	{
		Text = "New Game";
	}

	void ActivateEvent(void)
	{
#ifdef DOOM2
		menu_skill();
#else
		menu_episode();
#endif
	}
}

//==========================================================================
//
//	MenuChoice_LoadGame
//
//==========================================================================

class MenuChoice_LoadGame:MenuBigTextButton
{
	defaultproperties
	{
		Text = "Load Game";
	}

	void ActivateEvent(void)
	{
		menu_load();
	}
}

//==========================================================================
//
//	MenuChoice_SaveGame
//
//==========================================================================

class MenuChoice_SaveGame:MenuBigTextButton
{
	defaultproperties
	{
		Text = "Save Game";
	}

	void ActivateEvent(void)
	{
		menu_save();
	}
}

//==========================================================================
//
//	MenuChoice_EndGame
//
//==========================================================================

class MenuChoice_EndGame:MenuBigTextButton
{
	defaultproperties
	{
		Text = "End Game";
	}

	void ActivateEvent(void)
	{
		CmdBuf_AddText("Disconnect\n");
	}
}

//==========================================================================
//
//	MenuScreenSinglePlayer
//
//==========================================================================

class MenuScreenSinglePlayer:MenuScreen
{
	menutext_t title;

	void Init(void)
	{
		MenuText_InitTitle(&title, 160, 24, "SINGLE PLAYER", TEXT_BIGC);
		MenuItemWrapper(AddItem(MenuItemWrapper)).item = &title;
		::Init();
	}

	defaultproperties
	{
		Choices[0] = MenuChoice_NewGame;
		Choices[1] = MenuChoice_LoadGame;
		Choices[2] = MenuChoice_SaveGame;
		Choices[3] = MenuChoice_EndGame;
		ChoicesStartX = 97;
		ChoicesStartY = 40;
		SelectorType = MenuSelector_Skull;
	}
}

void menu_single(void)
{
	PushMenuScreen(SpawnMenu(MenuScreenSinglePlayer));
}

