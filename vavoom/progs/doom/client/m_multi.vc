// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

// FUNCTION PROTOTYPES -----------------------------------------------------

void menu_new_game(void);
void menu_join_game(void);
void menu_psetup(void);

// DATA DECLARATIONS -------------------------------------------------------

// CODE --------------------------------------------------------------------

//==========================================================================
//
//	MenuScreenMultiplayer
//
//==========================================================================

class MenuScreenMultiplayer:MenuScreen
{
	menutext_t newgame;
	menutext_t joingame;
	menutext_t setup;
	menutext_t disconnect;
	menutext_t title;

	defaultproperties
	{
		SelectorType = MenuSelector_Skull;
	}
}

void menu_multi(void)
{
	MenuScreenMultiplayer MultiMenu;
	int x = 97;
	int y = 40;

	MultiMenu = MenuScreenMultiplayer(SpawnMenu(MenuScreenMultiplayer));

	if (local_server)
	{
		MenuText_InitFunc(&MultiMenu.newgame, x, y, "New Game", TEXT_BIG,
			menu_new_game);
		MenuItemWrapper(MultiMenu.AddItem(MenuItemWrapper)).item = &MultiMenu.newgame;
		y += 18;
	}

	MenuText_InitFunc(&MultiMenu.joingame, x, y, "Join Game", TEXT_BIG,
		menu_join_game);
	MenuItemWrapper(MultiMenu.AddItem(MenuItemWrapper)).item = &MultiMenu.joingame;
	y += 18;

	MenuText_InitFunc(&MultiMenu.setup, x, y, "Player Setup", TEXT_BIG,
		menu_psetup);
	MenuItemWrapper(MultiMenu.AddItem(MenuItemWrapper)).item = &MultiMenu.setup;
	y += 18;

	MenuText_InitCmd(&MultiMenu.disconnect, x, y, "Disconnect", TEXT_BIG,
		"Disconnect\n");
	MenuItemWrapper(MultiMenu.AddItem(MenuItemWrapper)).item = &MultiMenu.disconnect;

	MenuText_InitTitle(&MultiMenu.title, 160, 24, "MULTIPLAYER", TEXT_BIGC);
	MenuItemWrapper(MultiMenu.AddItem(MenuItemWrapper)).item = &MultiMenu.title;

	PushMenuScreen(MultiMenu);
}

