void menu_single(void);
void menu_multi(void);
void menu_options(void);
void menu_help(void);
void menu_quit(void);

//==========================================================================
//
//	MenuMainTitleImage
//
//==========================================================================

class MenuMainTitleImage:MenuStaticBitmap
{
	defaultproperties
	{
		PicName = "M_DOOM";
		X = 94;
		Y = 2;
	}
}

//==========================================================================
//
//	MenuChoice_SinglePlayer
//
//==========================================================================

class MenuChoice_SinglePlayer:MenuBigTextButton
{
	void ActivateEvent(void)
	{
		menu_single();
	}

	defaultproperties
	{
		Text = "Single Player";
	}
}

//==========================================================================
//
//	MenuChoice_Multiplayer
//
//==========================================================================

class MenuChoice_Multiplayer:MenuBigTextButton
{
	void ActivateEvent(void)
	{
		menu_multi();
	}

	defaultproperties
	{
		Text = "Multiplayer";
	}
}

//==========================================================================
//
//	MenuChoice_Options
//
//==========================================================================

class MenuChoice_Options:MenuBigTextButton
{
	void ActivateEvent(void)
	{
		menu_options();
	}

	defaultproperties
	{
		Text = "Options";
	}
}

//==========================================================================
//
//	MenuChoice_Help
//
//==========================================================================

class MenuChoice_Help:MenuBigTextButton
{
#ifndef DOOM2
	void InitWindow(void)
	{
		if (shareware)
		{
			Text = "Read This!";
		}
		::InitWindow();
	}
#endif

	void ActivateEvent(void)
	{
		menu_help();
	}

	defaultproperties
	{
		Text = "Help";
	}
}

//==========================================================================
//
//	MenuChoice_QuitGame
//
//==========================================================================

class MenuChoice_QuitGame:MenuBigTextButton
{
	void ActivateEvent(void)
	{
		menu_quit();
	}

	defaultproperties
	{
		Text = "Quit game";
	}
}

//==========================================================================
//
//	MenuScreenMain
//
//==========================================================================

class MenuScreenMain:MenuScreen
{
	void InitWindow(void)
	{
		if (!local_server)
		{
			Choices[0] = classidNone;
		}
		::InitWindow();
	}

	void CreateTitle(void)
	{
		NewChild(MenuMainTitleImage);
	}

	defaultproperties
	{
		Choices[0] = MenuChoice_SinglePlayer;
		Choices[1] = MenuChoice_Multiplayer;
		Choices[2] = MenuChoice_Options;
		Choices[3] = MenuChoice_Help;
		Choices[4] = MenuChoice_QuitGame;
		ChoicesStartX = 97;
		ChoicesStartY = 80;
		SelectorType = MenuSelector_Skull;
	}
}

void menu_main(void)
{
	PushMenuScreen(SpawnMenu(MenuScreenMain));
}

