enum
{
	DLITE_None,
	DLITE_Constant,	// lighting is constant (regardless of distance)
	DLITE_Linear,	// lighting is proportional to 1 / distance
	DLITE_Quadratic	// lighting is proportional to 1 / (distance^2)
};

