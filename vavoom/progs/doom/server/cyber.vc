//==========================================================================
//
//  Actor::A_Hoof
//
//  Cyberdemon move with hoof sound.
//
//==========================================================================

void Actor::A_Hoof(void)
{
	StartSoundName(this, "CyberWalk1", CHAN_BODY);
	A_Chase();
}

//==========================================================================
//
//  Actor::A_Metal
//
//  Cyberdemon move with metal sound.
//
//==========================================================================

void Actor::A_Metal(void)
{
	StartSoundName(this, "CyberWalk2", CHAN_BODY);
	A_Chase();
}

//==========================================================================
//
//  Actor::A_CyberAttack
//
//  Cyberdemon attack.
//
//==========================================================================

void Actor::A_CyberAttack(void)
{
	if (!target)
		return;

	A_FaceTarget();
	SpawnMissile(this, target, MT_ROCKET);
}

