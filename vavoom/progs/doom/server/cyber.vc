//==========================================================================
//
//	A_Hoof
//
//	Cyberdemon move with hoof sound.
//
//==========================================================================

void A_Hoof(mobj_t *mo)
{
    StartSoundName(mo, "CyberWalk1");
    A_Chase(mo);
}

//==========================================================================
//
//	A_Metal
//
//	Cyberdemon move with metal sound.
//
//==========================================================================

void A_Metal(mobj_t *mo)
{
    StartSoundName(mo, "CyberWalk2");
    A_Chase(mo);
}

//==========================================================================
//
//	A_CyberAttack
//
//	Cyberdemon attack.
//
//==========================================================================

void A_CyberAttack(mobj_t *actor)
{	
    if (!actor->target)
		return;
		
    A_FaceTarget(actor);
    SpawnMissile(actor, actor->target, MT_ROCKET);
}

