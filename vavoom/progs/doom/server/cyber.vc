//==========================================================================
//
//  Actor::A_Hoof
//
//  Cyberdemon move with hoof sound.
//
//==========================================================================

void Actor::A_Hoof(void)
{
	PlaySound('CyberWalk1', CHAN_BODY);
	A_Chase();
}

//==========================================================================
//
//  Actor::A_Metal
//
//  Cyberdemon move with metal sound.
//
//==========================================================================

void Actor::A_Metal(void)
{
	PlaySound('CyberWalk2', CHAN_BODY);
	A_Chase();
}

//==========================================================================
//
//  Actor::A_CyberAttack
//
//  Cyberdemon attack.
//
//==========================================================================

void Actor::A_CyberAttack(void)
{
	if (!Enemy)
		return;

	A_FaceTarget();
	SpawnMissile(this, &Enemy, Rocket);
}

