//==========================================================================
//
//  Actor::A_BabyMetal
//
//  Arachnotron move with metal sound.
//
//==========================================================================

void Actor::A_BabyMetal(void)
{
	StartSoundName(this, 'BabyWalk', CHAN_BODY);
	A_Chase();
}

//==========================================================================
//
//  Actor::A_BspiAttack
//
//  Arachnotron attack.
//
//==========================================================================

void Actor::A_BspiAttack(void)
{
	if (!target)
		return;

	A_FaceTarget();

	// launch a missile
	SpawnMissile(this, target, MT_ARACHPLAZ);
}

#else

void Actor::A_BabyMetal(void)
{
	NotDoom2();
}

