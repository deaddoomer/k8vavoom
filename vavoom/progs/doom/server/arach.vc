//==========================================================================
//
//  A_BabyMetal
//
//  Arachnotron move with metal sound.
//
//==========================================================================

void A_BabyMetal(mobj_t * mo)
{
	StartSoundName(mo, "BabyWalk", CHAN_BODY);
	A_Chase(mo);
}

//==========================================================================
//
//  A_BspiAttack
//
//  Arachnotron attack.
//
//==========================================================================

void A_BspiAttack(mobj_t * actor)
{
	if (!actor->target)
		return;

	A_FaceTarget(actor);

	// launch a missile
	SpawnMissile(actor, actor->target, MT_ARACHPLAZ);
}

#else

