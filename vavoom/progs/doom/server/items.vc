//**************************************************************************
//
//	AmmoPickup
//
//**************************************************************************

class AmmoPickup:Pickup
	abstract
{

int AmmoType;
int AmmoCount;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

boolean HandlePickup(Actor Toucher)
{
	if (bDropped)
	{
		if (!Toucher.GiveAmmo(AmmoType, AmmoCount / 2))
			return false;
	}
	else
	{
		if (!Toucher.GiveAmmo(AmmoType, AmmoCount))
			return false;
	}
	cprint(Toucher.Player, PickupMessage);
	Toucher.PlaySound('PickupItem', CHAN_ITEM);
	return true;
}

defaultproperties
{
}

}

