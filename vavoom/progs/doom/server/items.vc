//**************************************************************************
//
//	ItemBackpack
//
//**************************************************************************

class ItemBackpack:Pickup
	__mobjinfo__(8)
{

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

boolean HandlePickup(Actor Toucher)
{
	int i;

	if (!Toucher.Player->Backpack)
	{
		Toucher.Player->Backpack = true;
		for (i = 0; i < NUMAMMO; i++)
			Toucher.Player->MaxAmmo[i] *= 2;
	}
	for (i = 0; i < NUMAMMO; i++)
	{
		Toucher.GiveAmmo(i, clipammo[i]);
	}
	cprint(Toucher.Player, PickupMessage);
	Toucher.PlaySound('PickupItem', CHAN_ITEM);
	return true;
}

__states__
{
	S_BPAK('BPAK', 0, 'ammo/backpack.md2', 0, -1.0, S_NULL) { }
}

defaultproperties
{
	IdleState = S_BPAK;
	PickupMessage = "Picked up a backpack full of ammo!";
}

}

//**************************************************************************
//
//	WeaponPickup
//
//**************************************************************************

class WeaponPickup:Pickup
	abstract
{

int WeaponType;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

boolean HandlePickup(Actor Toucher)
{
	if (!Toucher.GiveWeapon(WeaponType, bDropped))
		return false;
	cprint(Toucher.Player, PickupMessage);
	Toucher.PlaySound('PickupWeapon', CHAN_ITEM);
	return true;
}

defaultproperties
{
}

}

