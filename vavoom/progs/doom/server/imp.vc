	S_TROO_RUN3('TROO', 1, 'monsters/imp.md2', 10, 3.0 / 35.0, S_TROO_RUN4) { A_Chase(); }
	S_TROO_RUN4('TROO', 1, 'monsters/imp.md2', 11, 3.0 / 35.0, S_TROO_RUN5) { A_Chase(); }
	S_TROO_RUN5('TROO', 2, 'monsters/imp.md2', 12, 3.0 / 35.0, S_TROO_RUN6) { A_Chase(); }
	S_TROO_RUN6('TROO', 2, 'monsters/imp.md2', 13, 3.0 / 35.0, S_TROO_RUN7) { A_Chase(); }
	S_TROO_RUN7('TROO', 3, 'monsters/imp.md2', 14, 3.0 / 35.0, S_TROO_RUN8) { A_Chase(); }
