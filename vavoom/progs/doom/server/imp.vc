//==========================================================================
//
//  Actor::A_TroopAttack
//
//  Imp attack.
//
//==========================================================================

void Actor::A_TroopAttack(void)
{
	int damage;

	if (!target)
		return;

	A_FaceTarget();
	if (P_CheckMeleeRange(this))
	{
		StartSoundName(this, "ImpAttack", CHAN_WEAPON);
		damage = (P_Random() % 8 + 1) * 3;
		target->Damage(this, this, damage);
		return;
	}

	// launch a missile
	SpawnMissile(this, target, MT_TROOPSHOT);
}

