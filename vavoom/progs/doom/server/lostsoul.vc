//==========================================================================
//
//  Actor::A_SkullAttack
//
//  Lost soul attack. Fly at the player like a missile.
//
//==========================================================================

void Actor::A_SkullAttack(void)
{
	if (!target)
		return;

	bSkullFly = true;

	PlaySound(AttackSound, CHAN_VOICE);
	A_FaceTarget();
	Velocity = Normalize(MobjCenter((*target)) - Origin) * SKULLSPEED;
}

