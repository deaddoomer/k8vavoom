//==========================================================================
//
//	A_SkullAttack
//
//	Lost soul attack. Fly at the player like a missile.
//
//==========================================================================

#define	SKULLSPEED		700.0

void A_SkullAttack(mobj_t *actor)
{
    if (!actor->target)
		return;
		
    actor->flags |= MF_SKULLFLY;

    StartSound(actor, actor->sound_attack);
    A_FaceTarget(actor);
	actor->velocity = Normalize(MobjCenter(actor->target) - actor->origin) * SKULLSPEED;
}

