// DATA DECLARATIONS -------------------------------------------------------

int numbraintargets;
int braintargeton;
int brain_easy = 0;
mobj_t *braintargets[32];

// CODE --------------------------------------------------------------------

//==========================================================================
//
//  Actor::A_BrainAwake
//
//  Init boss spawner.
//
//==========================================================================

void Actor::A_BrainAwake(void)
{
	mobj_t *m;

	// find all the target spots
	numbraintargets = 0;
	m = NULL;
	while ((m = NextMobj(m)))
	{
		if (m->Class == BossTarget)
		{
			braintargets[numbraintargets] = m;
			numbraintargets++;
		}
	}
	braintargeton = 0;

	StartSoundName(NULL, 'BossSight', CHAN_VOICE);
}

//==========================================================================
//
//  Actor::A_BrainSpit
//
//  Spawn a cube.
//
//==========================================================================

void Actor::A_BrainSpit(void)
{
	mobj_t *targ;
	mobj_t *newmobj;

	brain_easy ^= 1;
	if (gameskill <= sk_easy && (!brain_easy))
		return;

	// shoot a cube at current target
	targ = braintargets[braintargeton];
	braintargeton = (braintargeton + 1) % numbraintargets;

	// spawn brain missile
	newmobj = SpawnMissile(this, targ, SpawnShot);
	newmobj->target = targ;
	newmobj->ReactionCount = ftoi((targ->origin.y - origin.y) /
		newmobj->velocity.y / newmobj->time);

	StartSoundName(NULL, 'BossFire', CHAN_WEAPON);
}

