//==========================================================================
//
//  Actor::A_SpidRefire
//
//  Spider mastermind refire.
//
//==========================================================================

void Actor::A_SpidRefire(void)
{
	// keep firing unless target got out of sight
	A_FaceTarget();

	if (P_Random() < 10)
		return;

	if (!target || target->Health <= 0 || !P_CheckSight(this, target))
	{
		SetMobjState(this, SeeState);
	}
}

