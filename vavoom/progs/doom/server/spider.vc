//==========================================================================
//
//  Actor::A_SpidRefire
//
//  Spider mastermind refire.
//
//==========================================================================

void Actor::A_SpidRefire(void)
{
	// keep firing unless target got out of sight
	A_FaceTarget();

	if (P_Random() < 10)
		return;

	if (!Target || Target.Health <= 0 || !P_CheckSight(self, Target))
	{
		SetState(SeeState);
	}
}

