//==========================================================================
//
//  Actor::A_BruisAttack
//
//  Hell knight, Baron of hell attack.
//
//==========================================================================

void Actor::A_BruisAttack(void)
{
	int damage;

	if (!target)
		return;

	if (CheckMeleeRange())
	{
		PlaySound('ImpAttack', CHAN_WEAPON);
		damage = (P_Random() % 8 + 1) * 10;
		target->Damage(self, self, damage);
		return;
	}

	// launch a missile
	SpawnMissile(this, target, BruiserShot);
}

