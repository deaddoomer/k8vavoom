//==========================================================================
//
//  A_BruisAttack
//
//  Hell knight, Baron of hell attack.
//
//==========================================================================

void A_BruisAttack(mobj_t * actor)
{
	int damage;

	if (!actor->target)
		return;

	if (P_CheckMeleeRange(actor))
	{
		StartSoundName(actor, "ImpAttack", CHAN_WEAPON);
		damage = (P_Random() % 8 + 1) * 10;
		actor->target->Damage(actor, actor, damage);
		return;
	}

	// launch a missile
	SpawnMissile(actor, actor->target, MT_BRUISERSHOT);
}

