class HellKnight : BaronOfHell
	game(GAME_Doom)
	__mobjinfo__(69)
	__scriptid__(113);

//==========================================================================
//
//	GetSpecies
//
//==========================================================================

class<EntityEx> GetSpecies()
{
	return BaronOfHell;
}

states
{
Spawn:
	BOS2 AB 10 A_Look
	Loop
See:
	BOS2 AABBCCDD 3 A_Chase
	Loop
Melee:
Missile:
	BOS2 EF 8 A_FaceTarget
	BOS2 G 8 A_BruisAttack
	Goto See
Pain:
	BOS2 H 2
	BOS2 H 2 A_Pain
	Goto See
Death:
	BOS2 I 8
	BOS2 J 8 A_Scream
	BOS2 K 8
	BOS2 L 8 A_Fall
	BOS2 MN 8
	BOS2 O -1
	Stop
Raise:
	BOS2 ONMLKJI 8
	Goto See
}

defaultproperties
{
	Health = 500;
	SightSound = 'knight/sight';
	ActiveSound = 'knight/active';
	PainSound = 'knight/pain';
	DeathSound = 'knight/death';
	Obituary = "$ob_knight";
	HitObituary = "$ob_knighthit";
}
