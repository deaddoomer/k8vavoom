class WolfSS : ChaingunGuy
	__mobjinfo__(84)
	__scriptid__(116);

//==========================================================================
//
//	DropStuff
//
//==========================================================================

void DropStuff()
{
	Actor A;

	A = Spawn(ItemAmmoBulletClip, vector(Origin.x, Origin.y, FloorZ));
	A.bDropped = true;	// special versions of items
}

defaultproperties
{
	Health = 50;
	GibsHealth = -50;
	IdleState = S_SSWV_STND;
	SeeState = S_SSWV_RUN1;
	MissileState = S_SSWV_ATK1;
	PainState = S_SSWV_PAIN;
	DeathState = S_SSWV_DIE1;
	GibsDeathState = S_SSWV_XDIE1;
	RaiseState = S_SSWV_RAISE1;
	SightSound = 'wolfss/sight';
	ActiveSound = 'wolfss/active';
	PainSound = 'wolfss/pain';
	DeathSound = 'wolfss/death';
}
