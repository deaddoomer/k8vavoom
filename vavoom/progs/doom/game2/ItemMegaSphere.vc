class ItemMegaSphere : Pickup
	__mobjinfo__(83)
	__scriptid__(132);

const int MEGASPHERE_HEALTH		= 200;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	Toucher.Player.Health = MEGASPHERE_HEALTH;
	Toucher.Health = Toucher.Player.Health;
	Player(Toucher.Player).GiveArmor(2);
	Toucher.Player.cprint(PickupMessage);
	Toucher.PlaySound('misc/p_pkup', CHAN_ITEM);
	return true;
}

__states__
{
	S_MEGA('MEGA', 0 | FF_FULLBRIGHT, 6.0 / 35.0, S_MEGA2) { }
	S_MEGA2('MEGA', 1 | FF_FULLBRIGHT, 6.0 / 35.0, S_MEGA3) { }
	S_MEGA3('MEGA', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_MEGA4) { }
	S_MEGA4('MEGA', 3 | FF_FULLBRIGHT, 6.0 / 35.0, S_MEGA) { }
}

defaultproperties
{
	Alpha = 0.666;
	bCountItem = true;
	IdleState = S_MEGA;
	PickupMessage = "MegaSphere!";
}
