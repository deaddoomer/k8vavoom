class ArmorPickup : Pickup
	abstract;

int ArmorClass;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	if (!Player(Toucher.Player).GiveArmor(ArmorClass))
		return false;
	Toucher.Player.cprint(PickupMessage);
	Toucher.PlaySound('misc/i_pkup', CHAN_ITEM);
	return true;
}

defaultproperties
{
}
