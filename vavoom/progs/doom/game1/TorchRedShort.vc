class TorchRedShort : Decoration
	__mobjinfo__(57);

void OnMapSpawn(mthing_t *mthing)
{
	::OnMapSpawn(mthing);
	Level.AddStaticLightRGB(Origin + vector(0.0, 0.0, 16.0),
		mthing->arg1 ? itof(mthing->arg1) * 8.0 : 200.0, RGB(255, 0, 0));
}

void Tick(float DeltaTime)
{
	ModelSkinIndex = ftoi(level->time * 32.0) & 7;
	::Tick(DeltaTime);
}

__states__
{
	S_RTORCHSHRT('SMRT', 0 | FF_FULLBRIGHT, 'lights/stickred.md2', 0, 4.0 / 35.0, S_RTORCHSHRT2) { }
	S_RTORCHSHRT2('SMRT', 1 | FF_FULLBRIGHT, 'lights/stickred.md2', 1, 4.0 / 35.0, S_RTORCHSHRT3) { }
	S_RTORCHSHRT3('SMRT', 2 | FF_FULLBRIGHT, 'lights/stickred.md2', 2, 4.0 / 35.0, S_RTORCHSHRT4) { }
	S_RTORCHSHRT4('SMRT', 3 | FF_FULLBRIGHT, 'lights/stickred.md2', 3, 4.0 / 35.0, S_RTORCHSHRT) { }
}

defaultproperties
{
	Radius = 16.0;
	Height = 40.0;
	bSolid = true;
	IdleState = S_RTORCHSHRT;
}

