class PlasmaRifle : WeaponEx
	__mobjinfo__(2004)
	__scriptid__(30);

//===========================================================================
//
//  A_FirePlasma
//
//===========================================================================

final void A_FirePlasma()
{
	DecAmmo(1);
	if (!(P_Random() & 1))
		Owner.Player.SetViewState(ps_flash, FlashState);
	else
		Owner.Player.SetViewState(ps_flash, S_PLASMAFLASH2);
	Actor(Owner).SpawnPlayerMissile(PlasmaBall);
}

__states__
{
	S_PLASMA('PLSG', 0, 1.0 / 35.0, S_PLASMA) = A_WeaponReady
	S_PLASMADOWN('PLSG', 0, 1.0 / 35.0, S_PLASMADOWN) = A_Lower
	S_PLASMAUP('PLSG', 0, 1.0 / 35.0, S_PLASMAUP) = A_Raise
	S_PLASMA1('PLSG', 0, 3.0 / 35.0, S_PLASMA2) = A_FirePlasma
	S_PLASMA2('PLSG', 1, 20.0 / 35.0, S_PLASMA) = A_ReFire
	S_PLASMAFLASH1('PLSF', 0 | FF_FULLBRIGHT, 4.0 / 35.0, S_LIGHTDONE) = A_Light1
	S_PLASMAFLASH2('PLSF', 1 | FF_FULLBRIGHT, 4.0 / 35.0, S_LIGHTDONE) = A_Light1
	S_PLAS('PLAS', 0, -1.0, none) = none
}

defaultproperties
{
	WeaponType = DoomDefs::wp_plasma;
	Slot = 6;
	SelectionOrder = 100;
	AmmoType = Cell;
	PlayerModelVersion = 6;
	PickupMessage = "$gotplasma";
	IdleState = S_PLAS;
	UpState = S_PLASMAUP;
	DownState = S_PLASMADOWN;
	ReadyState = S_PLASMA;
	AttackState = S_PLASMA1;
	FlashState = S_PLASMAFLASH1;
}
