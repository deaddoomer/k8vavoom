class PlasmaRifle : DoomWeapon
	__mobjinfo__(2004)
	__scriptid__(30);

//===========================================================================
//
//  A_FirePlasma
//
//===========================================================================

final void A_FirePlasma()
{
	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;
	if (Wpn)
	{
		if (!Wpn.DepleteAmmo(, 1))
		{
			return;
		}
		if (!(P_Random() & 1))
		{
			Player.SetViewState(ps_flash, Wpn.FindState('Flash'));
		}
		else
		{
			Player.SetViewState(ps_flash, GetStatePlus(Wpn.FindState('Flash'), 1));
		}
	}
	SpawnPlayerMissile(PlasmaBall);
}

states
{
Ready:
	PLSG A 1 A_WeaponReady
	Loop
Deselect:
	PLSG A 1 A_Lower
	Loop
Select:
	PLSG A 1 A_Raise
	Loop
Fire:
	PLSG A 3 A_FirePlasma
	PLSG B 20 A_ReFire
	Goto Ready
Flash:
	PLSF A 4 Bright A_Light1
	Goto Super::LightDone
	PLSF B 4 Bright A_Light1
	Goto Super::LightDone
Spawn:
	PLAS A -1
	Stop
}

defaultproperties
{
	Slot = 6;
	SelectionOrder = 100;
	AmmoType1 = Cell;
	AmmoUse1 = 1;
	AmmoGive1 = 40;
	PlayerModelVersion = 6;
	PickupMessage = "$gotplasma";
	BotCombatDist = 384.0;
	bBotProjectile = true;
}
