class DoomImpBall : Actor
	__scriptid__(10);

void OnMapSpawn(mthing_t* mthing)
{
	::OnMapSpawn(mthing);
	if (Level.Game.fastparm)
		Speed = 700.0;
}

states
{
Spawn:
	BAL1 AB 4 Bright
	Loop
Death:
	BAL1 CDE 6 Bright
	Stop
}

defaultproperties
{
	Radius = 6.0;
	Height = 8.0;
	Speed = 350.0;
	MissileDamage = 3;
	Alpha = 0.666;
	bMissile = true;
	bNoBlockmap = true;
	bNoGravity = true;
	bDropOff = true;
	bActivatePCross = true;
	bNoTeleport = true;
	bRandomise = true;
	SightSound = 'imp/attack';
	DeathSound = 'imp/shotx';
	bDynamicLight = true;
	DLightColour = RGB(215, 95, 11);
	DLightRadius = 200.0;
}
