class ZombieMan : Actor
	__mobjinfo__(3004)
	__scriptid__(4);

//==========================================================================
//
//  A_PosAttack
//
//  Zombieman attack.
//
//==========================================================================

final void A_PosAttack()
{
	int damage;
	TVec dir;

	if (!Target)
		return;

	A_FaceTarget();

	AimLineAttack(dir, Angles, MISSILERANGE);
	VectorRotateAroundZ(&dir, (Random() - Random()) * 45.0 / 2.0);

	PlaySound('grunt/attack', CHAN_WEAPON);

	damage = ((P_Random() % 5) + 1) * 3;

	LineAttack(dir, MISSILERANGE, damage, BulletPuff);

	bMuzzleFlash = true;
}

//==========================================================================
//
//	NoBlockingSet
//
//==========================================================================

void NoBlockingSet()
{
	DropItem(Clip, 0, 1.0);
}

states
{
Spawn:
	POSS AB 10 A_Look
	Loop
See:
	POSS AABBCCDD 4 A_Chase
	Loop
Missile:
	POSS E 10 A_FaceTarget
	POSS F 8 A_PosAttack
	POSS E 8
	Goto See
Pain:
	POSS G 3
	POSS G 3 A_Pain
	Goto See
Death:
	POSS H 5
	POSS I 5 A_Scream
	POSS J 5 A_Fall
	POSS K 5
	POSS L -1
	Stop
XDeath:
	POSS M 5
	POSS N 5 A_XScream
	POSS O 5 A_Fall
	POSS PQRST 5
	POSS U -1
	Stop
Raise:
	POSS KJIH 5
	Goto See
}

