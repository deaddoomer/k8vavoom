class Cyberdemon : Actor
	__mobjinfo__(16)
	__scriptid__(114);

//==========================================================================
//
//  A_Hoof
//
//  Cyberdemon move with hoof sound.
//
//==========================================================================

final void A_Hoof()
{
	PlaySound('cyber/hoof', CHAN_BODY);
	A_Chase();
}

//==========================================================================
//
//  A_CyberAttack
//
//  Cyberdemon attack.
//
//==========================================================================

final void A_CyberAttack()
{
	if (!Target)
		return;

	A_FaceTarget();
	SpawnMissile(Target, Rocket);
}

states
{
Spawn:
	CYBR AB 10 A_Look
	Loop
See:
	CYBR A 3 A_Hoof
	CYBR ABBCC 3 A_Chase
	CYBR D 3 A_Metal
	CYBR D 3 A_Chase
	Loop
Missile:
	CYBR E 6 A_FaceTarget
	CYBR F 12 A_CyberAttack
	CYBR E 12 A_FaceTarget
	CYBR F 12 A_CyberAttack
	CYBR E 12 A_FaceTarget
	CYBR F 12 A_CyberAttack
	Goto See
Pain:
	CYBR G 10 A_Pain
	Goto See
Death:
	CYBR H 10
	CYBR I 10 A_Scream
	CYBR JKL 10
	CYBR M 10 A_Fall
	CYBR NO 10
	CYBR P 30
	CYBR P -1 A_BossDeath
	Stop
}

defaultproperties
{
	Health = 4000;
	Radius = 40.0;
	Height = 110.0;
	Mass = 1000.0;
	Speed = 16.0 * 35.0;
	PainChance = 0.078125;
	MissileChance = 160.0;
	bSolid = true;
	bShootable = true;
	bCountKill = true;
	bMonster = true;
	bActivateMCross = true;
	bActivatePushWall = true;
	bBoss = true;
	bTriggerHappy = true;
	bFloorClip = true;
	bNoRadiusDamage = true;
	bPassMobj = true;
	SightSound = 'cyber/sight';
	ActiveSound = 'cyber/active';
	PainSound = 'cyber/pain';
	DeathSound = 'cyber/death';
}
