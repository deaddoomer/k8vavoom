class EvilEye : Decoration
	__mobjinfo__(41);

void OnMapSpawn(mthing_t *mthing)
{
	::OnMapSpawn(mthing);
	Level.AddStaticLight(Origin + vector(0.0, 0.0, 32.0),
		mthing->arg1 ? itof(mthing->arg1) * 8.0 : 128.0);
}

__states__
{
	S_EVILEYE('CEYE', 0 | FF_FULLBRIGHT, 'objects/evileye.md2', 0, 6.0 / 35.0, S_EVILEYE2) { }
	S_EVILEYE2('CEYE', 1 | FF_FULLBRIGHT, 'objects/evileye.md2', 1, 6.0 / 35.0, S_EVILEYE3) { }
	S_EVILEYE3('CEYE', 2 | FF_FULLBRIGHT, 'objects/evileye.md2', 2, 6.0 / 35.0, S_EVILEYE4) { }
	S_EVILEYE4('CEYE', 1 | FF_FULLBRIGHT, 'objects/evileye.md2', 3, 6.0 / 35.0, S_EVILEYE) { }
}

defaultproperties
{
	Radius = 16.0;
	Height = 16.0;
	bSolid = true;
	IdleState = S_EVILEYE;
}

