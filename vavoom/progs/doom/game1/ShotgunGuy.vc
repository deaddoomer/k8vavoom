	Health = 30;
	GibsHealth = -30;
	Radius = 20.0;
	Height = 56.0;
	Mass = 100.0;
	StepSpeed = 8.0;
	PainChance = 0.6640625;
	bSolid = true;
	bShootable = true;
	bCountKill = true;
	bMonster = true;
	bActivateMCross = true;
	bActivatePushWall = true;
	bFloorClip = true;
	DLightColour = RGB(195, 79, 0);
	DLightRadius = 118.0;
	SightSound = 'shotguy/sight';
	ActiveSound = 'shotguy/active';
	PainSound = 'shotguy/pain';
	DeathSound = 'shotguy/death';
}
