class ShotgunGuy : Actor
	__mobjinfo__(9)
	__scriptid__(1);

//==========================================================================
//
//	NoBlockingSet
//
//==========================================================================

void NoBlockingSet()
{
	DropItem(Shotgun, 0, 1.0);
}

states
{
Spawn:
	SPOS AB 10 A_Look
	Loop
See:
	SPOS AABBCCDD 3 A_Chase
	Loop
Missile:
	SPOS E 10 A_FaceTarget
	SPOS F 10 Bright A_SPosAttack
	SPOS E 10
	Goto See
Pain:
	SPOS G 3
	SPOS G 3 A_Pain
	Goto See
Death:
	SPOS H 5
	SPOS I 5 A_Scream
	SPOS J 5 A_Fall
	SPOS K 5
	SPOS L -1
	Stop
XDeath:
	SPOS M 5
	SPOS N 5 A_XScream
	SPOS O 5 A_Fall
	SPOS PQRST 5
	SPOS U -1
	Stop
Raise:
	SPOS LKJIH 5
	Goto See
}

