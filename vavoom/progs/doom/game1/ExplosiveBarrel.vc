class ExplosiveBarrel : Actor
	__mobjinfo__(2035)
	__scriptid__(125);

//==========================================================================
//
//	PreExplode
//
//==========================================================================

void PreExplode()
{
	RenderStyle = STYLE_Translucent;
	Alpha = 0.5;
}

states
{
Spawn:
	BAR1 AB 6
	Loop
Death:
	BEXP A 5 Bright
	BEXP B 5 Bright A_Scream
	BEXP C 5 Bright
	BEXP D 10 Bright A_Explode
	BEXP E 10 Bright
	Stop
}

defaultproperties
{
	Health = 20;
	Radius = 10.0;
	Height = 42.0;
	bSolid = true;
	bShootable = true;
	bNoBlood = true;
	bFloorClip = true;
	bExplodeParticles = true;
	DeathSound = 'world/barrelx';
	DLightColour = RGB(203, 87, 7);
}
