class TorchGreen : Decoration
	__mobjinfo__(45);

void OnMapSpawn(mthing_t *mthing)
{
	::OnMapSpawn(mthing);
	AddStaticLightRGB(Origin + vector(0.0, 0.0, 32.0),
		mthing->arg1 ? itof(mthing->arg1) * 8.0 : 200.0, RGB(0, 255, 0));
}

void Tick(float DeltaTime)
{
	ModelSkinIndex = ftoi(level->time * 32.0) & 7;
	::Tick(DeltaTime);
}

__states__
{
	S_GREENTORCH('TGRN', 0 | FF_FULLBRIGHT, 'lights/torchgrn.md2', 0, 4.0 / 35.0, S_GREENTORCH2) { }
	S_GREENTORCH2('TGRN', 1 | FF_FULLBRIGHT, 'lights/torchgrn.md2', 1, 4.0 / 35.0, S_GREENTORCH3) { }
	S_GREENTORCH3('TGRN', 2 | FF_FULLBRIGHT, 'lights/torchgrn.md2', 2, 4.0 / 35.0, S_GREENTORCH4) { }
	S_GREENTORCH4('TGRN', 3 | FF_FULLBRIGHT, 'lights/torchgrn.md2', 3, 4.0 / 35.0, S_GREENTORCH) { }
}

defaultproperties
{
	Radius = 16.0;
	Height = 64.0;
	bSolid = true;
	IdleState = S_GREENTORCH;
}

