class Candelabra:Decoration
	__mobjinfo__(35);

void OnMapSpawn(mthing_t *mthing)
{
	::OnMapSpawn(mthing);
	AddStaticLight(Origin + vector(0.0, 0.0, 32.0),
		mthing->arg1 ? itof(mthing->arg1) * 8.0 : 128.0);
}

__states__
{
	S_CANDELABRA('CBRA', 0 | FF_FULLBRIGHT, 'lights/candabra.md2', 0, -1.0, S_NULL) { }
}

defaultproperties
{
	Radius = 16.0;
	Height = 56.0;
	bSolid = true;
	IdleState = S_CANDELABRA;
}

