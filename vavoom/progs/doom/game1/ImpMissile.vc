class ImpMissile : Projectile
	__scriptid__(10);

void OnMapSpawn(mthing_t* mthing)
{
	::OnMapSpawn(mthing);
	if (Level.Game.fastparm)
		Speed = 700.0;
}

__states__
{
	S_TBALL1('BAL1', 0 | FF_FULLBRIGHT, 4.0 / 35.0, S_TBALL2) { }
	S_TBALL2('BAL1', 1 | FF_FULLBRIGHT, 4.0 / 35.0, S_TBALL1) { }
	S_TBALLX1('BAL1', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_TBALLX2) { }
	S_TBALLX2('BAL1', 3 | FF_FULLBRIGHT, 6.0 / 35.0, S_TBALLX3) { }
	S_TBALLX3('BAL1', 4 | FF_FULLBRIGHT, 6.0 / 35.0, none) { }
}

defaultproperties
{
	Radius = 6.0;
	Height = 8.0;
	Speed = 350.0;
	MissileDamage = 3;
	Translucency = 33;
	IdleState = S_TBALL1;
	DeathState = S_TBALLX1;
	SightSound = 'imp/attack';
	DeathSound = 'imp/shotx';
	Effects = DoomDefs::EF_DL_RBALL;
}
