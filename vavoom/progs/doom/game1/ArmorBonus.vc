class ArmorBonus : Inventory
	__mobjinfo__(2015)
	__scriptid__(22);

//==========================================================================
//
//	TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	BasicArmor Armor = BasicArmor(Toucher.FindInventory(BasicArmor));
	Armor.Amount++;	// can go over 100%
	if (Armor.Amount > 200)
		Armor.Amount = 200;
	if (!Armor.SavePercent)
		Armor.SavePercent = 1.0 / 3.0;
	GoAwayAndDie();
	return true;
}

__states__
{
	S_BON2('BON2', 0, 6.0 / 35.0, S_BON2A) = none
	S_BON2A('BON2', 1, 6.0 / 35.0, S_BON2B) = none
	S_BON2B('BON2', 2, 6.0 / 35.0, S_BON2C) = none
	S_BON2C('BON2', 3, 6.0 / 35.0, S_BON2D) = none
	S_BON2D('BON2', 2, 6.0 / 35.0, S_BON2E) = none
	S_BON2E('BON2', 1, 6.0 / 35.0, S_BON2) = none
}

defaultproperties
{
	bCountItem = true;
	IdleState = S_BON2;
	PickupMessage = "$gotarmbonus";
}
