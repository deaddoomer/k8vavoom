class Shotgun : DoomWeapon
	__mobjinfo__(2001)
	__scriptid__(27);

//===========================================================================
//
//  A_FireShotgun
//
//===========================================================================

final void A_FireShotgun()
{
	int i;
	TVec dir;

	Owner.PlaySound('weapons/shotgf', CHAN_WEAPON);
	Owner.SetState(DoomPlayer::S_PLAY_ATK2);

	DecAmmo(1);

	Owner.Player.SetViewState(ps_flash, FlashState);

	Actor(Owner).Aim(dir, 16.0 * 64.0);
	for (i = 0; i < 7; i++)
	{
		GunShot(Actor(Owner), false, dir);
	}
	Owner.Effects |= EF_DL_MUZZLEFLASH;
}

