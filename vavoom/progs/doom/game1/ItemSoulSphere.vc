class ItemSoulSphere : Pickup
	__mobjinfo__(2013)
	__scriptid__(25);

const int SOULSPHERE_MAX		= 200;
const int SOULSPHERE_HEALTH		= 100;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	Toucher.Player.Health += SOULSPHERE_HEALTH;
	if (Toucher.Player.Health > SOULSPHERE_MAX)
		Toucher.Player.Health = SOULSPHERE_MAX;
	Toucher.Health = Toucher.Player.Health;
	Toucher.Player.cprint(PickupMessage);
	Toucher.PlaySound('misc/p_pkup', CHAN_ITEM);
	return true;
}

__states__
{
	S_SOUL('SOUL', 0 | FF_FULLBRIGHT, 6.0 / 35.0, S_SOUL2) { }
	S_SOUL2('SOUL', 1 | FF_FULLBRIGHT, 6.0 / 35.0, S_SOUL3) { }
	S_SOUL3('SOUL', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_SOUL4) { }
	S_SOUL4('SOUL', 3 | FF_FULLBRIGHT, 6.0 / 35.0, S_SOUL5) { }
	S_SOUL5('SOUL', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_SOUL6) { }
	S_SOUL6('SOUL', 1 | FF_FULLBRIGHT, 6.0 / 35.0, S_SOUL) { }
}

defaultproperties
{
	Alpha = 0.666;
	bCountItem = true;
	IdleState = S_SOUL;
	PickupMessage = "Supercharge!";
}
