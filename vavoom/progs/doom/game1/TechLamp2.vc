class TechLamp2 : Decoration
	__mobjinfo__(86);

void OnMapSpawn(mthing_t *mthing)
{
	::OnMapSpawn(mthing);
	Level.AddStaticLight(Origin + vector(0.0, 0.0, 48.0),
		mthing->arg1 ? itof(mthing->arg1) * 8.0 : 200.0);
}

__states__
{
	S_TECH2LAMP('TLP2', 0 | FF_FULLBRIGHT, 'lights/techlmp2.md2', 0, 4.0 / 35.0, S_TECH2LAMP2) { }
	S_TECH2LAMP2('TLP2', 1 | FF_FULLBRIGHT, 'lights/techlmp2.md2', 1, 4.0 / 35.0, S_TECH2LAMP3) { }
	S_TECH2LAMP3('TLP2', 2 | FF_FULLBRIGHT, 'lights/techlmp2.md2', 2, 4.0 / 35.0, S_TECH2LAMP4) { }
	S_TECH2LAMP4('TLP2', 3 | FF_FULLBRIGHT, 'lights/techlmp2.md2', 3, 4.0 / 35.0, S_TECH2LAMP) { }
}

defaultproperties
{
	Radius = 16.0;
	Height = 56.0;
	bSolid = true;
	IdleState = S_TECH2LAMP;
}

