class Chaingun : DoomWeapon
	__mobjinfo__(2002)
	__scriptid__(28);

//===========================================================================
//
//  A_FireCGun
//
//===========================================================================

final void A_FireCGun()
{
	TVec dir;

	Owner.PlaySound('weapons/chngun', CHAN_WEAPON);

	if (!DepleteAmmo(, 1))
	{
		return;
	}

	Owner.SetState(DoomPlayer::S_PLAY_ATK2);

	if (Owner.Player.ViewStates[ps_weapon].State == GetAttackState(false))
	{
		Owner.Player.SetViewState(ps_flash, FindState('Flash'));
	}
	else
	{
		Owner.Player.SetViewState(ps_flash, FindState('Flash2'));
	}

	Actor(Owner).Aim(dir, 16.0 * 64.0);
	GunShot(Actor(Owner), !Player(Owner.Player).Refire, dir);
	EntityEx(Owner).bMuzzleFlash = true;
	EntityEx(Owner).DLightColour = RGB(195, 79, 0);
}

states
{
Ready:
	CHGG A 1 A_WeaponReady
	Loop
Deselect:
	CHGG A 1 A_Lower
	Loop
Select:
	CHGG A 1 A_Raise
	Loop
Fire:
	CHGG A 4 A_FireCGun
	CHGG B 4 A_FireCGun
	CHGG B 0 A_ReFire
	Goto Ready
Flash:
	CHGF A 5 Bright A_Light1
	Goto Super::LightDone
Flash2:
	CHGF B 5 Bright A_Light2
	Goto Super::LightDone
Spawn:
	MGUN A -1
	Stop
}

defaultproperties
{
	Slot = 4;
	SelectionOrder = 700;
	AmmoType1 = Clip;
	AmmoUse1 = 1;
	AmmoGive1 = 20;
	PlayerModelVersion = 4;
	PickupMessage = "$gotchaingun";
	BotCombatDist = 256.0;
}
