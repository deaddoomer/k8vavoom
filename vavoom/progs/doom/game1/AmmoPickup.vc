class AmmoPickup : Pickup
	abstract;

int AmmoType;
int AmmoCount;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	if (bDropped)
	{
		if (!Player(Toucher.Player).GiveAmmo(AmmoType, AmmoCount / 2))
			return false;
	}
	else
	{
		if (!Player(Toucher.Player).GiveAmmo(AmmoType, AmmoCount))
			return false;
	}
	cprint(Toucher.Player, PickupMessage);
	Toucher.PlaySound('misc/i_pkup', CHAN_ITEM);
	return true;
}

defaultproperties
{
}

