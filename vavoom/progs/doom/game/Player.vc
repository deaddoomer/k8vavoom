//  BringUpWeapon
//
//  Starts bringing the pending weapon up from the bottom of the screen.
// Uses player
//
//===========================================================================

void BringUpWeapon()
{
	if (ReadyWeapon.WeaponType == DoomDefs::wp_chainsaw)
		MO.PlaySound('weapons/sawup', CHAN_WEAPON);

	PendingWeapon = none;
	ViewStates[ps_weapon].SY = WeaponEx::WEAPONBOTTOM;

	SetViewState(ps_weapon, WeaponEx(ViewEnt).UpState);
	MO.ModelVersion = WeaponEx(ViewEnt).PlayerModelVersion;
}

