{
	WeaponEx NewWpn = WeaponEx(GetSlotChangeWeapon(newweapon + 1, ReadyWeapon, false));
	if (NewWpn && NewWpn != ReadyWeapon)
	{
		PendingWeapon = NewWpn;
	}
}

