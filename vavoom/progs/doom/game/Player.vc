//==========================================================================
//
//  MovePsprites
//
//  Called every tic by player thinking routine.
//
//==========================================================================

void MovePsprites()
{
	int i;
	ViewEntity e;

	for (i = 0; i < NUMPSPRITES; i++)
	{
		e = ViewEnts[i];
		// a null state means not active
		if (e.State)
		{
			// drop tic count and possibly change state

			// a -1 tic count never changes
			if (e.StateTime != -1.0)
			{
				e.StateTime -= Level.Game.frametime;
				if (e.StateTime <= 0.0)
				{
					e.StateTime = 0.0;
					SetPsprite(i, e.NextState);
				}
			}
		}
	}

	ViewEnts[ps_flash].SX = ViewEnts[ps_weapon].SX;
	ViewEnts[ps_flash].SY = ViewEnts[ps_weapon].SY;
}

//==========================================================================
//
//  CheckAmmo
//
//  Returns true if there is enough ammo to shoot.
// If not, selects the next weapon to use.
//
//==========================================================================

int CheckAmmo()
{
	int ammo;
	int count;

	ammo = Weapon(ViewEnts[ps_weapon]).Ammo;

#ifdef DDF
	count = Weapon(ViewEnts[ps_weapon]).AmmoPerShot;
#else
	// Minimal amount for one shot varies.
	if (ReadyWeapon == DoomDefs::wp_bfg)
		count = MainGameInfo(Level.Game).BFGCELLS;
#ifdef DOOM2
	else if (ReadyWeapon == DoomDefs::wp_supershotgun)
		count = 2;	// Double barrel.
#endif
	else
		count = 1;	// Regular.
#endif

	// Some do not need ammunition anyway.
	// Return if current ammunition sufficient.
	if (ammo == DoomDefs::am_noammo || Ammo[ammo] >= count)
		return true;

	// Out of ammo, pick a weapon to change to.
	// Preferences are set here.
	do
	{
#ifndef DOOM2
		if (WeaponOwned[DoomDefs::wp_plasma] && Ammo[DoomDefs::am_cell] && (!MainGameInfo(Level.Game).shareware))
#else
		if (WeaponOwned[DoomDefs::wp_plasma] && Ammo[DoomDefs::am_cell])
#endif
		{
			PendingWeapon = DoomDefs::wp_plasma;
		}
#ifdef DOOM2
		else if (WeaponOwned[DoomDefs::wp_supershotgun] && Ammo[DoomDefs::am_shell] > 2)
		{
			PendingWeapon = DoomDefs::wp_supershotgun;
		}
#endif
		else if (WeaponOwned[DoomDefs::wp_chaingun] && Ammo[DoomDefs::am_clip])
		{
			PendingWeapon = DoomDefs::wp_chaingun;
		}
		else if (WeaponOwned[DoomDefs::wp_shotgun] && Ammo[DoomDefs::am_shell])
		{
			PendingWeapon = DoomDefs::wp_shotgun;
		}
		else if (Ammo[DoomDefs::am_clip])
		{
			PendingWeapon = DoomDefs::wp_pistol;
		}
		else if (WeaponOwned[DoomDefs::wp_chainsaw])
		{
			PendingWeapon = DoomDefs::wp_chainsaw;
		}
		else if (WeaponOwned[DoomDefs::wp_missile] && Ammo[DoomDefs::am_misl])
		{
			PendingWeapon = DoomDefs::wp_missile;
		}
#ifdef DOOM2
		else if (WeaponOwned[DoomDefs::wp_bfg] && Ammo[DoomDefs::am_cell] > MainGameInfo(Level.Game).BFGCELLS)
#else
		else if (WeaponOwned[DoomDefs::wp_bfg] && Ammo[DoomDefs::am_cell] > MainGameInfo(Level.Game).BFGCELLS &&
			(!MainGameInfo(Level.Game).shareware))
#endif
		{
			PendingWeapon = DoomDefs::wp_bfg;
		}
		else
		{
			// If everything fails.
			PendingWeapon = DoomDefs::wp_fist;
		}
	}
	while (PendingWeapon == DoomDefs::wp_nochange);

	// Now set appropriate weapon overlay.
	SetPsprite(ps_weapon, Weapon(ViewEnts[ps_weapon]).DownState);

	return false;
}

