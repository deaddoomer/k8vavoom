	if (Cmd_CheckParm("Armor"))
		i1 |= GIMME_ARMOR;
	if (Cmd_CheckParm("Armor2"))
		i1 |= GIMME_ARMOR2;

	// Weapons
	if (i1 & GIMME_SHOTGUN)
		WeaponOwned[DoomDefs::wp_shotgun] = true;
	if (i1 & GIMME_CHAINGUN)
		WeaponOwned[DoomDefs::wp_chaingun] = true;
	if (i1 & GIMME_LAUNCHER)
		WeaponOwned[DoomDefs::wp_missile] = true;
	if (i1 & GIMME_PLASMA)
		WeaponOwned[DoomDefs::wp_plasma] = true;
	if (i1 & GIMME_BFG)
		WeaponOwned[DoomDefs::wp_bfg] = true;
	if (i1 & GIMME_CHAINSAW)
		WeaponOwned[DoomDefs::wp_chainsaw] = true;
#ifdef DOOM2
	if (i1 & GIMME_SUPERSHOTGUN)
		WeaponOwned[DoomDefs::wp_supershotgun] = true;
#endif
#ifdef GRENADE_LAUNCHER
	if (i1 & GIMME_GRENADE)
		WeaponOwned[DoomDefs::wp_grenade] = true;
#endif

	// Backpack
	if (i1 & GIMME_BACKPACK)
		Backpack = true;

	// Ammo
	if (i1 & GIMME_BULLETS)
		Ammo[DoomDefs::am_clip] = MainGameInfo(Level.Game).maxammo[DoomDefs::am_clip] * (Backpack ? 2 : 1);
	if (i1 & GIMME_SHELLS)
		Ammo[DoomDefs::am_shell] = MainGameInfo(Level.Game).maxammo[DoomDefs::am_shell] * (Backpack ? 2 : 1);
	if (i1 & GIMME_ROCKETS)
		Ammo[DoomDefs::am_misl] = MainGameInfo(Level.Game).maxammo[DoomDefs::am_misl] * (Backpack ? 2 : 1);
	if (i1 & GIMME_CELLS)
		Ammo[DoomDefs::am_cell] = MainGameInfo(Level.Game).maxammo[DoomDefs::am_cell] * (Backpack ? 2 : 1);

	// Keys
	if (i1 & GIMME_BLUECARD)
		Keys |= 1 << it_bluecard;
	if (i1 & GIMME_YELLOWCARD)
		Keys |= 1 << it_yellowcard;
	if (i1 & GIMME_REDCARD)
		Keys |= 1 << it_redcard;
	if (i1 & GIMME_BLUESKULL)
		Keys |= 1 << it_blueskull;
	if (i1 & GIMME_YELLOWSKULL)
		Keys |= 1 << it_yellowskull;
	if (i1 & GIMME_REDSKULL)
		Keys |= 1 << it_redskull;

	// Powers
	if (i1 & GIMME_INVULNERABILITY)
