//==========================================================================
//
//  ArmorAbsorbDamage
//
//==========================================================================

int ArmorAbsorbDamage(EntityEx inflictor, EntityEx source, int damage,
	name DmgType)
{
	int saved;

	if (ArmorType)
	{
		if (ArmorType == 1)
			saved = damage / 3;
		else
			saved = damage / 2;

		if (ArmorPoints <= saved)
		{
			// armor is used up
			saved = ArmorPoints;
			ArmorType = 0;
		}
		ArmorPoints -= saved;
		damage -= saved;
	}
	return damage;
}

