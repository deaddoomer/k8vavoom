	MO.SetState(Actor(MO).MeleeState);
	SetPsprite(ps_weapon, Weapon(ViewEnts[ps_weapon]).AttackState);
	DoomLevelInfo(Level).NoiseAlert(Actor(MO), Actor(MO));
}

