void ClientGunShot(TVec org)
{
	int i;
	particle_t *p;
	int c;

	for (i = 0; i < 20; i++)
	{
		p = Level.NewParticle();
		if (!p)
			return;

		p->org = org;
		c = P_Random() >> 1;
		p->colour = RGB(c, c, c);
		p->die = Level.XLevel.Time + 0.5 * Random();
		p->vel.x = 32.0 * (Random() - 0.5);
		p->vel.y = 32.0 * (Random() - 0.5);
		p->vel.z = 32.0 * (Random() - 0.5);
		p->type = LineSpecialLevelInfo::pt_static;
	}
}

