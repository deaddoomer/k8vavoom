	}
}

//==========================================================================
//
//  DeathPlayerTick
//
//  Fall on your face when dying. Decrease POV height to floor height.
//
//==========================================================================

void DeathPlayerTick(float deltaTime)
{
	float angle;
	float delta;

	MovePsprites();

	if (MO.WaterLevel > 1)
	{
		MO.Velocity.z = -60.0;	// drift towards bottom
	}

	// fall to the ground
	if (ViewHeight > 6.0)
		ViewHeight -= 1.0;

	if (ViewHeight < 6.0)
		ViewHeight = 6.0;

	DeltaViewHeight = 0.0;
	CalcHeight(deltaTime);

	if (Attacker && Attacker != MO)
	{
		angle = atan2(Attacker.Origin.y - MO.Origin.y,
			Attacker.Origin.x - MO.Origin.x);

		delta = AngleMod180(angle - ViewAngles.yaw);

		if (delta < 5.0 || delta > -5.0)
		{
			// Looking at killer,
			//  so fade damage flash down.
			ViewAngles.yaw = angle;

			if (DamageFlash)
			{
				DamageFlash -= deltaTime;
				if (DamageFlash <= 0.0)
					DamageFlash = 0.0;
			}
		}
		else if (delta > 0.0)
			ViewAngles.yaw += 5.0;
		else
			ViewAngles.yaw -= 5.0;
	}
	else if (DamageFlash)
	{
		DamageFlash -= deltaTime;
		if (DamageFlash <= 0.0)
			DamageFlash = 0.0;
	}

	if (Buttons & BT_USE)
		PlayerState = PST_REBORN;
}

//==========================================================================
//
//  PrevWeapon
//
//==========================================================================

void PrevWeapon()
{
	int			i;
	int			CurIdx;
	int			NewWeap;

	CurIdx = 0;
	for (i = 0; i < DoomDefs::NUMWEAPONS; i++)
	{
		if (ReadyWeapon == MainGameInfo(Level.Game).WeaponOrder[i])
		{
			CurIdx = i;
			break;
		}
	}
	for (i = DoomDefs::NUMWEAPONS - 1; i > 0; i--)
	{
		NewWeap = MainGameInfo(Level.Game).WeaponOrder[(CurIdx + i) % DoomDefs::NUMWEAPONS];
#ifdef DOOM2
		if (WeaponOwned[NewWeap])
#else
		if (WeaponOwned[NewWeap] && ((NewWeap != DoomDefs::wp_plasma &&
			NewWeap != DoomDefs::wp_bfg) || !MainGameInfo(Level.Game).shareware))
#endif
		{
			PendingWeapon = NewWeap;
			return;
		}
	}
}

//==========================================================================
//
//  NextWeapon
//
//==========================================================================

void NextWeapon()
{
	int			i;
	int			CurIdx;
	int			NewWeap;

	CurIdx = 0;
	for (i = 0; i < DoomDefs::NUMWEAPONS; i++)
	{
		if (ReadyWeapon == MainGameInfo(Level.Game).WeaponOrder[i])
		{
			CurIdx = i;
			break;
		}
	}
	for (i = 1; i < DoomDefs::NUMWEAPONS; i++)
	{
		NewWeap = MainGameInfo(Level.Game).WeaponOrder[(CurIdx + i) % DoomDefs::NUMWEAPONS];
#ifdef DOOM2
