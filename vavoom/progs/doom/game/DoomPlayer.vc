class DoomPlayer : PlayerPawn;

states
{
Spawn:
	PLAY A -1
	Stop
See:
	PLAY ABCD 4
	Loop
Missile:
	PLAY E 12
	Goto Spawn
Melee:
	PLAY F 6 Bright
	Goto Missile
Pain:
	PLAY G 4
	PLAY G 4 A_Pain
	Goto Spawn
Death:
	PLAY H 10
	PLAY I 10 A_PlayerScream
	PLAY J 10 A_Fall
	PLAY KLM 10
	PLAY N -1
	Stop
XDeath:
	PLAY O 5
	PLAY P 5 A_XScream
	PLAY Q 5 A_Fall
	PLAY RSTUV 5
	PLAY W -1
	Stop
}

defaultproperties
{
	Health = 100;
	Radius = 16.0;
	Height = 56.0;
	TranslStart = 112;
	TranslEnd = 127;
	DisplayName = "Marine";

	DropItemList.Num = 3;
	DropItemList[0].Type = Clip; DropItemList[0].Amount = 50;
	DropItemList[1].Type = Fist; DropItemList[1].Amount = 1;
	DropItemList[2].Type = Pistol; DropItemList[2].Amount = 1;
}
