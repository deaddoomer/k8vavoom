{
	Player.MO.PlaySound('weapons/sshotc', CHAN_WEAPON);
	A_ReFire();
}

//===========================================================================
//
//  A_FireCGun
//
//===========================================================================

void A_FireCGun()
{
	TVec dir;

	Player.MO.PlaySound('weapons/chngun', CHAN_WEAPON);

	if (!Player.Ammo[Ammo])
		return;

	Player.MO.SetState(Player.MO.MissileState);
	Player.Ammo[Ammo]--;

	Player.SetPsprite(ps_flash, FlashState + StateNum - AttackState);//S_CHAIN1);

	dir = Player.MO.Aim(16.0 * 64.0);
	GunShot(Player.MO, !Player.Refire, dir);
	Player.MO.Effects |= EF_DL_MUZZLEFLASH;
}

//===========================================================================
//
//  A_FireMissile
//
//===========================================================================

void A_FireMissile()
{
	Player.Ammo[Ammo]--;
	Player.SpawnPlayerMissile(Rocket);
}

//===========================================================================
//
//  A_FirePlasma
//
//===========================================================================

void A_FirePlasma()
{
	Player.Ammo[Ammo]--;

	Player.SetPsprite(ps_flash, FlashState + (P_Random() & 1));

	Player.SpawnPlayerMissile(PlasmaShot);
}

//===========================================================================
//
//  A_BFGsound
//
//===========================================================================

void A_BFGsound()
{
	Player.MO.PlaySound('weapons/bfgf', CHAN_WEAPON);
}

//===========================================================================
//
//  A_FireBFG
//
//===========================================================================

void A_FireBFG()
{
	Player.Ammo[Ammo] -= BFGCELLS;
	Player.SpawnPlayerMissile(BFGShot);
}

