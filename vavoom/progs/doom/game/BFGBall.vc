class BFGBall : ScriptedEntity
	game(GAME_Doom)
	__scriptid__(128);

states
{
Spawn:
	BFS1 AB 4 Bright
	Loop
Death:
	BFE1 AB 8 Bright
	BFE1 C 8 Bright A_BFGSpray
	BFE1 DEF 8 Bright
	Stop
}

defaultproperties
{
	Radius = 13.0;
	Height = 8.0;
	Speed = 875.0;
	MissileDamage = 100;
	RenderStyle = STYLE_Add;
	Alpha = 0.666;
	bMissile = true;
	bNoBlockmap = true;
	bNoGravity = true;
	bDropOff = true;
	bActivatePCross = true;
	bActivateImpact = true;
	bNoTeleport = true;
	bRandomise = true;
	DeathSound = 'weapons/bfgx';
	Obituary = "$ob_mpbfg_boom";
}
