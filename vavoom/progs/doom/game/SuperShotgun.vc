class SuperShotgun : DoomWeapon
	game(GAME_Doom)
	__mobjinfo__(82)
	__scriptid__(33);

states
{
Ready:
	SHT2 A 1 A_WeaponReady
	Loop
Deselect:
	SHT2 A 1 A_Lower
	Loop
Select:
	SHT2 A 1 A_Raise
	Loop
Fire:
	SHT2 A 3
	SHT2 A 7 A_FireShotgun2
	SHT2 B 7
	SHT2 C 7 A_CheckReload
	SHT2 D 7 A_OpenShotgun2
	SHT2 E 7
	SHT2 F 7 A_LoadShotgun2
	SHT2 G 6
	SHT2 H 6 A_CloseShotgun2
	SHT2 A 5 A_ReFire
	Goto Ready
Unused:
	SHT2 B 7
	SHT2 A 3
	Goto Deselect
Flash:
	SHT2 I 5 Bright A_Light1
	SHT2 J 4 Bright A_Light2
	Goto Super::LightDone
Spawn:
	SGN2 A -1
	Stop
}

defaultproperties
{
	SelectionOrder = 400;
	AmmoType1 = Shell;
	AmmoUse1 = 2;
	AmmoGive1 = 8;
	PlayerModelVersion = 9;
	PickupMessage = "$gotshotgun2";
	BotCombatDist = 128.0;
	Obituary = "$ob_mpsshotgun";
}
