class GC : Object
	native;

readonly ClipRect ClipRect;

void DrawIcon(int X, int Y, int Handle)
{
	R_DrawPic(X + ftoi(ClipRect.OriginX), Y + ftoi(ClipRect.OriginY), Handle);
}

void DrawText(int X, int Y, string Text)
{
	T_DrawText(X + ftoi(ClipRect.OriginX), Y + ftoi(ClipRect.OriginY), Text);
}

void DrawFullScreenPic(int Handle)
{
	SetVirtualScreen(320, 200);
	R_DrawPic(0, 0, Handle);
	SetVirtualScreen(640, 480);
}

defaultproperties
{
}
