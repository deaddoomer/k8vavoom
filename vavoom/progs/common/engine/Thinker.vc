void Tick(float deltaTime)
{
}

//==========================================================================
//
//	ClientTick
//
//==========================================================================

void ClientTick(float DeltaTime)
{
}

//==========================================================================
//
//	GET_SPAC
//
//==========================================================================

final int GET_SPAC(int Flags)
{
	return (Flags & ML_SPAC_MASK) >> ML_SPAC_SHIFT;
}

defaultproperties
{
	Role = ROLE_Authority;
	RemoteRole = ROLE_DumbProxy;
}
