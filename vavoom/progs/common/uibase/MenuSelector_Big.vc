class MenuSelector_Big : Widget;

int NumFrames;
int selector_pics[8];
int Speed;
float Time;

//==========================================================================
//
//	GetClGame
//
//==========================================================================

ClientGameShared GetClGame()
{
	return MenuScreen(Parent).ClGame;
}

void OnCreate()
{
	int i;

	::OnCreate();
	bTickEnabled = true;
	Disable();
	for (i = 0; i < GetClGame().BigSelectorAnimFrames.Num; i++)
	{
		selector_pics[i] = R_RegisterPic(GetClGame().BigSelectorAnimFrames[i]);
	}
	NumFrames = GetClGame().BigSelectorAnimFrames.Num;
	Speed = GetClGame().BigSelectorAnimSpeed;
}

void Tick(float DeltaTime)
{
	Time += DeltaTime;
}

void OnDraw()
{
	DrawPic(0, 0, selector_pics[ftoi(Time * itof(Speed)) % NumFrames]);
}

void SetOrigin(int X, int Y)
{
	SetPos(X + GetClGame().BigSelectorXOffset,
		Y + GetClGame().BigSelectorYOffset);
}

defaultproperties
{
	Width = 320;
	Height = 200;
}
