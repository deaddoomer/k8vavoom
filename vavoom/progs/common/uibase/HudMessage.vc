class HudMessage : Widget;

string		Message;
float		HoldTime;

//==========================================================================
//
//	AddHudMessage
//
//==========================================================================

void Init(string AMessage, int Type, int Id, int Colour, string ColourName,
	float MsgX, float MsgY, float AHoldTime, float Time1, float Time2)
{
	Message = AMessage;
	HoldTime = AHoldTime;

	print("HUD Message %s", Message);
	print("Args %d %d %d %s %f %f %f %f %f", Type, Id, Colour, ColourName, MsgX, MsgY, HoldTime, Time1, Time2);
}

//==========================================================================
//
//	OnDraw
//
//==========================================================================

void OnDraw()
{
	DrawText(100, 100, Message);
}

//==========================================================================
//
//	Tick
//
//==========================================================================

void Tick(float DeltaTime)
{
	HoldTime -= DeltaTime;
	if (HoldTime <= 0.0)
	{
		Destroy();
	}
}

defaultproperties
{
	Width = 640;
	Height = 480;
	bTickEnabled = true;
}
