class Chaingun : DoomWeapon
	game(GAME_Doom)
	__mobjinfo__(2002)
	__scriptid__(28);

states
{
Ready:
	CHGG A 1 A_WeaponReady
	Loop
Deselect:
	CHGG A 1 A_Lower
	Loop
Select:
	CHGG A 1 A_Raise
	Loop
Fire:
	CHGG A 4 A_FireCGun
	CHGG B 4 A_FireCGun
	CHGG B 0 A_ReFire
	Goto Ready
Flash:
	CHGF A 5 Bright A_Light1
	Goto Super::LightDone
	CHGF B 5 Bright A_Light2
	Goto Super::LightDone
Spawn:
	MGUN A -1
	Stop
}

defaultproperties
{
	SelectionOrder = 700;
	AmmoType1 = Clip;
	AmmoUse1 = 1;
	AmmoGive1 = 20;
	PlayerModelVersion = 4;
	PickupMessage = "$gotchaingun";
	BotCombatDist = 256.0;
	Obituary = "$ob_mpchaingun";
}
