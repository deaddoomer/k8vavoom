class Chaingun : DoomWeapon
	game(GAME_Doom)
	__mobjinfo__(2002)
	__scriptid__(28);

//===========================================================================
//
//  A_FireCGun
//
//===========================================================================

final void A_FireCGun() self(Actor)
{
	TVec dir;

	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	PlaySound('weapons/chngun', CHAN_WEAPON);

	if (Wpn)
	{
		if (!Wpn.DepleteAmmo(, 1))
		{
			return;
		}

		if (Player.ViewStates[ps_weapon].State == Wpn.GetAttackState(false))
		{
			Player.SetViewState(ps_flash, Wpn.FindState('Flash'));
		}
		else
		{
			Player.SetViewState(ps_flash, GetStatePlus(Wpn.FindState('Flash'), 1));
		}
	}

	SetState(MeleeState);

	Aim(dir, 16.0 * 64.0);
	DoomWeapon(Wpn).GunShot(self, !PlayerEx(Player).Refire, dir);
}

states
{
Ready:
	CHGG A 1 A_WeaponReady
	Loop
Deselect:
	CHGG A 1 A_Lower
	Loop
Select:
	CHGG A 1 A_Raise
	Loop
Fire:
	CHGG A 4 A_FireCGun
	CHGG B 4 A_FireCGun
	CHGG B 0 A_ReFire
	Goto Ready
Flash:
	CHGF A 5 Bright A_Light1
	Goto Super::LightDone
	CHGF B 5 Bright A_Light2
	Goto Super::LightDone
Spawn:
	MGUN A -1
	Stop
}

defaultproperties
{
	Slot = 4;
	SelectionOrder = 700;
	AmmoType1 = Clip;
	AmmoUse1 = 1;
	AmmoGive1 = 20;
	PlayerModelVersion = 4;
	PickupMessage = "$gotchaingun";
	BotCombatDist = 256.0;
	Obituary = "$ob_mpchaingun";
}
