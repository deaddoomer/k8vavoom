class Shotgun : DoomWeapon
	game(GAME_Doom)
	__mobjinfo__(2001)
	__scriptid__(27);

//===========================================================================
//
//  A_FireShotgun
//
//===========================================================================

final void A_FireShotgun() self(Actor)
{
	int i;
	TVec dir;

	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	PlaySound('weapons/shotgf', CHAN_WEAPON);
	SetState(MeleeState);

	if (Wpn)
	{
		if (!Wpn.DepleteAmmo(, 1))
		{
			return;
		}

		Player.SetViewState(ps_flash, Wpn.FindState('Flash'));
	}

	Aim(dir, 16.0 * 64.0);
	for (i = 0; i < 7; i++)
	{
		DoomWeapon(Wpn).GunShot(self, false, dir);
	}
}

states
{
Ready:
	SHTG A 1 A_WeaponReady
	Loop
Deselect:
	SHTG A 1 A_Lower
	Loop
Select:
	SHTG A 1 A_Raise
	Loop
Fire:
	SHTG A 3
	SHTG A 7 A_FireShotgun
	SHTG BC 5
	SHTG D 4
	SHTG CB 5
	SHTG A 3
	SHTG A 7 A_ReFire
	Goto Ready
Flash:
	SHTF A 4 Bright A_Light1
	SHTF B 3 Bright A_Light2
	Goto Super::LightDone
Spawn:
	SHOT A -1
	Stop
}

defaultproperties
{
	Slot = 3;
	SelectionOrder = 1300;
	AmmoType1 = Shell;
	AmmoUse1 = 1;
	AmmoGive1 = 8;
	PlayerModelVersion = 3;
	PickupMessage = "$gotshotgun";
	BotCombatDist = 192.0;
	Obituary = "$ob_mpshotgun";
}
