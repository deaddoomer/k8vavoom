class Shotgun : DoomWeapon
	game(GAME_Doom)
	__mobjinfo__(2001)
	__scriptid__(27);

states
{
Ready:
	SHTG A 1 A_WeaponReady
	Loop
Deselect:
	SHTG A 1 A_Lower
	Loop
Select:
	SHTG A 1 A_Raise
	Loop
Fire:
	SHTG A 3
	SHTG A 7 A_FireShotgun
	SHTG BC 5
	SHTG D 4
	SHTG CB 5
	SHTG A 3
	SHTG A 7 A_ReFire
	Goto Ready
Flash:
	SHTF A 4 Bright A_Light1
	SHTF B 3 Bright A_Light2
	Goto Super::LightDone
Spawn:
	SHOT A -1
	Stop
}

defaultproperties
{
	SelectionOrder = 1300;
	AmmoType1 = Shell;
	AmmoUse1 = 1;
	AmmoGive1 = 8;
	PlayerModelVersion = 3;
	PickupMessage = "$gotshotgun";
	BotCombatDist = 192.0;
	Obituary = "$ob_mpshotgun";
}
