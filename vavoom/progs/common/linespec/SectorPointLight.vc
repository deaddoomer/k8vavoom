class SectorPointLight : DynamicLight
	__mobjinfo__(9803);

bool bScaleLight;

//==========================================================================
//
//	Activate
//
//==========================================================================

bool Activate()
{
	bScaleLight = true;
	return true;
}

//==========================================================================
//
//	Deactivate
//
//==========================================================================

bool Deactivate()
{
	bScaleLight = false;
	return true;
}

//==========================================================================
//
//	BeginPlay
//
//==========================================================================

void BeginPlay()
{
	::BeginPlay();

	if (!bDormant)
	{
		bScaleLight = true;
	}
}

//==========================================================================
//
//	Clamp
//
//	Clamps in to the range [min,max].
//
//==========================================================================

float Clamp (float in, float min, float max)
{
	return in <= min ? min : in >= max ? max : in;
}

//==========================================================================
//
//	ClientTick
//
//==========================================================================

void ClientTick(float deltaTime)
{
	::ClientTick(deltaTime);

	if (bScaleLight)
	{
		float rad;
		float scale = itof(Args[3]) / 8.0;
		
		if (scale < 1.0)
			scale = 1.0;

		rad = itof(Sector->params.lightlevel) * scale;
		rad = Clamp(rad, 0.0, 255.0);
		
		Intensity = rad;

		dlight_t*dl = AllocDlight(self);
		dl->origin = Origin;
		dl->colour = RGB(Args[0], Args[1], Args[2]);
		dl->die = Level.XLevel.Time + 0.01;
		dl->radius = Intensity < 16.0 ? Intensity * 8.0 : Intensity;
	}
}

