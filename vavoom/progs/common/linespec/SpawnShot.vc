class SpawnShot : Actor;

states
{
Spawn:
	BOSF A 3 Bright A_SpawnSound
	BOSF BCD 3 Bright A_SpawnFly
	Loop
}

defaultproperties
{
	Radius = 6.0;
	Height = 32.0;
	Speed = 350.0;
	MissileDamage = 3;
	bMissile = true;
	bNoBlockmap = true;
	bNoGravity = true;
	bDropOff = true;
	bActivatePCross = true;
	bNoTeleport = true;
	bColideWithThings = false;
	bColideWithWorld = false;
	bRandomise = true;
	SightSound = 'brain/spit';
	DeathSound = 'brain/cubeboom';
}
