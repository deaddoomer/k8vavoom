	A.Damage(none, none, 16, '');
	A.Velocity.x += 7.8125 * cos(A.Angles.yaw + 180.0) * 35.0;
	A.Velocity.y += 7.8125 * sin(A.Angles.yaw + 180.0) * 35.0;
