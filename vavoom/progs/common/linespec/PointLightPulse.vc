class PointLightPulse : DynamicLight
	__mobjinfo__(9801);

float			LightTime;

//==========================================================================
//
//	Activate
//
//==========================================================================

bool Activate()
{
	bDormant = false;
	LightTime = 0.0;
	return true;
}

//==========================================================================
//
//	Deactivate
//
//==========================================================================

bool Deactivate()
{
	bDormant = true;
	return true;
}

//==========================================================================
//
//	BeginPlay
//
//==========================================================================

void BeginPlay()
{
	::BeginPlay();

	if (!bDormant)
	{
		Activate();
	}
}

//==========================================================================
//
//	ClientTick
//
//==========================================================================

void ClientTick(float deltaTime)
{
	::ClientTick(deltaTime);

	if (bDormant)
	{
		return;
	}

	LightTime += deltaTime;
	if (LightTime >= Angles.yaw / 35.0)
	{
		LightTime = 0.0;
	}

	float step = itof(Args[4]) - itof(Args[3]);
	float mult = sin(360.0 * LightTime / (Angles.yaw / 35.0));
	mult = (mult + 1.0) / 2.0;
	Intensity = itof(Args[3]) + (step * mult);

	dlight_t* dl = AllocDlight(self);
	dl->origin = Origin;
	dl->colour = RGB(Args[0], Args[1], Args[2]);
	dl->die = Level.XLevel.Time + 0.01;
	dl->radius = IntensityToRadius(Intensity);
}

