// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

class MenuScreenSound:MenuScreen
{
	menuslider_t sound;
	menuslider_t music;
	menuswitch_t stereo;
	menuswitch_t cdmusic;
	menutext_t title;

	defaultproperties
	{
	}
}

// FUNCTION PROTOTYPES -----------------------------------------------------

// DATA DECLARATIONS -------------------------------------------------------

MenuScreenSound SoundMenu;

// CODE --------------------------------------------------------------------

//==========================================================================
//
//  sound_func
//
//==========================================================================

void sound_func(menucommon_t * item, int msg)
{
	if (msg != MMSG_ACTIVATE)
	{
		return;
	}

	switch (item->id)
	{
	case 1:
		SetCvar("sfx_volume", SoundMenu.sound.value);
		break;

	case 2:
		SetCvar("music_volume", SoundMenu.music.value);
		break;

	case 3:
		SetCvar("swap_stereo", SoundMenu.stereo.value);
		break;

	case 4:
		SetCvar("use_cd_music", SoundMenu.cdmusic.value);
		break;
	}
}

//==========================================================================
//
//  menu_sound
//
//==========================================================================

void menu_sound(void)
{
	int x = 160;
	int y = 37;

	SoundMenu = MenuScreenSound(SpawnMenu(MenuScreenSound));

	MenuSlider_Init(&SoundMenu.sound, x, y, "Sound volume", TEXT_SMALLR,
		GetCvar("sfx_volume"), 16);
	SoundMenu.sound.callback = sound_func;
	SoundMenu.sound.id = 1;
	MenuItemWrapper(SoundMenu.AddItem(MenuItemWrapper)).item = &SoundMenu.sound;
	y += 20;

	MenuSlider_Init(&SoundMenu.music, x, y, "Music volume", TEXT_SMALLR,
		GetCvar("music_volume"), 16);
	SoundMenu.music.callback = sound_func;
	SoundMenu.music.id = 2;
	MenuItemWrapper(SoundMenu.AddItem(MenuItemWrapper)).item = &SoundMenu.music;
	y += 20;

	MenuSwitch_Init(&SoundMenu.stereo, x, y, "Swap stereo", TEXT_SMALLR,
		GetCvar("swap_stereo"), 2, &sw_offon[0]);
	SoundMenu.stereo.callback = sound_func;
	SoundMenu.stereo.id = 3;
	MenuItemWrapper(SoundMenu.AddItem(MenuItemWrapper)).item = &SoundMenu.stereo;
	y += 10;

	MenuSwitch_Init(&SoundMenu.cdmusic, x, y, "CD Music", TEXT_SMALLR,
		GetCvar("use_cd_music"), 2, &sw_offon[0]);
	SoundMenu.cdmusic.callback = sound_func;
	SoundMenu.cdmusic.id = 4;
	MenuItemWrapper(SoundMenu.AddItem(MenuItemWrapper)).item = &SoundMenu.cdmusic;

	MenuText_InitTitle(&SoundMenu.title, 160, 24, "SOUND SETTINGS",
		TEXT_BIGC);
	MenuItemWrapper(SoundMenu.AddItem(MenuItemWrapper)).item = &SoundMenu.title;

	PushMenuScreen(SoundMenu);
}

