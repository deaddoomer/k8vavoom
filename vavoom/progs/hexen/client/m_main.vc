//==========================================================================
//
//	MenuScreenMain
//
//==========================================================================

class MenuScreenMain:MenuScreen
{
	menubitmap_t logo;
	menuanim_t anim1;
	menuanim_t anim2;

	void Init(void)
	{
		MenuBitmap_Init(&logo, 88, 0, MNF_INACTIVE, "M_HTIC", PIC_PATCH);
		MenuItemWrapper(AddItem(MenuItemWrapper)).item = &logo;

		MenuAnim_Init(&anim1, 37, 80, MNF_INACTIVE, 7, 7, 2, false);
		anim1.pics[0] = R_RegisterPic("FBULA0", PIC_PATCH);
		anim1.pics[1] = R_RegisterPic("FBULB0", PIC_PATCH);
		anim1.pics[2] = R_RegisterPic("FBULC0", PIC_PATCH);
		anim1.pics[3] = R_RegisterPic("FBULD0", PIC_PATCH);
		anim1.pics[4] = R_RegisterPic("FBULE0", PIC_PATCH);
		anim1.pics[5] = R_RegisterPic("FBULF0", PIC_PATCH);
		anim1.pics[6] = R_RegisterPic("FBULG0", PIC_PATCH);
		MenuItemWrapper(AddItem(MenuItemWrapper)).item = &anim1;

		MenuAnim_Init(&anim2, 278, 80, MNF_INACTIVE, 7, 7, 0, false);
		anim2.pics[0] = R_RegisterPic("FBULA0", PIC_PATCH);
		anim2.pics[1] = R_RegisterPic("FBULB0", PIC_PATCH);
		anim2.pics[2] = R_RegisterPic("FBULC0", PIC_PATCH);
		anim2.pics[3] = R_RegisterPic("FBULD0", PIC_PATCH);
		anim2.pics[4] = R_RegisterPic("FBULE0", PIC_PATCH);
		anim2.pics[5] = R_RegisterPic("FBULF0", PIC_PATCH);
		anim2.pics[6] = R_RegisterPic("FBULG0", PIC_PATCH);
		MenuItemWrapper(AddItem(MenuItemWrapper)).item = &anim2;

		if (!local_server)
		{
			Choices[0] = classidNone;
		}

		::Init();
	}

	defaultproperties
	{
		Choices[0] = MenuChoice_SinglePlayer;
		Choices[1] = MenuChoice_Multiplayer;
		Choices[2] = MenuChoice_Options;
		Choices[3] = MenuChoice_Help;
		Choices[4] = MenuChoice_QuitGame;
		ChoicesStartX = 110;
		ChoicesStartY = 56;
		SelectorType = MenuSelector_BigArrow;
	}
}

void menu_main(void)
{
	PushMenuScreen(SpawnMenu(MenuScreenMain));
}

