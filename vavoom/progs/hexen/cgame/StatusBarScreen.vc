			}
		}
		R_DrawPic(50 + cl.curpos * 31, 167, pic_selectbox);
		if (x != 0)
		{
			R_DrawPic(40, 167, pic_invgeml[!(ClGame.level->tictime & 4) ? 0 : 1]);
		}
		if (cl.inventorySlotNum - x > 7)
		{
			R_DrawPic(268, 167, pic_invgemr[!(ClGame.level->tictime & 4) ? 0 : 1]);
		}
	}
	else if (cl.readyArtifact > 0)
	{
		//  Ready artifact
		R_DrawPic2(286, 170, pic_arti[0], 40);
		R_DrawPic(284, 169, pic_arti[cl.readyArtifact]);
		SB_DrawINumber(306, 192, cl.inventory[cl.inv_ptr].count);
	}

	//  Mana
	if (cl.mana[0] == 0)
	{
		// Draw Dim Mana icon
		sb_mana1 = 0;
	}
	else
	{
		sb_mana1 = 1;
	}
	if (cl.mana[1] == 0)
	{
		// Draw Dim Mana icon
		sb_mana2 = 0;
	}
	else
	{
		sb_mana2 = 1;
	}

	// Update mana graphics based upon mana count/weapon type
	readyweapon = (cl.SBFlags & HexenDefs::SBF_WPN_MASK) >> HexenDefs::SBF_WPN_SHIFT;
	if (readyweapon == HexenDefs::WP_FIRST)
	{
		sb_mana1 = 0;
		sb_mana2 = 0;
	}
	else if (readyweapon == HexenDefs::WP_SECOND)
	{
		sb_mana2 = 0;
	}
	else if (readyweapon == HexenDefs::WP_THIRD)
	{
		sb_mana1 = 0;
	}
	else
	{
	}

	SB_DrawMNumber(270, 176, cl.mana[0]);
	SB_DrawMNumber(270, 192, cl.mana[1]);
	R_DrawPic(254, 170, pic_manadim1[sb_mana1]);
	R_DrawPic(254, 186, pic_manadim2[sb_mana2]);
}

//==========================================================================
//
//	SB_DrawIcons
//
//==========================================================================

void SB_DrawIcons()
{
	int frame;

	// Wings of wrath
	if (cl.SBFlags & HexenDefs::SBF_POWER_FLIGHT)
	{
		frame = (ClGame.level->tictime / 3) & 15;
		if (cl.SBFlags & HexenDefs::SBF_IN_FLIGHT)
		{
			if (hitCenterFrame && frame != 15 && frame != 0)
			{
				frame = 15;
			}
			else
			{
				hitCenterFrame = false;
			}
		}
		else
		{
			if (hitCenterFrame || frame == 15 || frame == 0)
			{
				frame = 15;
				hitCenterFrame = true;
			}
		}
		R_DrawPic(20, 19, pic_fly[frame]);
	}

	// Speed Boots
	if (cl.SBFlags & HexenDefs::SBF_POWER_SPEED)
	{
		R_DrawPic(60, 19, pic_boot[(ClGame.level->tictime / 3) & 15]);
	}

	// Defensive power
	if (cl.SBFlags & HexenDefs::SBF_POWER_INVULN)
	{
		R_DrawPic(260, 19, pic_shld[(ClGame.level->tictime / 3) & 15]);
	}

	// Minotaur Active
	if (cl.SBFlags & HexenDefs::SBF_POWER_MINOTAUR)
	{
		R_DrawPic(300, 19, pic_mino[(ClGame.level->tictime / 3) & 15]);
	}
}

