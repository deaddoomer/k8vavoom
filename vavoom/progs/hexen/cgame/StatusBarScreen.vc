//==========================================================================
//
//	SB_DrawBackground
//
//==========================================================================

void SB_DrawBackground()
{
	sb_health = HealthMarker;
	if (sb_health < 0)
	{
		sb_health = 0;
	}
	else if (sb_health > 100)
	{
		sb_health = 100;
	}

	R_DrawPic(0, 134, pic_bar);
	R_DrawPic(28 + (((sb_health * 196) / 100) % 9), 193, pic_chain);
	R_DrawPic(7 + ((sb_health * 11) / 5), 193, pic_lifegem);
	R_DrawPic(0, 193, pic_lfedge);
	R_DrawPic(277, 193, pic_rtedge);
}

//==========================================================================
//
//	SB_DrawNumber9
//
//==========================================================================

void SB_DrawNumber9(int x, int y, int num, int color)
{
	int w = 9;
	int neg = num < 0;

	if (neg)
	{
		num = -num;
	}

	x = x + 27;
    
	// in the special case of 0, you draw 0
	if (!num)
	{
		R_DrawPic(x - w, y, pic_innum[color * 10]);
	}

	// draw the new number
	while (num)
	{
		x -= w;
		R_DrawPic(x, y, pic_innum[color * 10 + num % 10]);
		num /= 10;
	}

	// draw a minus sign if necessary
	if (neg)
	{
		R_DrawPic(x - 8, y, pic_minus);
	}
}

//==========================================================================
//
//	SB_DrawNumber12
//
//==========================================================================

void SB_DrawNumber12(int x, int y, int num)
{
	x = x + 36;
    
	// in the special case of 0, you draw 0
	if (!num)
	{
		R_DrawShadowedPic(x - bignumwidth[0], y, pic_bignum[0]);
	}

	// draw the new number
	while (num)
	{
		x -= bignumwidth[num % 10];
		R_DrawShadowedPic(x, y, pic_bignum[num % 10]);
		num /= 10;
		x -= 3;
	}
}

//==========================================================================
//
//	SB_DrawINumber
//
//==========================================================================

void SB_DrawINumber(int x, int y, int num)
{
	if (num > 1)
	{
		x = x + 8;
    
		// draw the new number
		while (num)
		{
			x -= 4;
			R_DrawPic(x, y, pic_smallinnum[num % 10]);
			num /= 10;
		}
	}
}

//==========================================================================
//
//	SB_DrawMNumber
//
//==========================================================================

void SB_DrawMNumber(int x, int y, int num)
{
	if (num > 0)
	{
		x = x + 12;
    
		// draw the new number
		while (num)
		{
			x -= 4;
			R_DrawPic(x, y, pic_smallinnum[num % 10]);
			num /= 10;
		}
	}
}

//==========================================================================
//
//	SB_DrawMainBar
//
//==========================================================================

void SB_DrawMainBar()
{
	int sb_mana1;
	int sb_mana2;
	int sb_manaVial1;
	int sb_manaVial2;
	int readyweapon;

	SB_DrawBackground();
	R_DrawPic(38, 162, pic_statbar);

	// Frags / health
	if (cl.deathmatch)
	{
		R_DrawPic(38, 162, pic_kills);
		SB_DrawNumber9(40, 176, cl.Frags, 0);
	}
	else
	{
		if (sb_health >= 25)
		{
			SB_DrawNumber9(40, 176, sb_health, 0);
		}
		else
		{
			SB_DrawNumber9(40, 176, sb_health, 1);
		}
	}

	//  Mana
	if (cl.mana[0] == 0)
	{
		// Draw Dim Mana icon
		sb_mana1 = 0;
	}
	else
	{
		sb_mana1 = 1;
	}
	if (cl.mana[1] == 0)
	{
		// Draw Dim Mana icon
		sb_mana2 = 0;
	}
	else
	{
		sb_mana2 = 1;
	}

	// Update mana graphics based upon mana count/weapon type
	readyweapon = (cl.SBFlags & HexenDefs::SBF_WPN_MASK) >> HexenDefs::SBF_WPN_SHIFT;
	if (readyweapon == HexenDefs::WP_FIRST)
	{
		sb_mana1 = 0;
		sb_mana2 = 0;
		sb_manaVial1 = 0;
		sb_manaVial2 = 0;
	}
	else if (readyweapon == HexenDefs::WP_SECOND)
	{
		sb_manaVial1 = 1;
		sb_mana2 = 0;
		sb_manaVial2 = 0;
	}
	else if (readyweapon == HexenDefs::WP_THIRD)
	{
		sb_mana1 = 0;
		sb_manaVial1 = 0;
		sb_manaVial2 = 1;
	}
	else
	{
		sb_manaVial1 = 1;
		sb_manaVial2 = 1;
	}
	SB_DrawMNumber(79, 181, cl.mana[0]);
	SB_DrawMNumber(111, 181, cl.mana[1]);
	R_DrawPic(77, 164, pic_manadim1[sb_mana1]);
	R_DrawPic(110, 164, pic_manadim2[sb_mana2]);
	R_DrawPic(94, 164, pic_manavial1[sb_manaVial1]);
	R_DrawPic(102, 164, pic_manavial2[sb_manaVial2]);
	R_ShadeRect(95, 165, 3, 22 - (22 * cl.mana[0]) / HexenDefs::MAX_MANA, 31);
	R_ShadeRect(103, 165, 3, 22 - (22 * cl.mana[1]) / HexenDefs::MAX_MANA, 31);

	// Ready artifact
	if (cl.ArtifactFlash)
	{
		R_DrawPic(148, 164, pic_artiflash[cl.ArtifactFlash]);
	}
	else if (cl.readyArtifact > 0)
	{
		R_DrawPic(143, 163, pic_arti[cl.readyArtifact]);
		SB_DrawINumber(166, 184, cl.inventory[cl.inv_ptr].count);
	}

	// Weapon Pieces
	if ((cl.SBFlags & HexenDefs::SBF_PIECES_MASK) != HexenDefs::SBF_PIECES_MASK)
	{
		R_DrawPic(190, 162, pic_wpslot);
		if (cl.SBFlags & HexenDefs::SBF_PIECE1)
		{
			R_DrawPic(wppiecex[0], 162, pic_wppiece[0]);
		}
		if (cl.SBFlags & HexenDefs::SBF_PIECE2)
		{
			R_DrawPic(wppiecex[1], 162, pic_wppiece[1]);
		}
		if (cl.SBFlags & HexenDefs::SBF_PIECE3)
		{
			R_DrawPic(wppiecex[2], 162, pic_wppiece[2]);
		}
	}
	else
	{
		R_DrawPic(190, 162, pic_wpfull);
	}

	// Armor
	SB_DrawNumber9(250, 176, cl.TotalArmorPoints, 0);
}

//==========================================================================
//
//	SB_DrawKeyBar
//
//==========================================================================

void SB_DrawKeyBar()
{
	int i;
	int num;

	SB_DrawBackground();
	R_DrawPic(38, 162, pic_keybar);

	//  Keys
	for (i = 0, num = 0; i < HexenDefs::NUMKEYS && num < 5; i++)
	{
		if (cl.SBFlags & (1 << i))
		{
			R_DrawPic(46 + num * 20, 164, pic_key[i]);
			num++;
		}
	}

	//  Armor
	for (i = 0; i < HexenDefs::NUMARMOR; i++)
	{
		R_DrawPic2(150 + 31 * i, 164, pic_armor[i], cl.ArmorPerc[i]);
	}
}

//==========================================================================
//
//	SB_DrawInventoryBar
//
//==========================================================================

void SB_DrawInventoryBar()
{
	int i;
	int x;

	SB_DrawBackground();
	R_DrawPic(38, 162, pic_invbar);

	//  Inventory
	x = cl.inv_ptr - cl.curpos;
	for (i = 0; i < 7; i++)
	{
		if (cl.inventorySlotNum > x + i
			&& cl.inventory[x + i].type != HexenDefs::arti_none)
		{
			R_DrawPic(50 + i * 31, 163, pic_arti[cl.inventory[x + i].type]);
			SB_DrawINumber(71 + i * 31, 185, cl.inventory[x + i].count);
		}
	}

	R_DrawPic(50 + cl.curpos * 31, 163, pic_selectbox);
	if (x != 0)
	{
		R_DrawPic(42, 163, pic_invgeml[!(ClGame.level->tictime & 4) ? 0 : 1]);
	}
	if (cl.inventorySlotNum - x > 7)
	{
		R_DrawPic(269, 163, pic_invgemr[!(ClGame.level->tictime & 4) ? 0 : 1]);
	}
}

