//
//  SetupPsprites
//
//  Called at start of level for each player
//
//==========================================================================

void SetupPsprites()
{
	int i;

	// Remove all psprites
	for (i = 0; i < NUMPSPRITES; i++)
	{
		ViewEnts[i].State = none;
	}
	// Spawn the ready weapon
	BringUpWeapon();
}

//==========================================================================
//
//  MovePsprites
//
//  Called every tic by player thinking routine
//
//==========================================================================

void MovePsprites()
{
	int i;
	ViewEntity e;

	for (i = 0; i < NUMPSPRITES; i++)
	{
		e = ViewEnts[i];
		if (e.State)	// a null state means not active
		{
			// drop tic count and possibly change state
			if (e.StateTime != -1.0)	// a -1 tic count never changes
			{
				e.StateTime -= Level.Game.frametime;
				if (e.StateTime <= 0.0)
				{
					e.StateTime = 0.0;
					e.SetState(e.NextState);
				}
			}
		}
	}
	ViewEnts[ps_flash].SX = ViewEnts[ps_weapon].SX;
	ViewEnts[ps_flash].SY = ViewEnts[ps_weapon].SY;
}

//==========================================================================
//
//  CheckMana
//
//  Returns true if there is enough mana to shoot.  If not, selects the
// next weapon to use.
//
//==========================================================================

bool CheckMana()
{
	int mana;
	int count;

	mana = Weapon(ViewEnts[ps_weapon]).Mana;
	count = WeaponManaUse(PClass, ReadyWeapon);
	if (mana == HexenDefs::MANA_BOTH)
	{
		if (Mana[HexenDefs::MANA_1] >= count && Mana[HexenDefs::MANA_2] >= count)
		{
			return true;
		}
	}
	else if (mana == HexenDefs::MANA_NONE || Mana[mana] >= count)
	{
		return true;
	}
	// out of mana, pick a weapon to change to
	do
	{
		if (WeaponOwned[HexenDefs::WP_THIRD] &&
			Mana[HexenDefs::MANA_2] >= WeaponManaUse(PClass, HexenDefs::WP_THIRD))
		{
			PendingWeapon = HexenDefs::WP_THIRD;
		}
		else if (WeaponOwned[HexenDefs::WP_SECOND] &&
			Mana[HexenDefs::MANA_1] >= WeaponManaUse(PClass, HexenDefs::WP_SECOND))
		{
			PendingWeapon = HexenDefs::WP_SECOND;
		}
		else if (WeaponOwned[HexenDefs::WP_FOURTH] &&
			Mana[HexenDefs::MANA_1] >= WeaponManaUse(PClass, HexenDefs::WP_FOURTH) &&
			Mana[HexenDefs::MANA_2] >= WeaponManaUse(PClass, HexenDefs::WP_FOURTH))
		{
			PendingWeapon = HexenDefs::WP_FOURTH;
		}
		else
		{
			PendingWeapon = HexenDefs::WP_FIRST;
		}
	}
	while (PendingWeapon == HexenDefs::wp_nochange);
	SetPsprite(ps_weapon, Weapon(ViewEnts[ps_weapon]).GetDownState());
	return false;
}

