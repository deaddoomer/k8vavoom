//===========================================================================
//
//	Actor::A_BellReset1
//
//===========================================================================

void Actor::A_BellReset1(void)
{
	flags |= MF_NOGRAVITY;
	height *= 4.0;
}

//===========================================================================
//
//	Actor::A_BellReset2
//
//===========================================================================

void Actor::A_BellReset2(void)
{
	flags |= MF_SHOOTABLE;
	flags &= ~MF_CORPSE;
	health = 5;
}

