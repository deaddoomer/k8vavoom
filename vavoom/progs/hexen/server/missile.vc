//==========================================================================
//
//  SpawnMissileAngle
//
//  Returns NULL if the missile exploded immediately, otherwise returns
// a mobj_t pointer to the missile.
//
//==========================================================================

mobj_t *SpawnMissileAngle(mobj_t * source, classid type, float angle,
	float momz)
{
	float z;
	mobj_t *mo;

	switch (type)
	{
	case MinotaurMissile:	// Minotaur swing attack missile
		z = source->Origin.z + 40.0;
		break;
	case MinotaurFloorFire1:	// Minotaur floor fire missile
		z = ONFLOORZ + source->FloorClip;
		break;
	case IceGuyMissile2:	// Secondary Projectiles of the Ice Guy
		z = source->Origin.z + 3.0;
		break;
	case MageStaffFX2:
		z = source->Origin.z + 40.0;
		break;
	default:
		z = source->Origin.z + 32.0;
		break;
	}
	z -= source->FloorClip;
	mo = P_SpawnMobj(source->Origin.x, source->Origin.y, z, type);
	if (mo->SightSound)
	{
		StartSoundName(*mo, mo->SightSound, CHAN_VOICE);
	}
	mo->target = source;	// Originator
	mo->Angles.yaw = angle;
	mo->Velocity.x = mo->Speed * cos(angle);
	mo->Velocity.y = mo->Speed * sin(angle);
	mo->Velocity.z = momz * 35.0;
	return (CheckMissileSpawn(mo) ? mo : NULL);
}

