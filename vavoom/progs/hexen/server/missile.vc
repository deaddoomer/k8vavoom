//==========================================================================
//
//  P_ExplodeMissile
//
//==========================================================================

boolean P_ExplodeMissile(mobj_t * mo)
{
	mo->Velocity = vector(0.0, 0.0, 0.0);
	if (!mo->SetState(mo->DeathState))
	{
		return false;
	}
	//mo->tics -= P_Random()&3;
	mo->bMissile = false;

	switch (mo->Class)
	{
	case SorcererBall1:
	case SorcererBall2:
	case SorcererBall3:
		StartSoundName(none, 'SorcererBigBallExplode', CHAN_AUTO);
		break;
	case SorcererFX1:
		StartSoundName(none, 'SorcererHeadScream', CHAN_AUTO);
		break;
	default:
		if (mo->DeathSound)
		{
			StartSoundName(*mo, mo->DeathSound, CHAN_VOICE);
		}
		break;
	}
	if (mo->Effects & EF_DLIGHT_MASK)
	{
		MSG_Select(MSG_SV_DATAGRAM);
		MSG_WriteByte(svc_explosion);
		MSG_WriteByte(mo->Effects & EF_DLIGHT_MASK);
		MSG_WriteShort(ftoi(mo->Origin.x));
		MSG_WriteShort(ftoi(mo->Origin.y));
		MSG_WriteShort(ftoi(mo->Origin.z));
		mo->Effects &= ~EF_DLIGHT_MASK;
	}
	return true;
}

