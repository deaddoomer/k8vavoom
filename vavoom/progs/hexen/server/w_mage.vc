	float angle;

	Player->Mana[MANA_1] -=
		WeaponManaUse(Player->PClass, Player->ReadyWeapon);
	Player->Mana[MANA_2] -=
		WeaponManaUse(Player->PClass, Player->ReadyWeapon);
	angle = Player->MO.Angles.yaw;

	MStaffSpawn(angle);
	MStaffSpawn(angle - 5.0);
	MStaffSpawn(angle + 5.0);
	Player->MO.PlaySound('MageStaffFire', CHAN_WEAPON);
	Player->DamageCount = 0;
	Player->BonusCount = 0;
	Player->WeaponPalette = STARTSCOURGEPAL;
