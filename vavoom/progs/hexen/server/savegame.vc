//==========================================================================
//
//  mobj_t::Archive
//
//==========================================================================

void mobj_t::Archive(void)
{
	if (bCorpse)
	{
		Enemy = none;
	}

	switch (Class)
	{
		// Just	SpecialMobj1
	case BishopMissile:
	case HolyFX:
	case Dragon:
	case ThrustFloorUp:
	case ThrustFloorDown:
	case Minotaur:
	case SorcererFX1:
	case MageStaffFX2:
		if (bCorpse)
		{
			SpecialMobj1 = NULL;
		}
		MobjToNum(&SpecialMobj1);
		break;

		// Just specialmobj2
	case LightningFloor:
	case LightningZap:
		if (bCorpse)
		{
			SpecialMobj2 = NULL;
		}
		MobjToNum(&SpecialMobj2);
		break;

		// Both SpecialMobj1 and SpecialMobj2
	case HolyTail:
	case LightningCeiling:
		if (bCorpse)
		{
			SpecialMobj1 = NULL;
			SpecialMobj2 = NULL;
		}
		else
		{
			MobjToNum(&SpecialMobj1);
			MobjToNum(&SpecialMobj2);
		}
		break;

		// Miscellaneous
	case Korax:
		Special1 = 0;	// Searching index
		break;

	default:
		break;
	}
}

//==========================================================================
//
//  mobj_t::Unarchive
//
//==========================================================================

void mobj_t::Unarchive(void)
{
	switch (Class)
	{
		// Just	SpecialMobj1
	case BishopMissile:
	case HolyFX:
	case Dragon:
	case ThrustFloorUp:
	case ThrustFloorDown:
	case Minotaur:
	case SorcererFX1:
		NumToMobj(&SpecialMobj1);
		break;

		// Just special2
	case LightningFloor:
	case LightningZap:
		NumToMobj(&SpecialMobj2);
		break;

		// Both special1 and special2
	case HolyTail:
	case LightningCeiling:
		NumToMobj(&SpecialMobj1);
		NumToMobj(&SpecialMobj2);
		break;

	default:
		break;
	}
}

