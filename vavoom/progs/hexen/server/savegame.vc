	player->Poisoner = NULL;
}

//==========================================================================
//
//  Actor::Archive
//
//==========================================================================

void Actor::Archive(void)
{
	if (bCorpse)
	{
		Enemy = none;
	}

	switch (Class)
	{
		// Just	SpecialMobj1
	case ThrustFloorUp:
	case ThrustFloorDown:
	case Minotaur:
		if (bCorpse)
		{
			_SpecialMobj1 = NULL;
		}
		MobjToNum(&_SpecialMobj1);
		break;

		// Just specialmobj2
	case LightningFloor:
	case LightningCeiling:
	case LightningZap:
		MobjToNum(&SpecialMobj2);
		break;

		// Miscellaneous
	case Korax:
		_Special1 = 0;	// Searching index
		break;

	default:
		break;
	}
}

//==========================================================================
//
//  Actor::Unarchive
//
//==========================================================================

void Actor::Unarchive(void)
{
	switch (Class)
	{
		// Just	SpecialMobj1
	case ThrustFloorUp:
	case ThrustFloorDown:
	case Minotaur:
		NumToMobj(&_SpecialMobj1);
		break;

		// Just special2
	case LightningFloor:
	case LightningCeiling:
	case LightningZap:
		NumToMobj(&SpecialMobj2);
		break;

	default:
		break;
	}
}

