//============================================================================
//
//  Actor::A_EttinAttack
//
//============================================================================

void Actor::A_EttinAttack(void)
{
	if (CheckMeleeRange(this))
	{
		target->Damage(this, this, HITDICE(2));
	}
}

//============================================================================
//
//  Actor::A_DropMace
//
//============================================================================

void Actor::A_DropMace(void)
{
	mobj_t *mo;

	mo = P_SpawnMobj(origin.x, origin.y, origin.z + height / 2.0,
		MT_ETTIN_MACE);
	if (mo)
	{
		mo->velocity.x = (Random() - 0.5) * 8.0 * 35.0;
		mo->velocity.y = (Random() - 0.5) * 8.0 * 35.0;
		mo->velocity.z = (10.0 + Random() * 4.0) * 35.0;
		mo->target = this;
	}
}

