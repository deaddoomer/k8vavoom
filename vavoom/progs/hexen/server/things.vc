//==========================================================================
//
// EV_ThingProjectile
//
//==========================================================================

boolean EV_ThingProjectile(int *args, boolean gravity)
{
	int tid;
	float angle;
	float speed;
	float vspeed;
	classid moType;
	mobj_t *mobj;
	mobj_t *newMobj;
	int searcher;
	boolean success;

	success = false;
	searcher = -1;
	tid = args[0];
	moType = TranslateThingType[args[1]];
	angle = itof(args[2]) * (360.0 / 256.0);
	speed = itof(args[3]) / 8.0;
	vspeed = itof(args[4]) / 8.0;
	while ((mobj = P_FindMobjFromTID(tid, &searcher)) != NULL)
	{
		newMobj = P_SpawnMobj(mobj->origin.x, mobj->origin.y,
			mobj->origin.z, moType);
		if (newMobj->sound_sight)
		{
			StartSound(*newMobj, newMobj->sound_sight, CHAN_VOICE);
		}
		newMobj->target = mobj;	// Originator
		newMobj->angles.yaw = angle;
		newMobj->velocity.x = speed * cos(angle) * 35.0;
		newMobj->velocity.y = speed * sin(angle) * 35.0;
		newMobj->velocity.z = vspeed * 35.0;
		newMobj->bDropped = true;	// Don't respawn
		if (gravity)
		{
			newMobj->bNoGravity = false;
			newMobj->bLowGravity = true;
		}
		if (CheckMissileSpawn(newMobj))
		{
			success = true;
		}
	}
	return success;
}

//==========================================================================
//
// EV_ThingSpawn
//
//==========================================================================

boolean EV_ThingSpawn(int *args, boolean fog)
{
	int tid;
	float angle;
	mobj_t *mobj;
	mobj_t *newMobj;
	mobj_t *fogMobj;
	classid moType;
	int searcher;
	boolean success;

	success = false;
	searcher = -1;
	tid = args[0];
	moType = TranslateThingType[args[1]];
	angle = itof(args[2]) * 360.0 / 256.0;
	while ((mobj = P_FindMobjFromTID(tid, &searcher)) != NULL)
	{
		newMobj =
			P_SpawnMobj(mobj->origin.x, mobj->origin.y, mobj->origin.z,
			moType);
		if (newMobj->bFloatBob)
		{
			newMobj->origin.z = mobj->origin.z - mobj->floorz;
			SetOrigin(newMobj, newMobj->origin);
		}
		if (P_TestMobjLocation(newMobj) == false)
		{
			// Didn't fit
			P_RemoveMobj(newMobj);
		}
		else
		{
			newMobj->angles.yaw = angle;
			if (fog == true)
			{
				fogMobj = P_SpawnMobj(mobj->origin.x, mobj->origin.y,
					mobj->origin.z + TELEFOGHEIGHT, TeleportFog);
				StartSoundName(*fogMobj, 'Teleport', CHAN_VOICE);
			}
			newMobj->bDropped = true;	// Don't respawn
			if (newMobj->bFloatBob)
			{
				newMobj->special1f = newMobj->origin.z - newMobj->floorz;
			}
			success = true;
		}
	}
	return success;
}

//==========================================================================
//
// ActivateThing
//
//==========================================================================

boolean ActivateThing(mobj_t * mobj)
{
	if (mobj->bCountKill)
	{
		// Monster
		if (mobj->bDormant)
		{
			mobj->bDormant = false;
			mobj->time = 0.1;
			return true;
		}
		return false;
	}
	switch (mobj->Class)
	{
	case ZTWinedTorch:
	case ZTWinedTorchUnlit:
		mobj->SetState(S_ZTWINEDTORCH_1);
		StartSoundName(*mobj, 'Ignite', CHAN_VOICE);
		break;
	case ZWallTorch:
	case ZWallTorchUnlit:
		mobj->SetState(S_ZWALLTORCH1);
		StartSoundName(*mobj, 'Ignite', CHAN_VOICE);
		break;
	case ZGemPedestal:
		mobj->SetState(S_ZGEMPEDESTAL2);
		break;
	case ZWingedStatueNoSkull:
		mobj->SetState(S_ZWINGEDSTATUENOSKULL2);
		break;
	case ThrustFloorUp:
	case ThrustFloorDown:
		if (mobj->args[0] == 0)
		{
			StartSoundName(*mobj, 'ThrustSpikeLower', CHAN_VOICE);
			mobj->Translucency = 0;
			if (mobj->args[1])
				mobj->SetState(S_BTHRUSTRAISE1);
			else
				mobj->SetState(S_THRUSTRAISE1);
		}
		break;
	case ZFireBull:
	case ZFireBullUnlit:
		mobj->SetState(S_ZFIREBULL_BIRTH);
		StartSoundName(*mobj, 'Ignite', CHAN_VOICE);
		break;
	case ZBell:
		if (mobj->Health > 0)
		{
			mobj->Damage(none, none, 10);	// 'ring' the bell
		}
		break;
	case ZCauldron:
	case ZCauldronUnlit:
		mobj->SetState(S_ZCAULDRON1);
		StartSoundName(*mobj, 'Ignite', CHAN_VOICE);
		break;
	case FlameSmall:
		StartSoundName(*mobj, 'Ignite', CHAN_VOICE);
		mobj->SetState(S_FLAME_SMALL1);
		break;
	case FlameLarge:
		StartSoundName(*mobj, 'Ignite', CHAN_VOICE);
		mobj->SetState(S_FLAME_LARGE1);
		break;
	case BatSpawner:
		mobj->SetState(S_SPAWNBATS1);
		break;
	default:
		return false;
		break;
	}
	return true;
}

//==========================================================================
//
// EV_ThingActivate
//
//==========================================================================

boolean EV_ThingActivate(int tid)
{
	mobj_t *mobj;
	int searcher;
	boolean success;

	success = false;
	searcher = -1;
	while ((mobj = P_FindMobjFromTID(tid, &searcher)) != NULL)
	{
		if (ActivateThing(mobj) == true)
		{
			success = true;
		}
	}
	return success;
}

//==========================================================================
//
// DeactivateThing
//
//==========================================================================

boolean DeactivateThing(mobj_t * mobj)
{
	if (mobj->bCountKill)
	{
		// Monster
		if (!mobj->bDormant)
		{
			mobj->bDormant = true;
			mobj->time = -1.0;
			return true;
		}
		return false;
	}
	switch (mobj->Class)
	{
	case ZTWinedTorch:
	case ZTWinedTorchUnlit:
		mobj->SetState(S_ZTWINEDTORCH_UNLIT);
		break;
	case ZWallTorch:
	case ZWallTorchUnlit:
		mobj->SetState(S_ZWALLTORCH_U);
		break;
	case ThrustFloorUp:
	case ThrustFloorDown:
		if (mobj->args[0] == 1)
		{
			StartSoundName(*mobj, 'ThrustSpikeRaise', CHAN_VOICE);
			if (mobj->args[1])
				mobj->SetState(S_BTHRUSTLOWER);
			else
				mobj->SetState(S_THRUSTLOWER);
		}
		break;
	case ZFireBull:
	case ZFireBullUnlit:
		mobj->SetState(S_ZFIREBULL_DEATH);
		break;
	case ZCauldron:
	case ZCauldronUnlit:
		mobj->SetState(S_ZCAULDRON_U);
		break;
	case FlameSmall:
		mobj->SetState(S_FLAME_SDORM1);
		break;
	case FlameLarge:
		mobj->SetState(S_FLAME_LDORM1);
		break;
	case BatSpawner:
		mobj->SetState(S_SPAWNBATS_OFF);
		break;
	default:
		return false;
		break;
	}
	return true;
}

//==========================================================================
//
// EV_ThingDeactivate
//
//==========================================================================

boolean EV_ThingDeactivate(int tid)
{
	mobj_t *mobj;
	int searcher;
	boolean success;

	success = false;
	searcher = -1;
	while ((mobj = P_FindMobjFromTID(tid, &searcher)) != NULL)
	{
		if (DeactivateThing(mobj))
		{
			success = true;
		}
	}
	return success;
}

//==========================================================================
//
// EV_ThingRemove
//
//==========================================================================

boolean EV_ThingRemove(int tid)
{
	mobj_t *mobj;
	int searcher;
	boolean success;

	success = false;
	searcher = -1;
	while ((mobj = P_FindMobjFromTID(tid, &searcher)) != NULL)
	{
		if (mobj->Class == Bridge)
		{
			mobj->A_BridgeRemove();
			return true;
		}
		P_RemoveMobj(mobj);
		success = true;
	}
	return success;
}

//==========================================================================
//
// EV_ThingDestroy
//
//==========================================================================

boolean EV_ThingDestroy(int tid)
{
	mobj_t *mobj;
	int searcher;
	boolean success;

	success = false;
	searcher = -1;
	while ((mobj = P_FindMobjFromTID(tid, &searcher)) != NULL)
	{
		if (mobj->bShootable)
		{
			mobj->Damage(none, none, 10000);
			success = true;
		}
	}
	return success;
}

//==========================================================================
//
//	ThingCount
//
//==========================================================================

int ThingCount(int type, int tid)
{
	int count;
	int searcher;
	Actor Ent;
	classid moType;

	if (!(type + tid))
	{
		// Nothing to count
		return 0;
	}
	moType = TranslateThingType[type];
	count = 0;
	searcher = -1;
	if (tid)
	{
		// Count TID things
		while ((Ent = *P_FindMobjFromTID(tid, &searcher)) != none)
		{
			if (type == 0)
			{
				// Just count TIDs
				count++;
			}
			else if (moType == Ent.Class)
			{
				if (Ent.bCountKill && Ent.Health <= 0)
				{
					// Don't count dead monsters
					continue;
				}
				count++;
			}
		}
	}
	else
	{
		// Count only types
		FOREACH(Actor, Ent)
		{
			if (Ent.Class != moType)
			{
				// Doesn't match
				continue;
			}
			if (Ent.bCountKill && Ent.Health <= 0)
			{
				// Don't count dead monsters
				continue;
			}
			count++;
		}
	}
	return count;
}

