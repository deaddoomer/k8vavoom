class KoraxBolt:Fragment
{

#define KORAX_BOLT_HEIGHT			48.0
#define KORAX_BOLT_LIFETIME			3

int LifeTime;

//============================================================================
//
//  A_KBoltRaise
//
//============================================================================

void A_KBoltRaise(void)
{
	Actor A;
	float z;

	// Spawn a child upward
	z = Origin.z + KORAX_BOLT_HEIGHT;

	if (z + KORAX_BOLT_HEIGHT < CeilingZ)
	{
		A = Spawn(KoraxBolt, vector(Origin.x, Origin.y, z));
		if (A)
		{
			KoraxBolt(A).LifeTime = KORAX_BOLT_LIFETIME;
		}
	}
	else
	{
		// Maybe cap it off here
	}
}

//============================================================================
//
//  A_KBolt
//
//============================================================================

void A_KBolt(void)
{
	// Countdown lifetime
	if (LifeTime-- <= 0)
	{
		SetState(S_NULL);
	}
}

