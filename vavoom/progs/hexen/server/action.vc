//==========================================================================
//
//  Actor::A_HideThing
//
//==========================================================================

void Actor::A_HideThing(void)
{
	if (Translucency < 100)
	{
		Translucency += 100;
	}
}

//==========================================================================
//
//  Actor::A_UnHideThing
//
//==========================================================================

void Actor::A_UnHideThing(void)
{
	if (Translucency >= 100)
	{
		Translucency -= 100;
	}
}

//===========================================================================
//
//  Actor::A_NoGravity
//
//===========================================================================

void Actor::A_NoGravity(void)
{
	bNoGravity = true;
}

//============================================================================
//
//  Actor::A_SetInvulnerable
//
//============================================================================

void Actor::A_SetInvulnerable(void)
{
	bInvulnerable = true;
}

//============================================================================
//
//  Actor::A_UnSetInvulnerable
//
//============================================================================

void Actor::A_UnSetInvulnerable(void)
{
	bInvulnerable = false;
}

