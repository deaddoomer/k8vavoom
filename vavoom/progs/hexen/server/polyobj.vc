// ===== Polyobj Event Code =====

// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

enum
{
	PODOOR_NONE,
	PODOOR_SLIDE,
	PODOOR_SWING
};

// TYPES -------------------------------------------------------------------

class PolyobjThinker:Thinker
{
	float thrust_force;
};

class TRotatePoly:PolyobjThinker
{
	int polyobj;
	int rot_dist;
	angle_t rot_speed;//FIXME

	void Think(void);
};

class TMovePoly:PolyobjThinker
{
	int polyobj;
	float speed;
	float dist;
	angle_t angle;

	void Think(void);
};

class TPolyDoor:PolyobjThinker
{
	int type;
	int polyobj;
	float speed;
	float dist;
	int rot_dist;
	angle_t rot_speed;
	float xSpeed;	// for sliding walls
	float ySpeed;
	float totalDist;
	int rot_totalDist;
	float time;
	float waitTime;
	boolean close;

	void Think(void);
};

addfields polyobj_t
{
	PolyobjThinker *specialdata;	// pointer a thinker, if the poly is moving
};

// FUNCTION PROTOTYPES -----------------------------------------------------

void DamageMobj(mobj_t * target, mobj_t * inflictor, mobj_t * source,
	int damage);
boolean P_CheckPosition(mobj_t * thing, float x, float y);

