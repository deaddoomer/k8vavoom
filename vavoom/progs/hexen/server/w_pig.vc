//============================================================================
//
//  Weapon::A_SnoutAttack
//
//============================================================================

void Weapon::A_SnoutAttack(void)
{
	int damage;
	TAVec angles;
	TVec vforward;

	damage = 3 + (P_Random() & 3);
	avcpy(player->mo->angles, angles);
	AimLineAttack(player->mo, &angles, MELEERANGE);
	PuffType = MT_SNOUTPUFF;
	PuffSpawned = NULL;
	AngleVector(&angles, &vforward);
	LineAttack(player->mo, &vforward, MELEERANGE, damage);
	StartSound(player->mo, GetSoundID("PigActive1") + (P_Random() & 1),
		CHAN_VOICE);
	if (linetarget)
	{
		AdjustPlayerAngle(player->mo);
		if (PuffSpawned)
		{
			// Bit something
			StartSoundName(player->mo, "PigAttack", CHAN_VOICE);
		}
	}
}

