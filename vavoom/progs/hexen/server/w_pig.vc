//**************************************************************************
//
//	WeaponPigSnout
//
//**************************************************************************
//**************************************************************************

class WeaponPigSnout:Weapon
{

int SniffState;

//============================================================================
//
//  A_SnoutAttack
//
//============================================================================

void A_SnoutAttack(void)
{
	int damage;
	TAVec angles;
	TVec vforward;

	damage = 3 + (P_Random() & 3);
	avcpy(Player->mo->Angles, angles);
	AimLineAttack(*Player->mo, &angles, MELEERANGE);
	PuffType = SnoutPuff;
	PuffSpawned = none;
	AngleVector(&angles, &vforward);
	LineAttack(*Player->mo, &vforward, MELEERANGE, damage);
	Player->mo->PlaySound((P_Random() & 1) ? 'PigActive2' : 'PigActive1',
		CHAN_VOICE);
	if (linetarget)
	{
		PlayerPawn(*Player->mo).AdjustPlayerAngle();
		if (PuffSpawned)
		{
			// Bit something
			Player->mo->PlaySound('PigAttack', CHAN_VOICE);
		}
	}
}

//==========================================================================
//
//	SnoutSniff
//
//==========================================================================

void SnoutSniff(void)
{
	SetState(SniffState);
}

__states__
{
	S_SNOUTREADY('WPIG', 0, 1.0 / 35.0, S_SNOUTREADY) { A_WeaponReady(); }
	S_SNOUTDOWN('WPIG', 0, 1.0 / 35.0, S_SNOUTDOWN) { A_Lower(); }
	S_SNOUTUP('WPIG', 0, 1.0 / 35.0, S_SNOUTUP) { A_Raise(); }
	S_SNOUTATK1('WPIG', 0, 4.0 / 35.0, S_SNOUTATK2) { A_SnoutAttack(); }
	S_SNOUTATK2('WPIG', 1, 8.0 / 35.0, S_SNOUTREADY) { A_SnoutAttack(); }
	S_SNOUTSNIFF('WPIG', 1, 8.0 / 35.0, S_SNOUTREADY) { }
}

defaultproperties
{
	Mana = MANA_NONE;
	UpState = S_SNOUTUP;
	DownState = S_SNOUTDOWN;
	ReadyState = S_SNOUTREADY;
	AttackState = S_SNOUTATK1;
	HoldAttackState = S_SNOUTATK1;
	SniffState = S_SNOUTSNIFF;
	PSpriteSY = 10.0;
}

}

