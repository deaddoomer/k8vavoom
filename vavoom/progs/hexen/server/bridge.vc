//==========================================================================
//
//  Actor::A_BridgeOrbit
//
//==========================================================================

void Actor::A_BridgeOrbit(void)
{
	if (target->special1)
	{
		SetMobjState(this, S_NULL);
	}
	args[0] += 3;
	origin.x = target->origin.x + orbitTableX[args[0] & 255];
	origin.y = target->origin.y + orbitTableY[args[0] & 255];
	origin.z = target->origin.z;
}

//==========================================================================
//
//  Actor::A_BridgeInit
//
//==========================================================================

void Actor::A_BridgeInit(void)
{
	int startangle;
	mobj_t *ball1;
	mobj_t *ball2;
	mobj_t *ball3;
	float cx, cy, cz;

	cx = origin.x;
	cy = origin.y;
	cz = origin.z;
	startangle = P_Random();
	special1 = 0;

	// Spawn triad into world
	ball1 = P_SpawnMobj(cx, cy, cz, MT_BRIDGEBALL);
	ball1->args[0] = startangle;
	ball1->target = this;

	ball2 = P_SpawnMobj(cx, cy, cz, MT_BRIDGEBALL);
	ball2->args[0] = (startangle + 85) & 255;
	ball2->target = this;

	ball3 = P_SpawnMobj(cx, cy, cz, MT_BRIDGEBALL);
	ball3->args[0] = (startangle + 170) & 255;
	ball3->target = this;

	Actor(*ball1).A_BridgeOrbit();
	Actor(*ball2).A_BridgeOrbit();
	Actor(*ball3).A_BridgeOrbit();
}

//==========================================================================
//
//  A_BridgeRemove
//
//==========================================================================

void A_BridgeRemove(mobj_t *actor)
{
	actor->special1 = true;	// Removing the bridge
	actor->Flags &= ~MF_SOLID;
	SetMobjState(actor, S_FREE_BRIDGE1);
}

