//============================================================================
//
//	Actor::A_SerpentChase
//
//============================================================================

void Actor::A_SerpentChase(void)
{
	float delta;
	float oldX, oldY;
	int oldFloor;

	if (ReactionCount)
	{
		ReactionCount--;
	}

	// Modify target threshold
	if (threshold)
	{
		threshold--;
	}

	if (gameskill == sk_nightmare)
	{
		// Monsters move faster in nightmare mode
		time *= 0.5;
		if (time < 0.1)
		{
			time = 0.1;
		}
	}

	//
	// turn towards movement direction if not there yet
	//
	if (movedir < 8)
	{
		angles.yaw = itof(ftoi(angles.yaw / 45.0)) * 45.0;
		delta = AngleMod180(angles.yaw - itof(movedir) * 45.0);
		if (delta > 0.0)
		{
			angles.yaw = AngleMod360(angles.yaw - 45.0);
		}
		else if (delta < 0.0)
		{
			angles.yaw = AngleMod360(angles.yaw + 45.0);
		}
	}

	if (!target || !(target->Flags & MF_SHOOTABLE))
	{
		// look for a new target
		if (LookForPlayers(true))
		{
			// got a new target
			return;
		}
		SetState(SpawnState);
		return;
	}

	//
	// don't attack twice in a row
	//
	if (Flags & MF_JUSTATTACKED)
	{
		Flags &= ~MF_JUSTATTACKED;
		if (gameskill != sk_nightmare)
			NewChaseDir();
		return;
	}

	//
	// check for melee attack
	//
	if (MeleeState && CheckMeleeRange())
	{
		if (sound_attack)
		{
			StartSound(self, sound_attack, CHAN_WEAPON);
		}
		SetState(MeleeState);
		return;
	}

	//
	// possibly choose another target
	//
	if (netgame && !threshold && !P_CheckSight(self, *target))
	{
		if (LookForPlayers(true))
			return;	// got a new target
	}

	//
	// chase towards player
	//
	oldX = origin.x;
	oldY = origin.y;
	oldFloor = subsector->sector->floor.pic;
	if (--movecount < 0 || !StepMove())
	{
		NewChaseDir();
	}
	if (subsector->sector->floor.pic != oldFloor)
	{
		P_TryMove(this, oldX, oldY);
		NewChaseDir();
	}

	//
	// make active sound
	//
	if (sound_active && P_Random() < 3)
	{
		StartSound(self, sound_active, CHAN_VOICE);
	}
}

//============================================================================
//
//  Actor::A_SerpentHumpDecide
//
//  Decided whether to hump up, or if the mobj is a serpent leader,
// to missile attack
//
//============================================================================

void Actor::A_SerpentHumpDecide(void)
{
	if (Class == SerpentLeader)
	{
		if (P_Random() > 30)
		{
			return;
		}
		else if (P_Random() < 40)
		{
			// Missile attack
			SetState(S_SERPENT_SURFACE1);
			return;
		}
	}
	else if (P_Random() > 3)
	{
		return;
	}
	if (!CheckMeleeRange())
	{
		// The hump shouldn't occur when within melee range
		if (Class == SerpentLeader && P_Random() < 128)
		{
			SetState(S_SERPENT_SURFACE1);
		}
		else
		{
			SetState(S_SERPENT_HUMP1);
			StartSoundName(self, 'SerpentActive', CHAN_VOICE);
		}
	}
}

