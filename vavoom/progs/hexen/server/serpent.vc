//	Actor::A_SerpentHeadCheck
//
//============================================================================

void Actor::A_SerpentHeadCheck(void)
{
	if (origin.z <= floorz)
	{
		if (P_GetThingFloorType(this) >= FLOOR_LIQUID)
		{
			P_HitFloor(this);
			SetState(S_NULL);
		}
		else
		{
			SetState(S_SERPENT_HEAD_X1);
		}
	}
}

