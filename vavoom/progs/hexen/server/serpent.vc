//============================================================================
//
//  Actor::A_SerpentChooseAttack
//
//============================================================================

void Actor::A_SerpentChooseAttack(void)
{
	if (!target || CheckMeleeRange())
	{
		return;
	}
	if (Class == SerpentLeader)
	{
		SetState(S_SERPENT_MISSILE1);
	}
}

//============================================================================
//
//	Actor::A_SerpentMeleeAttack
//
//============================================================================

void Actor::A_SerpentMeleeAttack(void)
{
	if (!target)
	{
		return;
	}
	if (CheckMeleeRange())
	{
		target->Damage(self, self, HITDICE(5));
		StartSoundName(self, 'SerpentMeleeHit', CHAN_WEAPON);
	}
	if (P_Random() < 96)
	{
		A_SerpentCheckForAttack();
	}
}

