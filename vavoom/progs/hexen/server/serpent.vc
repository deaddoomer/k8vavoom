void Actor::A_SetShootable(void)
{
	Flags2 &= ~MF2_NONSHOOTABLE;
	Flags |= MF_SHOOTABLE;
}

//==========================================================================
//
//	Actor::A_UnSetShootable
//
//==========================================================================

void Actor::A_UnSetShootable(void)
{
	Flags2 |= MF2_NONSHOOTABLE;
	Flags &= ~MF_SHOOTABLE;
}

