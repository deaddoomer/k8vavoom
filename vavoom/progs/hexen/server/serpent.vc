//============================================================================
//
//  Actor::A_SerpentCheckForAttack
//
//============================================================================

void Actor::A_SerpentCheckForAttack(void)
{
	if (!target)
	{
		return;
	}
	if (Class == SerpentLeader)
	{
		if (!CheckMeleeRange())
		{
			SetState(S_SERPENT_ATK1);
			return;
		}
	}
	if (CheckMeleeRange2())
	{
		SetState(S_SERPENT_WALK1);
	}
	else if (CheckMeleeRange())
	{
		if (P_Random() < 32)
		{
			SetState(S_SERPENT_WALK1);
		}
		else
		{
			SetState(S_SERPENT_ATK1);
		}
	}
}

