//==========================================================================
//
//  Actor::A_TeloSpawnA
//
//==========================================================================

void Actor::A_TeloSpawnA(void)
{
	Actor A;

	A = Spawn(TeleportOtherFX2, Origin);
	if (A)
	{
		A._Special1 = TELEPORT_LIFE;	// Lifetime countdown
		A.Angles.yaw = Angles.yaw;
		A.Owner = Owner;
		A.Velocity = Velocity / 2.0;
	}
}

