//==========================================================================
//
//  Actor::A_TeloSpawnA
//
//==========================================================================

void Actor::A_TeloSpawnA(void)
{
	mobj_t *mo;

	mo = P_SpawnMobj(origin.x, origin.y, origin.z, MT_TELOTHER_FX2);
	if (mo)
	{
		mo->special1 = TELEPORT_LIFE;	// Lifetime countdown
		mo->angles.yaw = angles.yaw;
		mo->target = target;
		mo->velocity = velocity / 2.0;
	}
}

