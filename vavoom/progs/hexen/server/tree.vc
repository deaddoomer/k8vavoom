//============================================================================
//
//  Actor::A_LeafSpawn
//
//============================================================================

void Actor::A_LeafSpawn(void)
{
	mobj_t *mo;
	int i;

	for (i = (P_Random() & 3) + 1; i; i--)
	{
		mo = P_SpawnMobj(origin.x + (Random() - Random()) * 64.0,
			origin.y + (Random() - Random()) * 64.0,
			origin.z + Random() * 64.0,
			P_Random() & 1 ? MT_LEAF2 : MT_LEAF1);
		if (mo)
		{
			P_ThrustMobj(mo, angles.yaw, Random() * 2.0 + 3.0);
			mo->target = this;
			mo->special1 = 0;
		}
	}
}

//============================================================================
//
//  Actor::A_LeafThrust
//
//============================================================================

void Actor::A_LeafThrust(void)
{
	if (P_Random() > 96)
	{
		return;
	}
	velocity.z += (Random() * 2.0 + 1.0) * 35.0;
}

//============================================================================
//
//  Actor::A_LeafCheck
//
//============================================================================

void Actor::A_LeafCheck(void)
{
	special1++;
	if (special1 >= 20)
	{
		SetMobjState(this, S_NULL);
		return;
	}
	if (P_Random() > 64)
	{
		if (!velocity.x && !velocity.y)
		{
			P_ThrustMobj(this, target->angles.yaw, Random() * 2.0 + 1.0);
		}
		return;
	}
	SetMobjState(this, S_LEAF1_8);
	velocity.z = (Random() * 2.0 + 1.0) * 35.0;
	P_ThrustMobj(this, target->angles.yaw, Random() * 2.0 + 2.0);
	Flags |= MF_MISSILE;
}

//===========================================================================
//
//  Actor::A_TreeDeath
//
//===========================================================================

void Actor::A_TreeDeath(void)
{
	if (!(Flags2 & MF2_FIREDAMAGE))
	{
		Height *= 4.0;
		Flags |= MF_SHOOTABLE;
		Flags &= ~(MF_CORPSE + MF_DROPOFF);
		Health = 35;
		return;
	}
	else
	{
		SetMobjState(this, MeleeState);
	}
}

