// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

class TFloorScroll:Thinker
{
	sector_t *sector;
	float xspeed;
	float yspeed;

	void Think(void);
	void Archive(void);
	void Unarchive(void);
};

class TWallScroll:Thinker
{
	int index;
	float xspeed;
	float yspeed;

	void Think(void);
};

// FUNCTION PROTOTYPES -----------------------------------------------------

// DATA DECLARATIONS -------------------------------------------------------

// CODE --------------------------------------------------------------------

//==========================================================================
//
//	TFloorScroll::Think
//
//==========================================================================

void TFloorScroll::Think(void)
{
	sector->floor.xoffs += xspeed * frametime;
	sector->floor.yoffs += yspeed * frametime;
}

//==========================================================================
//
//  TFloorScroll::Archive
//
//==========================================================================

void TFloorScroll::Archive(void)
{
	sector = SectorToNum(sector);
}

//==========================================================================
//
//  TFloorScroll::Unarchive
//
//==========================================================================

void TFloorScroll::Unarchive(void)
{
	//  Restore sector pointer
	sector = NumToSector(sector);
}

//==========================================================================
//
//  SpawnScrollingFloor
//
//==========================================================================

void SpawnScrollingFloor(sector_t * sector, int xdir, int ydir, int speed)
{
	TFloorScroll *scroll;

	scroll = NewSpecialThinker(TFloorScroll);
	scroll->sector = sector;
	scroll->xspeed = itof(xdir) * itof(1 << speed) * 16.0;
	scroll->yspeed = itof(ydir) * itof(1 << speed) * 16.0;
}

//==========================================================================
//
//	TWallScroll::Think
//
//==========================================================================

void TWallScroll::Think(void)
{
	level->sides[index].textureoffset += xspeed * frametime;
	level->sides[index].rowoffset += yspeed * frametime;
}

//==========================================================================
//
//  SpawnWallScroller
//
//==========================================================================

void SpawnWallScroller(line_t * line, int xdir, int ydir)
{
	TWallScroll *scroll;

	scroll = NewSpecialThinker(TWallScroll);
	scroll->index = line->sidenum[0];
	scroll->xspeed = itof(xdir * line->arg1) / 2.0;
	scroll->yspeed = itof(ydir * line->arg1) / 2.0;
}

