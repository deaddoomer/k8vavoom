// MACROS ------------------------------------------------------------------

#define GRAVITY 			1225.0
#define MAXMOVE 			1050.0
#define STOPSPEED			2.1875

#define FRICTION_NORMAL		3.28125
#define FRICTION_LOW		0.95703125
#define FRICTION_FLY		2.87109375
#define FRICTION_WATER		3.0

