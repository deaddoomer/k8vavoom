//===========================================================================
//
//	A_LocalQuake
//
//===========================================================================

boolean A_LocalQuake(int *args)
{
	Actor focus;
	Actor target;
	int lastfound = 0;
	int success = false;

	// Find all quake foci
	do
	{
		target = FindMobjFromTID(args[4], &lastfound);
		if (target)
		{
			focus = Spawn(QuakeFocus, target.Origin);
			if (focus)
			{
				focus.Args[0] = args[0];
				focus.Args[1] = args[1] >> 1;	// decremented every 2 tics
				focus.Args[2] = args[2];
				focus.Args[3] = args[3];
				focus.Args[4] = args[4];
				success = true;
			}
		}
	}
	while (target);

	return success;
}

//===========================================================================
//
//	Actor::A_Quake
//
//===========================================================================

void Actor::A_Quake(void)
{
	float an;
	player_t *pl;
	Actor victim;
	int richters = Args[0];
	int playnum;
	int dist;

	if (Args[1]-- > 0)
	{
		for (playnum = 0; playnum < MAXPLAYERS; playnum++)
		{
			pl = &players[playnum];
			if (!pl->bActive || !pl->bSpawned)
				continue;

			victim = *pl->mo;
			dist = ftoi(MobjDist(self, victim)) >> 6;
			// Tested in tile units (64 pixels)
			if (dist < Args[3])	// In tremor radius
			{
				pl->LocalQuakeHappening = richters;
			}
			// Check if in damage radius
			if ((dist < Args[2]) && (victim.Origin.z <= victim.FloorZ))
			{
				if (P_Random() < 50)
				{
					victim.Damage(none, none, HITDICE(1));
				}
				// Thrust player around
				an = victim.Angles.yaw + Random() * 256.0;
				victim.Thrust(an, itof(richters) / 2.0);
			}
		}
	}
	else
	{
		for (playnum = 0; playnum < MAXPLAYERS; playnum++)
		{
			players[playnum].LocalQuakeHappening = 0;
		}
		SetState(S_NULL);
	}
}

