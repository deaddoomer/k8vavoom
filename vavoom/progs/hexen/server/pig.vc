//==========================================================================
//
//  Actor::UpdateMorphedMonster
//
//  Returns true if the pig morphs.
//
//==========================================================================

int Actor::UpdateMorphedMonster(int tics)
{
	Actor fog;
	TVec oldOrigin;
	classid originalClass;
	float oldAngle;
	int oldFlags;
	int oldHealth;
	mobj_t *oldTarget;
	int oldSpecial;
	int oldTID;
	int oldArgs[5];
	classid pigClass;
	Actor mo;

	special1 -= tics;
	if (special1 > 0)
	{
		return false;
	}
	originalClass = specialcid;
	switch (originalClass)
	{
	case WraithBuried:	// These must remain morphed
	case Serpent:
	case SerpentLeader:
	case Minotaur:
		return false;
	default:
		break;
	}
	oldOrigin = origin;
	oldAngle = angles.yaw;
	oldFlags = Flags;
	oldHealth = Health;
	oldTarget = target;
	oldSpecial = special;
	oldTID = tid;
	oldArgs[0] = args[0];
	oldArgs[1] = args[1];
	oldArgs[2] = args[2];
	oldArgs[3] = args[3];
	oldArgs[4] = args[4];
	pigClass = Class;

	P_RemoveMobjFromTIDList(this);
	SetState(S_FREETARGMOBJ);
	mo = SpawnActor(oldOrigin, originalClass);

	if (!P_TestMobjLocation(&mo))
	{
		// Didn't fit
		P_RemoveMobj(&mo);
		mo = SpawnActor(oldOrigin, pigClass);
		mo.angles.yaw = oldAngle;
		mo.Flags = oldFlags;
		mo.Health = oldHealth;
		mo.target = oldTarget;
		mo.special = oldSpecial;
		mo.special1 = 5 * 35;	// Next try in 5 seconds
		mo.specialcid = originalClass;
		mo.tid = oldTID;
		mo.args[0] = oldArgs[0];
		mo.args[1] = oldArgs[1];
		mo.args[2] = oldArgs[2];
		mo.args[3] = oldArgs[3];
		mo.args[4] = oldArgs[4];
		P_InsertMobjIntoTIDList(&mo, oldTID);
		return false;
	}
	mo.angles.yaw = oldAngle;
	mo.target = oldTarget;
	mo.tid = oldTID;
	mo.special = oldSpecial;
	mo.args[0] = oldArgs[0];
	mo.args[1] = oldArgs[1];
	mo.args[2] = oldArgs[2];
	mo.args[3] = oldArgs[3];
	mo.args[4] = oldArgs[4];
	P_InsertMobjIntoTIDList(&mo, oldTID);
	fog = SpawnActor(oldOrigin + vector(0.0, 0.0, TELEFOGHEIGHT),
		TeleportFog);
	StartSoundName(&fog, 'Teleport', CHAN_VOICE);
	return true;
}

//============================================================================
//
//  Actor::A_PigLook
//
//============================================================================

void Actor::A_PigLook(void)
{
	if (UpdateMorphedMonster(10))
	{
		return;
	}
	A_Look();
}

//============================================================================
//
//  Actor::A_PigChase
//
//============================================================================

void Actor::A_PigChase(void)
{
	if (UpdateMorphedMonster(3))
	{
		return;
	}
	A_Chase();
}

//============================================================================
//
//	Actor::A_PigAttack
//
//============================================================================

void Actor::A_PigAttack(void)
{
	if (UpdateMorphedMonster(18))
	{
		return;
	}
	if (!target)
	{
		return;
	}
	if (CheckMeleeRange())
	{
		target->Damage(self, self, 2 + (P_Random() & 1));
		StartSoundName(this, 'PigAttack', CHAN_VOICE);
	}
}

//============================================================================
//
//  Actor::A_PigPain
//
//============================================================================

void Actor::A_PigPain(void)
{
	A_Pain();
	if (origin.z <= floorz)
	{
		velocity.z = 3.5 * 35.0;
	}
}

