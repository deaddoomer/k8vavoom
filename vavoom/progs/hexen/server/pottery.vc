//	Pottery1
//
//**************************************************************************
//**************************************************************************

class Pottery1:Actor
	__mobjinfo__(104)
{

//==========================================================================
//
//  A_PotteryExplode
//
//==========================================================================

void A_PotteryExplode(void)
{
	Actor A;
	int i;

	for (i = (P_Random() & 3) + 3; i; i--)
	{
		A = Spawn(PotteryBit, Origin);
		A.SetState(A.SpawnState + (P_Random() % 5));
		if (A)
		{
			A.Velocity.x = (Random() - Random()) * 4.0 * 35.0;
			A.Velocity.y = (Random() - Random()) * 4.0 * 35.0;
			A.Velocity.z = (Random() * 8.0 + 5.0) * (3.0 / 4.0) * 35.0;
		}
	}
	A.PlaySound('PotteryExplode', CHAN_VOICE);
	if (Args[0])
	{
		// Spawn an item
		Spawn(TranslateThingType[Args[0]], Origin);
	}
}

__states__
{
	S_ZPOTTERY1('POT1', 0, -1.0, S_NULL) { }
	S_ZPOTTERY_EXPLODE('POT1', 0, 0.0 / 35.0, S_NULL) { A_PotteryExplode(); }
}

defaultproperties
{
	Health = 15;
	Radius = 10.0;
	Height = 32.0;
	Mass = 100.0;
	bSolid = true;
	bShootable = true;
	bDropOff = true;
	bNoBlood = true;
	bPushable = true;
	bSlide = true;
	bTelestomp = true;
	SpawnState = S_ZPOTTERY1;
	DeathState = S_ZPOTTERY_EXPLODE;
}

}

