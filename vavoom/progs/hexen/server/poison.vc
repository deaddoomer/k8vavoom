//===========================================================================
//
//  Actor::A_PoisonBagInit
//
//===========================================================================

void Actor::A_PoisonBagInit(void)
{
	mobj_t *mo;

	mo = P_SpawnMobj(Origin.x, Origin.y, Origin.z + 28.0, PoisonCloud);
	if (!mo)
	{
		return;
	}
	mo->Velocity.x = 0.00001;	// missile objects must move to impact other objects
	mo->special1 = 24 + (P_Random() & 7);
	mo->special2 = 0;
	mo->target = target;
	mo->Radius = 20.0;
	mo->Height = 30.0;
	mo->bNoClip = false;
}

//===========================================================================
//
//  Actor::A_PoisonBagCheck
//
//===========================================================================

void Actor::A_PoisonBagCheck(void)
{
	if (!--special1)
	{
		SetState(S_POISONCLOUD_X1);
	}
}

//===========================================================================
//
//  Actor::A_PoisonBagDamage
//
//===========================================================================

void Actor::A_PoisonBagDamage(void)
{
	int bobIndex;

	A_Explode();

	bobIndex = special2;
	Origin.z += FloatBobOffsets[bobIndex] / 16.0;
	special2 = (bobIndex + 1) & 63;
}

//===========================================================================
//
//  Actor::A_PoisonShroom
//
//===========================================================================

void Actor::A_PoisonShroom(void)
{
	StateTime = 4.0 + Random() * 16.0;
}

