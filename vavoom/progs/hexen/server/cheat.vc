//==========================================================================
//
//  Cheat_God
//
//==========================================================================

void Cheat_God(void)
{
	players[0].cheats ^= CF_GODMODE;
	if (players[0].cheats & CF_GODMODE)
	{
		cprint(&players[0], "GOD MODE ON\n");
	}
	else
	{
		cprint(&players[0], "GOD MODE OFF\n");
	}
}

