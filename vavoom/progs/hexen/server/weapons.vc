int WeaponManaUseTable[NUMCLASSES * NUMWEAPONS] = {
	0, 2, 3, 14,	//  Fighter
	0, 1, 4, 18,	//  Priest
	0, 3, 5, 15,	//  Mage
	0, 0, 0, 0	//  Pig
};

//==========================================================================
//
//  WeaponManaUse
//
//==========================================================================

int WeaponManaUse(int pclass, int num)
{
	return WeaponManaUseTable[(pclass << 2) + num];
}

