class Turret:Pawn
	__mobjinfo__(27)
{

__states__
{
	S_TURRET('TURT', 0, 5.0 / 35.0, S_TURRET) { A_CheckAlarm(); }
	S_TURRET_ACTIVE('TURT', 0, 2.0 / 35.0, S_TURRET_ACTIVE) { A_Chase(); }
	S_TURRET_ATK1('TURT', 1, 4.0 / 35.0, S_TURRET_ATK2) { A_RiffleAttack(); }
	S_TURRET_ATK2('TURT', 3, 3.0 / 35.0, S_TURRET_ATK3) { A_CheckRefire(); }
	S_TURRET_ATK3('TURT', 0, 4.0 / 35.0, S_TURRET_ATK1) { A_CheckRefire(); }
	S_TURRET_DIE1('BALL', 0 | FF_FULLBRIGHT, 6.0 / 35.0, S_TURRET_DIE2) { }
	S_TURRET_DIE2('BALL', 1 | FF_FULLBRIGHT, 6.0 / 35.0, S_TURRET_DIE3) { }
	S_TURRET_DIE3('BALL', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_TURRET_DIE4) { }
	S_TURRET_DIE4('BALL', 3 | FF_FULLBRIGHT, 6.0 / 35.0, S_TURRET_DIE5) { }
	S_TURRET_DIE5('BALL', 4 | FF_FULLBRIGHT, 6.0 / 35.0, S_TURRET_DIE6) { }
	S_TURRET_DIE6('TURT', 2, -1.0, S_NULL) { }
}

defaultproperties
{
	Health = 125;
	Radius = 20.0;
	Height = 16.0;
	Mass = 10000000.0;
	bSolid = false;
	bAmbush = true;
	bSpawnCeiling = true;
	bNoGravity = true;
	bNoBlood = true;
	IdleState = S_TURRET;
	SeeState = S_TURRET_ACTIVE;
	MissileState = S_TURRET_ATK1;
	PainState = S_TURRET_ATK1;
	DeathState = S_TURRET_DIE1;
	DeathSound = 'MissileExplode';
}

}

