//==========================================================================
//
//  SpawnScrollingFloor
//
//==========================================================================

void SpawnScrollingFloor(sector_t* sector, int xdir, int ydir, int speed)
{
	FloorScroll Scroll;

	Scroll = NewSpecialThinker(FloorScroll);
	Scroll.Sector = sector;
	Scroll.XSpeed = itof(xdir) * itof(1 << speed) * 35.0 / 2.0;
	Scroll.YSpeed = itof(ydir) * itof(1 << speed) * 35.0 / 2.0;
}

//==========================================================================
//
//  SpawnWallScroller
//
//==========================================================================

void SpawnWallScroller(line_t* line, int xdir, int ydir)
{
	WallScroll Scroll;

	Scroll = NewSpecialThinker(WallScroll);
	Scroll.index = line->sidenum[0];
	Scroll.XSpeed = itof(xdir * line->arg1) * 35.0 / 64.0;
	Scroll.YSpeed = itof(ydir * line->arg1) * 35.0 / 64.0;
}

//==========================================================================
//
//  SpawnWallOffsetsScroller
//
//==========================================================================

void SpawnWallOffsetsScroller(line_t* line)
{
	WallScroll Scroll;

	Scroll = NewSpecialThinker(WallScroll);
	Scroll.index = line->sidenum[0];
	Scroll.XSpeed = -GLevel.Sides[Scroll.index].textureoffset * 35.0;
	Scroll.YSpeed = GLevel.Sides[Scroll.index].rowoffset * 35.0;
}

