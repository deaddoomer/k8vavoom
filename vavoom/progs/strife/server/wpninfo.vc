//  set_weapon_fist
//
//==========================================================================

void set_weapon_fist(player_t * player)
{
	player->w_Ammo = am_noammo;
	player->w_UpState = S_PUNCHUP;
	player->w_DownState = S_PUNCHDOWN;
	player->w_ReadyState = S_PUNCH;
	player->w_AttackState = S_PUNCH1;
	player->w_HoldAttackState = S_NULL;
	player->w_FlashState = S_LIGHTDONE;
}

