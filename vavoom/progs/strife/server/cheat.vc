//==========================================================================
//
//  Cheat_God
//
//==========================================================================

void Cheat_God(void)
{
	Player player;

	player = svvars->Players[0];
	player.Cheats ^= CF_GODMODE;
	if (player.Cheats & CF_GODMODE)
	{
		if (player.MO)
			player.MO.Health = GOD_HEALTH;
		player.Health = GOD_HEALTH;
		cprint(player, "Degreelessness Mode On");
	}
	else
		cprint(player, "Degreelessness Mode Off");
}

//==========================================================================
//
//  Cheat_NoClip
//
//==========================================================================

void Cheat_NoClip(void)
{
	Player player;

	player = svvars->Players[0];
	player.Cheats ^= CF_NOCLIP;
	if (player.Cheats & CF_NOCLIP)
		cprint(player, "No Clipping Mode ON");
	else
		cprint(player, "No Clipping Mode OFF");
}

//==========================================================================
//
//  Cheat_Gimme
//
//==========================================================================

void Cheat_Gimme(void)
{
	int i;
	Player player;

	player = svvars->Players[0];
	// Weapons
	if (Cmd_CheckParm("Weapons"))
	{
		for (i = 0; i < NUMWEAPONS; i++)
		{
			player.WeaponOwned[i] = true;
		}
	}

	// Ammo
	if (Cmd_CheckParm("Ammo"))
	{
		for (i = 0; i < NUMAMMO; i++)
		{
			player.Ammo[i] = maxammo[i];
		}
	}

	// Keys
	if (Cmd_CheckParm("Keys"))
	{
		player.Keys = 0x03ffffff;
	}

	// Health
	if (Cmd_CheckParm("Health"))
	{
		player.Health = 100;
		player.MO.Health = 100;
	}

	// Comm unit
	if (Cmd_CheckParm("CommUnit"))
	{
		player.Communicator = true;
	}
}

//==========================================================================
//
//  P_Massacre
//
//  Kills all monsters.
//
//==========================================================================

int P_Massacre(void)
{
	int count;
	Actor mo;

	count = 0;
	FOREACH(Actor, mo)
	{
		if (mo.bCountKill && (mo.Health > 0))
		{
			mo.Damage(none, none, 10000);
			count++;
		}
	}
	return count;
}

//==========================================================================
//
//  Cheat_KillAll
//
//==========================================================================

void Cheat_KillAll(void)
{
	Player player;

	player = svvars->Players[0];
	cprint(player, "%d MONSTERS KILLED", P_Massacre());
}

