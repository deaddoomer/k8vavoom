class Loremaster : Pawn
	__mobjinfo__(12);

//==========================================================================
//
//	A_LoremasterAttack
//
//==========================================================================

void A_LoremasterAttack()
{
	if (!Enemy)
		return;

	A_FaceTarget();

	SpawnMissile(Enemy, LoremasterChain);
}

//==========================================================================
//
//	A_LoremasterDeath
//
//==========================================================================

void A_LoremasterDeath()
{
	Actor A;
	int i;

	//	Spawn some blood.
	for (i = 0; i < 4; i++)
	{
		A = Spawn(Blood, Origin + vector(0.0, 0.0, Height / 2.0));
		if (A)
		{
			A.Velocity.x = (Random() * 8.0 - 4.0) * 35.0;
			A.Velocity.y = (Random() * 8.0 - 4.0) * 35.0;
			A.Velocity.z = (10.0 + Random() * 4.0)  * 35.0;
			A.Instigator = self;
		}
	}

	//	Spawn Loremaster's specter.
	A = Spawn(Specter5, Origin + vector(0.0, 0.0, Height));
	A.Velocity.z += 2.0 * 35.0;
	A.Angles.yaw = Angles.yaw;
}

