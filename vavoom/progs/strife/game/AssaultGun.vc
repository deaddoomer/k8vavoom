class AssaultGun : StrifeWeapon
	__mobjinfo__(2002);

states
{
Ready:
	RIFG A 1 A_WeaponReady
	Loop
Deselect:
	RIFG B 1 A_Lower
	Loop
Select:
	RIFG A 1 A_Raise
	Loop
Fire:
	RIFF AB 3 A_FireAssaultGun
	RIFG D 3 A_FireAssaultGun
	RIFG C 0 A_ReFire
	RIFG B 2 A_Light0
	Goto Ready
Spawn:
	RIFL A -1
	Stop
}

defaultproperties
{
	SelectionOrder = 600;
	AmmoType1 = ClipOfBullets;
	AmmoUse1 = 1;
	AmmoGive1 = 20;
	ConversationID = 188;
	PickupMessage = "$txt_assaultgun";
}
