class Merchant : Pawn
	abstract;

//==========================================================================
//
//	A_CloseUpShop
//
//==========================================================================

final void A_CloseUpShop()
{
	StrifeLevelInfo(Level).EV_DoDoor(999, 64, 960, 0, 0,
		VerticalDoor::DOOREV_CloseWaitOpen, NULL, none);
	if (Target && Target.bIsPlayer)
	{
		StrifeLevelInfo(Level).NoiseAlert(Target, self);
	}
}

states
{
Yes:
	MRYS A 30
	Goto Spawn
No:
	MRNO AB 6
	MRNO C 10
	MRNO BA 6
	Goto Spawn
Spawn:
	MRST A 10 A_Look2
	Loop
LookRight:
	MRLK A 30 A_ActiveSound
	Goto Spawn
LookLeft:
	MRLK B 30
	Goto Spawn
Walk:
	MRBD ABCDEDCB 4
	MRBD A 5
	MRBD F 6
	Goto Spawn
See:
Pain:
	MRPN A 3
	MRPN B 3 A_Pain
	MRPN C 3
	MRPN D 9 A_CloseUpShop
	MRPN C 4
	MRPN B 3
	MRPN A 3 A_ClearSoundTarget
	Goto Spawn
Greetings:
	MRGT ABCDEFGHI 5
	Goto Spawn
}

defaultproperties
{
	Health = 10000000;
	Radius = 20.0;
	Height = 56.0;
	Mass = 5000.0;
	PainChance = 0.5859375;
	bCountKill = false;
	bMonster = false;
	bActivateMCross = false;
	bNoDeathmatch = true;
}
