class TeleportFog : Effect;

//==========================================================================
//
//  A_Lights
//
//  Just spawn some dynamic light
//
//==========================================================================

final void A_Lights()
{
	SendExplosion(DLightColour, DLightRadius, Origin + vector(0.0, 0.0, Height * 0.5));

	//  Clear old dynamic light effect
	bDynamicLight = false;
}

states
{
Spawn:
	TFOG ABCDE 6 Bright
	TFOG F 6 Bright A_Lights
	TFOG EDCB 6 Bright
	Stop
}

defaultproperties
{
	Alpha = 0.333;
	bDynamicLight = true;
	DLightColour = RGB(235, 231, 0);
	DLightRadius = 86.0;
}
