class TeleportFog : Effect;

//==========================================================================
//
//  A_Lights
//
//  Just spawn some dynamic light
//
//==========================================================================

final void A_Lights()
{
	SendExplosion(DLightColour, Origin + vector(0.0, 0.0, Height * 0.5));

	//  Clear old dynamic light effect
	bDynamicLight = false;
}

__states__
{
	S_TFOG1('TFOG', 0 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG2) = none
	S_TFOG2('TFOG', 1 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG3) = none
	S_TFOG3('TFOG', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG4) = none
	S_TFOG4('TFOG', 3 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG5) = none
	S_TFOG5('TFOG', 4 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG6) = none
	S_TFOG6('TFOG', 5 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG7) = A_Lights
	S_TFOG7('TFOG', 4 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG8) = none
	S_TFOG8('TFOG', 3 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG9) = none
	S_TFOG9('TFOG', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG10) = none
	S_TFOG10('TFOG', 1 | FF_FULLBRIGHT, 6.0 / 35.0, none) = none
}

defaultproperties
{
	Alpha = 0.333;
	IdleState = S_TFOG1;
	bDynamicLight = true;
	DLightColour = RGB(235, 231, 0);
	DLightRadius = 200.0;
}
