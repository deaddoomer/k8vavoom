class SlideshowStarter : Pickup;

//==========================================================================
//
//	TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	if (XLevel.MapName == 'map03')
	{
		StrifeLevelInfo(Level).ConversationSlideshow = true;
		Player(Toucher.Player).ClientSlideshow1();
	}
	else if (XLevel.MapName == 'map10')
	{
		StrifeLevelInfo(Level).ConversationSlideshow = true;
		Player(Toucher.Player).ClientSlideshow2();
		Player(Toucher.Player).GiveQuest(QUEST_VisitOracle);
	}
	GoAwayAndDie();
	return true;
}

defaultproperties
{
	ConversationID = 343;
	IdleState = S_TOKENS;
}
