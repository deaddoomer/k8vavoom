class MiniMissile : Projectile;

//==========================================================================
//
//	GetExplodeParms
//
//==========================================================================

void GetExplodeParms(out int damage, out float distance, out byte damageSelf)
{
	damage = 64;
	distance = 64.0;
	RenderStyle = STYLE_Add;
}

states
{
Spawn:
	MICR A 6 Bright A_SpawnPuff
	Loop
Death:
	MISL A 5 Bright A_ExplodeAndAlert
	MISL B 5 Bright
	MISL C 4 Bright
	MISL DEFG 2 Bright
	Stop
}

defaultproperties
{
	Radius = 10.0;
	Height = 14.0;
	Speed = 700.0;
	MaxStepHeight = 4.0;
	MissileDamage = 10;
	bActivateImpact = true;
	bDynamicLight = true;
	bExplodeParticles = true;
	SightSound = 'weapons/minimissile';
	DeathSound = 'weapons/minimissilehit';
	DLightColour = RGB(215, 179, 0);
	DLightRadius = 118.0;
}
