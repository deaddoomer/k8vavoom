class StrifePlayer : PlayerPawn;

states
{
Spawn:
	PLAY A -1
	Stop
See:
	PLAY ABCD 4
	Loop
Missile:
	PLAY E 12
	Goto Spawn
Melee:
	PLAY F 6
	Goto Missile
Pain:
	PLAY Q 4 A_Pain
	PLAY Q 4
	Goto Spawn
Death:
	PLAY G 4
	PLAY H 3 A_PlayerScream
	PLAY I 3 A_Fall
	PLAY JKLMNO 4
	PLAY P 700
	Goto XDeath+7
XDeath:
	RGIB A 5 A_XDying
	RGIB B 5 A_XScream
	RGIB C 5 A_Fall
	RGIB DEFG 5 A_XDying
	RGIB H 1400
	Stop
Burn:
	BURN A 3 A_BurnScream
	BURN B 3 A_Burn
	BURN C 3 A_Walk
	BURN D 3 A_Fall
	BURN E 5 A_Burn
	BURN FGH 5 A_Walk
	BURN I 5 A_Burn
	BURN JKL 5 A_Walk
	BURN M 3 A_Burn
	BURN N 3
	BURN OPQPQ 5
	BURN RSTU 7
	BURN V 700 //FIXME A_Dying
	Stop
Disintegrate:
	DISR A 5 A_Yeargh
	DISR BC 5
	DISR D 5 A_Fall
	DISR EF 5
	DISR GHIJ 4
	MEAT D 700
	Stop
}

defaultproperties
{
	Health = 100;
	GibsHealth = -50;
	Radius = 18.0;
	Height = 56.0;
	Mass = 100.0;
	PainChance = 1.0;
	MaxStepHeight = 16.0;
	bDropOff = true;
	bFriendly = true;
	PainSound = '*pain100';
	DeathSound = '*death';

	InitialInventory.Num = 1;
	InitialInventory[0].Type = PunchDagger; InitialInventory[0].Amount = 1;
}
