class LoremasterChain : Projectile;

//==========================================================================
//
//	A_ChainTend
//
//==========================================================================

void A_ChainTend()
{
	int i;

	for (i = 4; i > 1; i--)
	{
		Spawn(LoremasterChainTrail, vector(
			Origin.x - Radius * itof(i) * cos(Angles.yaw),
			Origin.y - Radius * itof(i) * sin(Angles.yaw),
			Origin.z - (Velocity.z / (4.0 * 35.0) * itof(i))));
	}
	PlaySound(ActiveSound, CHAN_BODY);
}

__states__
{
	S_LOREMASTER_CHAIN('OCLW', 0, 2.0 / 35.0, S_LOREMASTER_CHAIN) { A_ChainTend(); }
	S_LOREMASTER_CHAIN_X('CCLW', 0, 6.0 / 35.0, S_NULL) { }
}

defaultproperties
{
	Radius = 10.0;
	Height = 14.0;
	Speed = 700.0;
	MissileDamage = 2;
	IdleState = S_LOREMASTER_CHAIN;
	DeathState = S_LOREMASTER_CHAIN_X;
	SightSound = 'LoremasterChain';
	ActiveSound = 'PunchMiss';
}

