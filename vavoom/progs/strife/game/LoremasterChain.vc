class LoremasterChain : Projectile;

//==========================================================================
//
//  DoSpecialDamage
//
//==========================================================================

int DoSpecialDamage(Actor Victim, int damage)
{
	Victim.Velocity += Normalise(Instigator.Origin - Victim.Origin) *
		((255.0 * 50.0 * 35.0) / (Victim.Mass ? Victim.Mass : 1.0));
	return damage;
}

//==========================================================================
//
//	A_ChainTend
//
//==========================================================================

void A_ChainTend()
{
	int i;

	for (i = 4; i > 1; i--)
	{
		Spawn(LoremasterChainTrail, vector(
			Origin.x - Radius * itof(i) * cos(Angles.yaw),
			Origin.y - Radius * itof(i) * sin(Angles.yaw),
			Origin.z - (Velocity.z / (4.0 * 35.0) * itof(i))));
	}
	PlaySound(ActiveSound, CHAN_BODY);
}

__states__
{
	S_LOREMASTER_CHAIN('OCLW', 0, 2.0 / 35.0, S_LOREMASTER_CHAIN) { A_ChainTend(); }
	S_LOREMASTER_CHAIN_X('CCLW', 0, 6.0 / 35.0, none) { }
}

defaultproperties
{
	Radius = 10.0;
	Height = 14.0;
	Speed = 700.0;
	MissileDamage = 2;
	IdleState = S_LOREMASTER_CHAIN;
	DeathState = S_LOREMASTER_CHAIN_X;
	SightSound = 'loremaster/chain';
	ActiveSound = 'loremaster/swish';
}

