class Ammo_satchel : Pickup
	__mobjinfo__(183);

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	Toucher.Player.Backpack = true;
	Toucher.Player.GiveAmmo(am_clip, 20);
	Toucher.Player.GiveAmmo(am_electric_arrow, 4);
	Toucher.Player.GiveAmmo(am_poison_arrow, 2);
	Toucher.Player.GiveAmmo(am_cell, 20);
	Toucher.Player.GiveAmmo(am_misl, 4);
	Toucher.Player.GiveAmmo(am_grenade1, 6);
	Toucher.Player.GiveAmmo(am_grenade2, 2);
	return true;
}

__states__
{
	S_BACKPACK('BKPK', 0, -1.0, S_NULL) { }
}

defaultproperties
{
	ConversationID = 187;
	PickupString = "ammo satchel";
	IdleState = S_BACKPACK;
}

