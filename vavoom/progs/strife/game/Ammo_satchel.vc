class Ammo_satchel : Pickup
	__mobjinfo__(183)
	__scriptid__(144);

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	Player(Toucher.Player).Backpack = true;
	Player(Toucher.Player).GiveAmmo(StrifeDefs::am_clip, 20);
	Player(Toucher.Player).GiveAmmo(StrifeDefs::am_electric_arrow, 4);
	Player(Toucher.Player).GiveAmmo(StrifeDefs::am_poison_arrow, 2);
	Player(Toucher.Player).GiveAmmo(StrifeDefs::am_cell, 20);
	Player(Toucher.Player).GiveAmmo(StrifeDefs::am_misl, 4);
	Player(Toucher.Player).GiveAmmo(StrifeDefs::am_grenade1, 6);
	Player(Toucher.Player).GiveAmmo(StrifeDefs::am_grenade2, 2);
	return true;
}

__states__
{
	S_BACKPACK('BKPK', 0, -1.0, S_NULL) { }
}

defaultproperties
{
	ConversationID = 187;
	PickupString = "ammo satchel";
	IdleState = S_BACKPACK;
}

