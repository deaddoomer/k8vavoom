class Oracle : Pawn
	__mobjinfo__(199);

//==========================================================================
//
//	A_OracleDeath
//
//==========================================================================

final void A_OracleDeath()
{
	AlienSpectre3 A;

	foreach AllThinkers(AlienSpectre3, A)
	{
		if (A && A.bCountKill && A.Health > 0)
		{
			A.Target = Target;
			A.SetState(A.SeeState);
		}
	}
}

