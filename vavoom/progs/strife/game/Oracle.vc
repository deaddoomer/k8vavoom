class Oracle : Pawn
	__mobjinfo__(199);

//==========================================================================
//
//	A_OracleDeath
//
//==========================================================================

final void A_OracleDeath()
{
	AlienSpectre3 A;

	foreach AllThinkers(AlienSpectre3, A)
	{
		if (A && A.bMonster && A.Health > 0)
		{
			A.Target = Target;
			A.SetState(A.SeeState);
		}
	}
}

states
{
Spawn:
	ORCL A -1
	Stop
Death:
	ORCL BCDEFGHIJK 5
	ORCL L 5 A_Fall
	ORCL M 5
	ORCL N 5 A_OracleDeath
	ORCL OP 5
	ORCL Q -1
	Stop
}

defaultproperties
{
	ConversationID = 65;
	ClassName = 'ORACLE';
	Health = 1;
	Radius = 15.0;
	Height = 56.0;
	Mass = 100.0;
	bNoBlood = true;
	bNoDeathmatch = true;
}
