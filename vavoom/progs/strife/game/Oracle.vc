class Oracle : Pawn
	__mobjinfo__(199);

//==========================================================================
//
//	A_OracleDeath
//
//==========================================================================

void A_OracleDeath()
{
	Specter3 A;

	FOREACH(Specter3, A)
	{
		if (A.bCountKill && A.Health > 0)
		{
			A.LookForPlayers(true);
			A.SetState(A.SeeState);
		}
	}
}

