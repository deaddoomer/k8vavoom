class ForceFieldGuardian : Actor
	__mobjinfo__(25);

__states__
{
	S_REMOVE_FORCE_FIELD('', 0, 1.0 / 35.0, none) { A_RemoveForceField(); }
}

defaultproperties
{
	Health = 10;
	Radius = 2.0;
	Height = 1.0;
	Mass = 10000.0;
	bShootable = true;
	bHidden = true;
	bInCombat = true;
	IdleState = S_TOKENS;
	DeathState = S_REMOVE_FORCE_FIELD;
}

