class Rebel : StrifeHumanoid
	abstract;

states
{
Spawn:
	HMN1 P 5 A_Look2
	Loop
LookRight:
	HMN1 Q 8
	Goto Spawn
LookLeft:
	HMN1 R 8
	Goto Spawn
Walk:
	HMN1 ABCDABCD 6 A_Wander
	Goto Spawn
See:
	HMN1 AABBCCDD 3 A_Chase
	Loop
Missile:
	HMN1 E 10 A_FaceTarget
	HMN1 F 10 Bright A_RiffleAttack
	HMN1 E 10 A_RiffleAttack
	Goto See
Pain:
	HMN1 O 3
	HMN1 O 3 A_Pain
	Goto See
Death:
	HMN1 G 5
	HMN1 H 5 A_Scream
	HMN1 I 3 A_Fall
	HMN1 J 4
	HMN1 KLM 3
	HMN1 N -1
	Stop
XDeath:
	RGIB A 4 A_XDying
	RGIB B 4 A_XScream
	RGIB C 3 A_Fall
	RGIB DEF 3 A_XDying
	RGIB G 3
	RGIB H 1400
	Stop
}

defaultproperties
{
	StrifeName = "Rebel";
	Health = 60;
	GibsHealth = -30;
	Radius = 20.0;
	Height = 56.0;
	Mass = 100.0;
	Speed = 8.0 * 35.0;
	PainChance = 0.9765625;
	bFriendly = true;
	SightSound = 'rebel/sight';
	ActiveSound = 'rebel/active';
	PainSound = 'rebel/pain';
	DeathSound = 'rebel/death';
	DLightColour = RGB(203, 111, 0);
	DLightRadius = 118.0;
	Obituary = "$ob_rebel";
}
