class PowerCoupling : Decoration
	__mobjinfo__(220);

//==========================================================================
//
//	GetClassFromID
//
//==========================================================================

void Died(Actor source)
{
	int i;

	Died(source);

	for (i = 0; i < MAXPLAYERS; ++i)
	{
		if (svvars->Players[i] && svvars->Players[i].bSpawned &&
			svvars->Players[i].Health > 0)
		{
			break;
		}
	}

	if (i == MAXPLAYERS)
	{
		return;
	}

	P_NoiseAlert(source, self);
	EV_DoDoor(225, 16, 0, 0, 0, DOOREV_Close, NULL, svvars->Players[i].MO);
	EV_DoFloor(44, 8, 0, 0, 0, FLOOREV_LowerToHighest, NULL);
	svvars->Players[i].GiveQuest(QUEST_BrokePowerCoupling);
	MSG_Select(MSG_SV_RELIABLE);
	MSG_WriteByte(svc_voice);
	MSG_WriteShort(13);
	Enemy.Player.SetObjectives(13);
	Spawn(BrokenPowerCoupling, Origin);
}

__states__
{
	S_COUPLING_1('COUP', 0, 5.0 / 35.0, S_COUPLING_2) { }
	S_COUPLING_2('COUP', 1, 5.0 / 35.0, S_COUPLING_1) { }
}

defaultproperties
{
	Health = 40;
	Radius = 17.0;
	Height = 64.0;
	Mass = 999999.0;
	StepSpeed = 6.0;
	bSolid = true;
	bShootable = true;
//	bUnknown5 = true;
	bInCombat = true;
	bDropped = true;
	bNoBlood = true;
	bNoDeathmatch = true;
	IdleState = S_COUPLING_1;
}

