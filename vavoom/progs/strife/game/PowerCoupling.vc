// 289 287

class PowerCoupling : Decoration
	__mobjinfo__(220);

//==========================================================================
//
//	GetClassFromID
//
//==========================================================================

void Died(Actor source)
{
	int i;

	::Died(source);

	for (i = 0; i < MAXPLAYERS; ++i)
	{
		if (Level.Game.Players[i] && Level.Game.Players[i].bSpawned &&
			Level.Game.Players[i].Health > 0)
		{
			break;
		}
	}

	if (i == MAXPLAYERS)
	{
		return;
	}

	StrifeLevelInfo(Level).NoiseAlert(source, self);
	StrifeLevelInfo(Level).EV_DoDoor(225, 16, 0, 0, 0, DOOREV_Close, NULL, Actor(Level.Game.Players[i].MO));
	StrifeLevelInfo(Level).EV_DoFloor(44, 8, 0, 0, 0, FLOOREV_LowerToHighest, NULL);
	Player(Level.Game.Players[i]).GiveQuest(QUEST_BrokePowerCoupling);
	MSG_Select(MSG_SV_RELIABLE);
	MSG_WriteByte(StrifeDefs::svc_voice);
	MSG_WriteShort(13);
	Player(Level.Game.Players[i]).SetObjectives(13);
	Spawn(BrokenPowerCoupling, Origin);
}

__states__
{
	S_COUPLING_1('COUP', 0, 5.0 / 35.0, S_COUPLING_2) { }
	S_COUPLING_2('COUP', 1, 5.0 / 35.0, S_COUPLING_1) { }
}

defaultproperties
{
	Health = 40;
	Radius = 17.0;
	Height = 64.0;
	Mass = 999999.0;
	StepSpeed = 6.0;
	bSolid = true;
	bShootable = true;
//	bUnknown5 = true;
	bInCombat = true;
	bDropped = true;
	bNoBlood = true;
	bNoDeathmatch = true;
	IdleState = S_COUPLING_1;
}

