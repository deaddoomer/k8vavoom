class Communicator : Pickup
	__mobjinfo__(206);

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	Player(Toucher.Player).Communicator = true;
	return true;
}

__states__
{
	S_COMMUNICATOR('COMM', 0, -1.0, S_NULL) { }
}

defaultproperties
{
	ConversationID = 176;
	PickupString = "Communicator";
	bNoDeathmatch = true;
	IdleState = S_COMMUNICATOR;
}

