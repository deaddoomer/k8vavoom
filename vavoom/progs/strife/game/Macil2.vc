{
	S_MACIL_ATK2_1('LEAD', 4, 4.0 / 35.0, S_MACIL_ATK2_2) { A_FaceTarget(); }
	S_MACIL_ATK2_2('LEAD', 5 | FF_FULLBRIGHT, 4.0 / 35.0, S_MACIL_ATK2_3) { A_RiffleAttack(); }
	S_MACIL_ATK2_3('LEAD', 4, 2.0 / 35.0, S_MACIL_ATK2_1) { A_CheckRefire(); }
