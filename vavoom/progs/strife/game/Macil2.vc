class Macil2 : Macil1
	__mobjinfo__(200);

//============================================================================
//
//	TakeSpecialDamage
//
//	Macil is invulnerable to the first stage Sigil.
//
//============================================================================

int TakeSpecialDamage(EntityEx inflictor, EntityEx source, int damage,
	name DmgType)
{
	if (SpectralLightningV1(inflictor))
	{
		return -1;
	}
	return ::TakeSpecialDamage(inflictor, source, damage, DmgType);
}

//==========================================================================
//
//	A_MacilDeath
//
//==========================================================================

final void A_MacilDeath()
{
	Actor A;

	A = Spawn(AlienSpectre4, Origin + vector(0.0, 0.0, Height));
	A.Velocity.z += 2.0 * 35.0;
	A.Angles.yaw = Angles.yaw;
}

states
{
Missile:
	LEAD E 4 A_FaceTarget
	LEAD F 4 Bright A_RiffleAttack
	LEAD E 2 A_SentinelRefire
	Loop
Death:
XDeath:
	LEAD G 5
	LEAD H 5 A_Scream
	LEAD IJ 4
	LEAD K 3
	LEAD L 3 A_Fall
	LEAD MNOPQRSTUV 3
	LEAD W 3 A_MacilDeath
	LEAD X -1
	Stop
}

defaultproperties
{
	ConversationID = 50;
	GibsHealth = -47;
	PainChance = 0.78125;
	bSpectral = true;
	bNoDamage = false;
	DeathSound = 'macil/slop';
}
