class Macil2 : Macil
	__mobjinfo__(200);

//==========================================================================
//
//	A_MacilDeath
//
//==========================================================================

void A_MacilDeath()
{
	Actor A;

	A = Spawn(Specter4, Origin + vector(0.0, 0.0, Height));
	A.Velocity.z += 2.0 * 35.0;
	A.Angles.yaw = Angles.yaw;
}

