class HealthFillup : Pickup;

//==========================================================================
//
//	TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	int			Amount;
	int			Max;

	switch (Level.Game.gameskill)
	{
	case sk_baby:
	case sk_nightmare:
		Amount = 100;
		break;
	case sk_easy:
		Amount = 75;
		break;
	case sk_medium:
	case sk_hard:
		Amount = 50;
		break;
	}
	Max = Player::MAXHEALTH + Player(Toucher.Player).Stamina;
	Amount = Max * Amount / 100;
	if (Toucher.Player.Health >= Amount)
	{
		return false;
	}
	Player(Toucher.Player).GiveBody(Amount - Toucher.Player.Health);
	GoAwayAndDie();
	return true;
}

defaultproperties
{
	ConversationID = 299;
	ClassName = 'Health';
	IdleState = S_TOKENS;
}
