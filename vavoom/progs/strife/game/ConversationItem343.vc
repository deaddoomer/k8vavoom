class ConversationItem343 : Pickup;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	if (!strcmp(ARR2STR(level->mapname), "MAP03"))
	{
		ConversationSlideshow = true;
		MSG_Select(MSG_SV_RELIABLE);
		MSG_WriteByte(svc_slideshow1);
		ChangeMusic("d_dark");
	}
	else if (!strcmp(ARR2STR(level->mapname), "MAP10"))
	{
		ConversationSlideshow = true;
		MSG_Select(MSG_SV_RELIABLE);
		MSG_WriteByte(svc_slideshow2);
		ChangeMusic("d_dark");

		Toucher.Player.GiveQuest(QUEST_VisitOracle);
	}
	return true;
}

defaultproperties
{
	ConversationID = 343;
	IdleState = S_TOKENS;
}

