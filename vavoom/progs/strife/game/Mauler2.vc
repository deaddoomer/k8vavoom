class Mauler2 : Mauler;

states
{
Ready:
	MAUL IJKL 7 A_WeaponReady
	Loop
Deselect:
	MAUL I 1 A_Lower
	Loop
Select:
	MAUL I 1 A_Raise
	Loop
Fire:
	MAUL I 20 A_FireBlasterSound
	MAUL J 10 A_Light1
	BLSF A 10 Bright A_FireBlaster2
	MAUL B 3 Bright A_Light2
	MAUL C 2
	MAUL D 2 A_Light0
	MAUL E 2 A_ReFire
	Goto Ready
}

defaultproperties
{
	SisterWeaponType = Mauler;
	Slot = 7;
	SelectionOrder = 3300;
	AmmoUse1 = 30;
	AmmoGive1 = 0;
}
