class PlayerPawn : Pawn
	abstract;

//==========================================================================
//
//  A_PlayerScream
//
//  Player death sound
//
//==========================================================================

void A_PlayerScream()
{
	// Default death sound.
	name sound = 'PlayerDeath';

	if (Health < -50)
	{
		// IF THE PLAYER DIES
		// LESS THAN -50% WITHOUT GIBBING
		sound = 'PlayerExtremeDeath';
	}

	PlaySound(sound, CHAN_VOICE);
}

defaultproperties
{
	ReactionCount = 0;
	bCountKill = false;
	bCkeckNoMonsters = false;
	bActivateMCross = false;
	bWindThrust = true;
}

