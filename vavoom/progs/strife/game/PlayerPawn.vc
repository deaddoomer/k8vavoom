class PlayerPawn : Pawn
	abstract;

struct InitInvInfo
{
	class<Inventory>	Type;
	int					Amount;
};

array<InitInvInfo>		InitialInventory;

//==========================================================================
//
//  A_PlayerScream
//
//  Player death sound
//
//==========================================================================

final void A_PlayerScream()
{
	// Default death sound.
	name sound = '*death';

	if (Health < -50)
	{
		// IF THE PLAYER DIES
		// LESS THAN -50% WITHOUT GIBBING
		sound = '*xdeath';
	}

	PlaySound(sound, CHAN_VOICE);
}

defaultproperties
{
	ReactionCount = 0;
	bCountKill = false;
	bMonster = false;
	bActivateMCross = false;
	bWindThrust = true;
	bSlide = true;
	bTelestomp = true;
	bNoBlockMonst = true;
	bPickUp = true;
}
