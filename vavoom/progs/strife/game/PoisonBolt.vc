class PoisonBolt : Projectile;

states
{
Spawn:
	ARWP A 10 A_ActiveSound
	Loop
Death:
	AROW A 1
	Stop
}

defaultproperties
{
	Radius = 10.0;
	Height = 10.0;
	Speed = 1050.0;
	MaxStepHeight = 4.0;
	MissileDamage = 500;
	bActivateImpact = true;
	bNoExtremeDeath = true;
	bDynamicLight = false;
	SightSound = 'misc/swish';
	ActiveSound = 'misc/swish';
}
