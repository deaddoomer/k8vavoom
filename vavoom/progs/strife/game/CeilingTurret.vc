class CeilingTurret : Pawn
	__mobjinfo__(27);

states
{
Spawn:
	TURT A 5 A_CheckAlarm
	Loop
See:
	TURT A 2 A_Chase
	Loop
Missile:
Pain:
	TURT B 4 A_RiffleAttack
	TURT D 3 A_CheckRefire
	TURT A 4 A_CheckRefire
	Loop
Death:
	BALL A 6 Bright A_Scream
	BALL B 6 Bright
	BALL CDE 6 Bright
	TURT C -1
	Stop
}

defaultproperties
{
	Health = 125;
	Radius = 20.0;
	Height = 16.0;
	Mass = 10000000.0;
	bSolid = false;
	bStanding = true;
	bSpawnCeiling = true;
	bNoGravity = true;
	bNoBlood = true;
	bNoGravKill = true;
	DeathSound = 'turret/death';
	Obituary = "$ob_turret";
}
