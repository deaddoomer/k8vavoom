class WeaponPunch : Weapon;

//==========================================================================
//
//	A_Punch
//
//==========================================================================

void A_Punch()
{
	int power;
	int damage;
	TAVec angles;
	TVec dir;

	power = Player(Player).Stamina / 10;
	damage = (P_Random() % (power + 8)) * (power + 2);

	angles = Player.MO.Angles;
	angles.yaw = AngleMod360(angles.yaw +
		(Random() - Random()) * 45.0 / 8.0);
	dir = Actor(Player.MO).AimLineAttack(angles, PUNCHRANGE);
	Actor(Player.MO).LineAttack(dir, PUNCHRANGE, damage, PuffPow3);

	// turn to face target
	if (Actor(Player.MO).linetarget)
	{
		if (Actor(Player.MO).linetarget.bNoBlood)
		{
			Player.MO.PlaySound('misc/metalhit', CHAN_WEAPON);
		}
		else
		{
			Player.MO.PlaySound('misc/meathit', CHAN_WEAPON);
		}
		Player.MO.Angles.yaw =
			atan2(Actor(Player.MO).linetarget.Origin.y - Player.MO.Origin.y,
			Actor(Player.MO).linetarget.Origin.x - Player.MO.Origin.x);
		Player.bFixAngle = true;
		Actor(Player.MO).bJustAttacked = true;
		// Sys1eae0 (actor->player, linetarget);
	}
	else
	{
		Player.MO.PlaySound('misc/swish', CHAN_WEAPON);
	}
}

__states__
{
	S_PUNCH('PNCH', 0, 1.0 / 35.0, S_PUNCH) { A_WeaponReady(); }
	S_PUNCHDOWN('PNCH', 0, 1.0 / 35.0, S_PUNCHDOWN) { A_Lower(); }
	S_PUNCHUP('PNCH', 0, 1.0 / 35.0, S_PUNCHUP) { A_Raise(); }
	S_PUNCH1('PNCH', 1, 4.0 / 35.0, S_PUNCH2) { }
	S_PUNCH2('PNCH', 2, 4.0 / 35.0, S_PUNCH3) { A_Punch(); }
	S_PUNCH3('PNCH', 3, 5.0 / 35.0, S_PUNCH4) { }
	S_PUNCH4('PNCH', 2, 4.0 / 35.0, S_PUNCH5) { }
	S_PUNCH5('PNCH', 1, 5.0 / 35.0, S_PUNCH) { A_ReFire(); }
}

defaultproperties
{
	Ammo = StrifeDefs::am_noammo;
	UpState = S_PUNCHUP;
	DownState = S_PUNCHDOWN;
	ReadyState = S_PUNCH;
	AttackState = S_PUNCH1;
	FlashState = S_LIGHTDONE;
	bRaiseNoiseAlert = false;
}
