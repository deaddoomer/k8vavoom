	Radius = 8.0;
	Height = 16.0;
	Speed = 1050.0;
	MaxStepHeight = 4.0;
	MissileDamage = 70;
	bMissile = true;
	bNoBlockmap = true;
	bNoGravity = true;
	bDropOff = true;
	bActivatePCross = true;
	bNoTeleport = true;
	bDynamicLight = true;
	bSpectral = true;
	DeathState = S_ZAP1_1;
	SightSound = 'weapons/sigil';
	DeathSound = 'weapons/sigilhit';
	DLightColour = RGB(151, 155, 203);
	DLightRadius = 200.0;
}
