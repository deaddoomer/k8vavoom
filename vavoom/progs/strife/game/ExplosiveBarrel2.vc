class ExplosiveBarrel2 : Actor
	__mobjinfo__(94);

//==========================================================================
//
//	Died
//
//==========================================================================

void Died(EntityEx source, EntityEx inflictor)
{
	if (source && !ExplosiveBarrel2(source))
	{
		Target = Actor(source);
	}
	::Died(source, inflictor);
}

//==========================================================================
//
//	GetExplodeParms
//
//==========================================================================

void GetExplodeParms(out int damage, out float distance, out byte damageSelf)
{
	damage = 64;
	distance = 64.0;
	RenderStyle = STYLE_Add;
}

states
{
Spawn:
	BART A -1
	Stop
Death:
	BART B 2 Bright A_Scream
	BART CD 2 Bright
	BART E 2 Bright A_Fall
	BART F 2 Bright A_ExplodeAndAlert
	BART GHI 2 Bright
	BART JK 3 Bright
	BART L -1
	Stop
}

defaultproperties
{
	Health = 30;
	Radius = 10.0;
	Height = 32.0;
	bSolid = true;
	bShootable = true;
	bInCombat = true;
	bNoBlood = true;
	bExplodeParticles = true;
	DeathSound = 'world/barrelx';
}
