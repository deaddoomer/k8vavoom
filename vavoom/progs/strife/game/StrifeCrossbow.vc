class StrifeCrossbow : StrifeWeapon
	__mobjinfo__(2001);

//==========================================================================
//
//	A_ShowElectricFlash
//
//==========================================================================

final void A_ShowElectricFlash() self(Actor)
{
	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	Player.SetViewState(ps_flash, Wpn.FindState('ElectricFlash'));
}

//==========================================================================
//
//	A_FireElectricArrow
//
//==========================================================================

final void A_FireElectricArrow() self(Actor)
{
	float savedangle;

	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	savedangle = Angles.yaw;
	Angles.yaw = AngleMod360(Angles.yaw +
		(Random() - Random()) * 45.0 / 8.0 / itof(1 << (Player(Player).Accuracy * 5 / 100)));
	Wpn.DepleteAmmo(Wpn.FireMode);
	SetState(MissileState);
	SpawnPlayerMissile(ElectricBolt);
	Angles.yaw = savedangle;
	PlaySound('weapons/xbowshoot', CHAN_WEAPON);
}

//==========================================================================
//
//	A_FirePoisonArrow
//
//==========================================================================

final void A_FirePoisonArrow() self(Actor)
{
	float savedangle;

	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	savedangle = Angles.yaw;
	Angles.yaw = AngleMod360(Angles.yaw +
		(Random() - Random()) * 45.0 / 8.0 / itof(1 << (Player(Player).Accuracy * 5 / 100)));
	Wpn.DepleteAmmo(Wpn.FireMode);
	SetState(MissileState);
	SpawnPlayerMissile(PoisonBolt);
	Angles.yaw = savedangle;
	PlaySound('weapons/xbowshoot', CHAN_WEAPON);
}

states
{
Ready:
	XBOW A 0 A_ShowElectricFlash
	XBOW A 1 A_WeaponReady
	Wait
Deselect:
	XBOW A 1 A_Lower
	Loop
Select:
	XBOW A 1 A_Raise
	Loop
Fire:
	XBOW A 3 A_ClearFlash
	XBOW B 6 A_FireElectricArrow
	XBOW C 4
	XBOW D 6
	XBOW E 3
	XBOW F 5
	XBOW G 5 A_CheckReload
	Goto Ready
ElectricFlash:
	XBOW KLM 5
	Loop
Spawn:
	CBOW A -1
	Stop
}

defaultproperties
{
	SisterWeaponType = StrifeCrossbow2;
	SelectionOrder = 1200;
	AmmoType1 = ElectricBolts;
	AmmoUse1 = 1;
	AmmoGive1 = 8;
	bNoAlert = true;
	ConversationID = 194;
	PickupMessage = "$txt_strifecrossbow";
}
