class Beggar : StrifeHumanoid
	abstract;

states
{
Spawn:
	BEGR A 10 A_Look
	Loop
See:
	BEGR AABBCC 4 A_Walk
	Loop
Melee:
	BEGR D 8
	BEGR E 8 A_PeasantAttack
	BEGR E 1 A_Chase
	BEGR D 8 A_CheckRefire
	Loop
Pain:
	BEGR A 3 A_Pain
	BEGR A 3 A_Chase
	Goto Melee
Death:
	BEGR F 4
	BEGR G 4 A_Scream
	BEGR H 4
	BEGR I 4 A_Fall
	BEGR JKLM 4
	BEGR N -1
	Stop
XDeath:
	BEGR F 5 A_XDying
	GIBS N 5 A_XScream
	GIBS O 5 A_Fall
	GIBS PQRS 4 A_XDying
	GIBS T 4
	GIBS U 5
	GIBS V 1400
	Stop
}

defaultproperties
{
	ClassName = 'Beggar';
	Health = 20;
	GibsHealth = -10;
	Radius = 20.0;
	Height = 56.0;
	Mass = 100.0;
	StepSpeed = 3.0;
	MaxStepHeight = 16.0;
	PainChance = 0.9765625;
	bNeutral = true;
	AttackSound = 'beggar/attack';
	PainSound = 'beggar/pain';
	DeathSound = 'beggar/death';
}
