class Ammo2 : Pickup;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	if (Toucher.Player.Ammo[StrifeDefs::am_clip] < 50)
	{
		Toucher.Player.Ammo[StrifeDefs::am_clip] = 50;
		return true;
	}
	else
	{
		return false;
	}
}

defaultproperties
{
	ConversationID = 298;
	ClassName = 'Ammo';
	IdleState = S_TOKENS;
}

