class MiniMissileLauncher : WeaponEx
	__mobjinfo__(2003);

//==========================================================================
//
//	A_FireMissile
//
//==========================================================================

final void A_FireMissile()
{
	float savedangle;

	savedangle = Owner.Angles.yaw;
	Owner.Angles.yaw = AngleMod360(Owner.Angles.yaw +
		(Random() - Random()) * 45.0 / 4.0 / itof(1 << (Player(Owner.Player).Accuracy * 5 / 100)));
	DecAmmo();
	Owner.SetState(Actor(Owner).MissileState);
	Actor(Owner).SpawnPlayerMissile(MiniMissile);
	Owner.Angles.yaw = savedangle;
}

