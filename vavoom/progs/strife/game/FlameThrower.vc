class FlameThrower : StrifeWeapon
	__mobjinfo__(2005);

//==========================================================================
//
//	A_FireFlamethrower
//
//==========================================================================

final void A_FireFlamethrower() self(Actor)
{
	EntityEx A;

	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	SetState(MissileState);
	Wpn.DepleteAmmo();
	Angles.yaw = AngleMod360(Angles.yaw + (Random() - Random()) * 45.0 / 8.0);
	Player.bFixAngle = true;
	A = SpawnPlayerMissile(FlameMissile);
	if (A)
	{
		A.Velocity.z += 20.0 * 35.0 / 5.0;
	}
}

states
{
Ready:
	FLMT AB 3 A_WeaponReady
	Loop
Deselect:
	FLMT A 1 A_Lower
	Loop
Select:
	FLMT A 1 A_Raise
	Loop
Fire:
	FLMF A 2 A_FireFlamethrower
	FLMF B 3 A_ReFire
	Goto Ready
Spawn:
	FLAM A -1
	Stop
}

defaultproperties
{
	Slot = 6;
	SelectionOrder = 2100;
	AmmoType1 = EnergyPod;
	AmmoUse1 = 1;
	AmmoGive1 = 100;
	ConversationID = 190;
	PickupMessage = "$txt_flamer";
	ReadySound = 'weapons/flameidle';
}
