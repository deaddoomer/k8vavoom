class InventoryItem : Pickup
	abstract;

int ItemType;
int ItemAmount;

//==========================================================================
//
//	TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	return Player(Toucher.Player).GiveInvItem(ItemType, ItemAmount);
}

defaultproperties
{
	ItemAmount = 1;
}
