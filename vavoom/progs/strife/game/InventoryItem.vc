class InventoryItem : Pickup
	abstract;

int ItemType;
int ItemAmount;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	return Player(Toucher.Player).GiveInvItem(ItemType, ItemAmount);
}

defaultproperties
{
	ItemAmount = 1;
}

