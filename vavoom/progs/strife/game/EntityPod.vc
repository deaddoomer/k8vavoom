class EntityPod : Actor
	__mobjinfo__(198);

//==========================================================================
//
//	A_EntityBossRaise
//
//==========================================================================

final void A_EntityBossRaise()
{
	Actor entity;

	entity = Spawn(EntityBoss, Origin + vector(0.0, 0.0, 70.0));
	if (entity)
	{
		entity.Velocity.z = 5.0 * 35.0;
		//	Save spawn position for subenties.
		EntityBoss(entity).BossSpawnPos = entity.Origin;
	}
}

states
{
Spawn:
	PODD A 60 A_Look
	Loop
See:
	PODD A 360
	PODD B 9 A_NoBlocking
	PODD C 9
	PODD D 9 A_EntityBossRaise
	PODD E -1
	Stop
}

defaultproperties
{
	Radius = 25.0;
	Height = 91.0;
	bSolid = true;
	bNoDeathmatch = true;
	SightSound = 'misc/gibbed';
}
