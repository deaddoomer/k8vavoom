class Peasant : StrifeHumanoid
	abstract;

states
{
Spawn:
	PEAS A 10 A_Stand
	Loop
See:
LookRight:
	PEAS A 5 A_Walk
LookLeft:
	PEAS A 5 A_Walk
Walk:
	PEAS BBCCDD 5 A_Walk
	Goto Spawn
Melee:
	PEAS E 10 A_FaceTarget
	PEAS F 8 A_PeasantAttack
	PEAS E 8
	Goto See
Pain:
	PEAS O 3
	PEAS O 3 A_Pain
	Goto Melee
Wound:
	PEAS G 5
	PEAS H 10 A_Dying
	PEAS I 6
	Goto Wound+1
Death:
	PEAS G 5
	PEAS H 5 A_Scream
	PEAS I 6
	PEAS J 5 A_Fall
	PEAS K 5
	PEAS L 6
	PEAS M 8
	PEAS N 1400
	GIBS U 5
	GIBS V 1400
	Stop
XDeath:
	GIBS M 5 A_XDying
	GIBS N 5 A_XScream
	GIBS O 5 A_Fall
	GIBS PQRS 4 A_XDying
	GIBS T 4
	Goto Death+8
}

defaultproperties
{
	Health = 31;
	GibsHealth = -15;
	Radius = 20.0;
	Height = 56.0;
	Mass = 100.0;
	Speed = 4.0 * 35.0;
	PainChance = 0.78125;
	MaxStepHeight = 16.0;
	bNeutral = true;
	SightSound = 'peasant/sight';
	ActiveSound = 'peasant/active';
	AttackSound = 'peasant/attack';
	PainSound = 'peasant/pain';
	DeathSound = 'peasant/death';
}
