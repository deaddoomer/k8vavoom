class RatBuddy : Pawn
	__mobjinfo__(85);

states
{
Spawn:
	RATT A 10 A_Look
	Loop
See:
	RATT AABB 4 A_Chase
	Loop
Melee:
	RATT A 8 A_Walk
	RATT B 4 A_Walk
	Goto See
Death:
	MEAT Q 700
	Stop
}

defaultproperties
{
	StrifeName = "rat_buddy";
	Health = 5;
	Radius = 10.0;
	Height = 16.0;
	Mass = 100.0;
	Speed = 13.0 * 35.0;
	MaxStepHeight = 16.0;
	bSolid = false;
	bShootable = false;
	bInCombat = true;
	bNoBlood = true;
	SightSound = 'rat/sight';
	ActiveSound = 'rat/active';
	DeathSound = 'rat/death';
}
