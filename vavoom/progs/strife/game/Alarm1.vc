class Alarm1 : Pickup;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	if (Toucher)
	{
		StrifeLevelInfo(Level).NoiseAlert(Toucher, Toucher);
		cprint(Toucher.Player, "You Fool!  You've set off the alarm.\n");
	}
	return true;
}

defaultproperties
{
	ConversationID = 301;
	PickupString = "alarm";
	IdleState = S_TOKENS;
	bDropAutoGive = true;
}

