class AcolyteToBe : Acolyte
	__mobjinfo__(201);

//==========================================================================
//
// A_HideDecepticon
//
// Hide the Acolyte-to-be							->
// Hide the guy transforming into an Acolyte		->
// Hide the transformer								->
// Transformers are Autobots and Decepticons, and
// Decepticons are the bad guys, so...				->
//
// Hide the Decepticon!
//
//==========================================================================

final void A_HideDecepticon()
{
	StrifeLevelInfo(Level).EV_DoDoor(999, 64, 0, 0, 0,
		VerticalDoor::DOOREV_Close, NULL, none);
	if (Target && Target.bIsPlayer)
	{
		StrifeLevelInfo(Level).NoiseAlert(Target, self);
	}
}

states
{
Spawn:
	ARMR A -1
	Stop
Pain:
	ARMR A -1 A_HideDecepticon
	Stop
Death:
	Goto Super::XDeath
IdleRight:
IdleLeft:
Walk:
See:
Missile:
XDeath:
Burn:
Disintegrate:
	Stop
}

