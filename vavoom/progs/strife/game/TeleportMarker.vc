class TeleportMarker : Decoration
	__mobjinfo__(23);

__states__
{
	S_TELEPORT_MARKER_1('TELP', 0 | FF_FULLBRIGHT, 3.0 / 35.0, S_TELEPORT_MARKER_2) { }
	S_TELEPORT_MARKER_2('TELP', 1 | FF_FULLBRIGHT, 3.0 / 35.0, S_TELEPORT_MARKER_3) { }
	S_TELEPORT_MARKER_3('TELP', 2 | FF_FULLBRIGHT, 3.0 / 35.0, S_TELEPORT_MARKER_4) { }
	S_TELEPORT_MARKER_4('TELP', 3 | FF_FULLBRIGHT, 3.0 / 35.0, S_TELEPORT_MARKER_1) { }
}

defaultproperties
{
	Translucency = 66;
	bNoBlockmap = true;
	IdleState = S_TELEPORT_MARKER_1;
	bStaticLight = true;
	LightColour = 0xffffff7f;
	LightOffset = vector(0.0, 0.0, 32.0);
	LightRadius = 200.0;
}

