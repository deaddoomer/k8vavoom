class AmmoPickup : Pickup
	abstract;

int AmmoType;
int AmmoCount;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	return Toucher.Player.GiveAmmo(AmmoType, bDropped ? AmmoCount / 2 : AmmoCount);
}

defaultproperties
{
}

