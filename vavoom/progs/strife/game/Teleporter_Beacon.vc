__states__
{
	S_BEACON('BEAC', 0, -1.0, S_NULL) { }
	S_BEACON_1('BEAC', 0, 30.0 / 35.0, S_BEACON_2) { }
	S_BEACON_2('BEAC', 0, 160.0 / 35.0, S_BEACON_1) { A_SummonRebel(); }
}

defaultproperties
{
	ConversationID = 166;
	PickupString = "Teleporter Beacon";
	Health = 5;
	Radius = 16.0;
	Height = 8.0;
	Mass = 3.0;
	bDropped = true;
	IdleState = S_BEACON;
	SeeState = S_BEACON_1;
	ItemType = StrifeDefs::ITEM_TeleporterBeacon;
}

