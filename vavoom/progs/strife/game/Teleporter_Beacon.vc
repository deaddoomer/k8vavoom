class Teleporter_Beacon : InventoryItem
	__mobjinfo__(10);

bool			bRebelSpawned;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	//	Can't pick it up if already started to spawn rebels.
	if (bRebelSpawned)
	{
		return false;
	}
	return ::HandlePickup(Toucher);
}

//==========================================================================
//
//	A_SummonRebel
//
//==========================================================================

void A_SummonRebel()
{
	Actor	A;
	Actor	TFog;

	A = Spawn(Rebel, Origin + vector((Random() - 0.5) * 64.0,
		(Random() - 0.5) * 64.0, 0.0));
	if (!A.TryMove(A.Origin))
	{
		A.Remove();
		return;
	}
	//	Once the rebels start teleporting in, you can't pick up the beacon
	// anymore.
	bRebelSpawned = true;
