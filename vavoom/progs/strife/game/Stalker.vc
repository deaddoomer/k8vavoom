class Stalker : Pawn
	__mobjinfo__(186);

name WalkSound;

//==========================================================================
//
//	A_StalkerLook
//
//==========================================================================

void A_StalkerLook()
{
	//	Set look state depending on floor/ceiling state.
	if (bNoGravity)
	{
		SetState(S_STALKER_LOOK);
	}
	else
	{
		SetState(S_STALKER_F_LOOK);
	}
}

//==========================================================================
//
//	A_StalkerChase2
//
//==========================================================================

void A_StalkerChase2()
{
	//	Movement code must assume stalker is floating.
	bInFloat = true;
	bFloat = true;

	if (!bNoGravity)
	{
		//	Walking on floor.
		SetState(S_STALKER_F_RUN1);
	}
	else
	{
		//	Check for falling down.
		if (CeilingZ - Height > Origin.z)
		{
			SetState(S_STALKER_LAND1);
		}
		else
		{
			A_Chase();
		}
	}
}

//==========================================================================
//
//	A_StalkerChase
//
//==========================================================================

void A_StalkerChase()
{
	PlaySound(WalkSound, CHAN_BODY);
	A_Chase();
}

//==========================================================================
//
//	A_StalkerAttack
//
//==========================================================================

void A_StalkerAttack()
{
	if (!Enemy)
		return;

	A_FaceTarget();

	if (bNoGravity)
	{
		//	Land if we are on ceiling.
		SetState(S_STALKER_LAND1);
	}
	else
	{
		if (CheckMeleeRange())
		{
			Enemy.Damage(self, self, (P_Random() & 7) * 2);
		}
	}
}

//==========================================================================
//
//	A_StalkerLand
//
//==========================================================================

void A_StalkerLand()
{
	bNoGravity = false;
	bInFloat = false;
	bFloat = false;
	PlaySound(WalkSound, CHAN_BODY);
}

