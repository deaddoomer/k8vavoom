class Toughness : InventoryItem;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	bool		Ret;

	Ret = ::HandlePickup(Toucher);
	if (Ret && !bDropped)
	{
		Toucher.Player.GiveInvItem(ITEM_Accuracy, 1);
		Toucher.Player.GiveInvItem(ITEM_Coin, Toucher.Player.Accuracy * 5 + 300);
	}
}

__states__
{
	S_TOUGHNESS('HELT', 0, -1.0, S_NULL) { }
}

defaultproperties
{
	ConversationID = 309;
	PickupString = "Toughness";
	IdleState = S_TOUGHNESS;
	ItemType = ITEM_Toughness;
}

