class Toughness : InventoryItem;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	bool		Ret;

	Ret = ::HandlePickup(Toucher);
	if (Ret && !bDropped)
	{
		Player(Toucher.Player).GiveInvItem(StrifeDefs::ITEM_Accuracy, 1);
		Player(Toucher.Player).GiveInvItem(StrifeDefs::ITEM_Coin, Player(Toucher.Player).Accuracy * 5 + 300);
	}
}

__states__
{
	S_TOUGHNESS('HELT', 0, -1.0, none) { }
}

defaultproperties
{
	ConversationID = 309;
	PickupString = "Toughness";
	IdleState = S_TOUGHNESS;
	ItemType = StrifeDefs::ITEM_Toughness;
}

