class QuestInfo : Pickup
	abstract;

int QuestID;
string QuestMessage;

//==========================================================================
//
//	HandlePickup
//
//==========================================================================

bool HandlePickup(Actor Toucher)
{
	Toucher.Player.Quests |= 1 << QuestID;
	return true;
}

defaultproperties
{
	IdleState = S_TOKENS;
	bSpecial = false;
}

