class ProgrammerBase : Effect;

//==========================================================================
//
//	GetExplodeParms
//
//==========================================================================

void GetExplodeParms(out int damage, out float distance, out byte damageSelf)
{
	damage = 32;
	distance = 32.0;
}

states
{
Spawn:
	BASE A 5 Bright A_ExplodeAndAlert
	BASE BCD 5 Bright
	BASE EFG 5
	BASE H -1
	Stop
}

defaultproperties
{
	bNoGravity = false;
	bColideWithThings = false;
	bColideWithWorld = false;
	bNoBlood = true;
	ExplodeEffect = RGB(239, 239, 0);
}
