class DegninOre : Inventory
	__mobjinfo__(59);

//==========================================================================
//
//	A_Explode192
//
//==========================================================================

final void A_Explode192()
{
	RadiusAttack(Target, 192, 192.0, false);
	if (DeathSound)
		PlaySound(DeathSound, CHAN_VOICE);

	if (ExplodeEffect)
	{
		SendExplosion(ExplodeEffect, Origin);
	}
}

//==========================================================================
//
//  SendExplosion
//
//==========================================================================

final void SendExplosion(int colour, TVec org)
{
	int i;

	for (i = 0; i < MAXPLAYERS; i++)
	{
		if (!Level.Game.Players[i])
			continue;
		if (!Level.Game.Players[i].bSpawned)
			continue;
		Player(Level.Game.Players[i]).ClientExplosion(colour, org);
	}
}

__states__
{
	S_ORE('XPRK', 0, -1.0, none) = none
	S_ORE_X('XPRK', 0, 1.0 / 35.0, S_ORE_X1) = A_RemoveForceField
	S_ORE_X1('BNG3', 0 | FF_FULLBRIGHT, 3.0 / 35.0, S_ORE_X2) = A_Explode192
	S_ORE_X2('BNG3', 1 | FF_FULLBRIGHT, 3.0 / 35.0, S_ORE_X3) = none
	S_ORE_X3('BNG3', 2 | FF_FULLBRIGHT, 3.0 / 35.0, S_ORE_X4) = none
	S_ORE_X4('BNG3', 3 | FF_FULLBRIGHT, 3.0 / 35.0, S_ORE_X5) = none
	S_ORE_X5('BNG3', 4 | FF_FULLBRIGHT, 3.0 / 35.0, S_ORE_X6) = none
	S_ORE_X6('BNG3', 5 | FF_FULLBRIGHT, 3.0 / 35.0, S_ORE_X7) = none
	S_ORE_X7('BNG3', 6 | FF_FULLBRIGHT, 3.0 / 35.0, S_ORE_X8) = none
	S_ORE_X8('BNG3', 7 | FF_FULLBRIGHT, 3.0 / 35.0, none) = none
}

