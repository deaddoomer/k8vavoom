class KneelingGyu : Pawn
	__mobjinfo__(204);

states
{
Spawn:
See:
	NEAL A 15 A_ActiveSound
	NEAL B 40 A_ActiveSound
	Loop
Pain:
	NEAL C 5 A_SetShadow
	NEAL B 4 A_Pain
	NEAL C 5 A_ClearShadow
	Goto Spawn
Wound:
	NEAL B 6
	NEAL C 13 A_Dying
	Loop
Death:
	NEAL D 5
	NEAL E 5 A_Scream
	NEAL F 6
	NEAL G 5 A_Fall
	NEAL H 5
	NEAL I 6
	NEAL J -1
	Stop
}

defaultproperties
{
	Health = 51;
	Radius = 6.0;
	Height = 17.0;
	Mass = 50000.0;
	PainChance = 1.0;
	bInCombat = true;
	bNoBlood = true;
	ActiveSound = 'misc/chant';
	PainSound = 'misc/static';
	DeathSound = 'misc/static';
}
