class AlienSpectre3 : AlienSpectre1
	__mobjinfo__(76);

states
{
Spawn:
	ALN1 ABCDEFGHIJK 5
	Loop
See:
	ALN1 AB 5 A_Chase
	ALN1 C 5 A_FlightChase
	ALN1 DEF 5 A_Chase
	ALN1 G 5 A_FlightChase
	ALN1 HIJ 5 A_Chase
	ALN1 K 5 A_FlightChase
	Loop
Melee:
	ALN1 J 4 A_FaceTarget
	ALN1 I 4 A_SpecterMelee
	ALN1 C 4
	Goto See+2
Missile:
	ALN1 F 4 A_FaceTarget
	ALN1 I 4 A_Specter3Attack
	ALN1 E 4
	Goto See+10
Pain:
	ALN1 J 2 A_Pain
	Goto See+6
}

defaultproperties
{
	Health = 1500;
	Radius = 24.0;
	PainChance = 0.1953125;
	bSpawnCeiling = true;
	DropItemList.Num = 1;
	DropItemList[0].Type = Sigil3; DropItemList[0].Amount = 0; DropItemList[0].Chance = 1.0;
}
