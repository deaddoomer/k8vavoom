class StrifeCrossbow2 : StrifeCrossbow;

states
{
Ready:
	XBOW H 1 A_WeaponReady
	Loop
Deselect:
	XBOW H 1 A_Lower
	Loop
Select:
	XBOW H 1 A_Raise
	Loop
Fire:
	XBOW H 3
	XBOW B 6 A_FirePoisonArrow
	XBOW C 4
	XBOW D 6
	XBOW E 3
	XBOW I 5
	XBOW J 5 A_CheckReload
	Goto Ready
}

defaultproperties
{
	SisterWeaponType = StrifeCrossbow;
	Slot = 2;
	SelectionOrder = 2700;
	AmmoType1 = PoisonBolts;
	AmmoUse1 = 1;
	AmmoGive1 = 0;
}
