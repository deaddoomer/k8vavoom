class PunchDagger : StrifeWeapon;

const float PUNCHRANGE		= 80.0;

//==========================================================================
//
//	A_DaggerAttack
//
//==========================================================================

final void A_DaggerAttack() self(Actor)
{
	int			power;
	int			damage;
	TAVec		angles;
	TVec		dir;
	EntityEx	AimTarget;

	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	power = Player(Player).Stamina / 10;
	damage = (P_Random() % (power + 8)) * (power + 2);

	angles = Angles;
	angles.yaw = AngleMod360(angles.yaw +
		(Random() - Random()) * 45.0 / 8.0);
	AimTarget = AimLineAttack(dir, angles, PunchDagger::PUNCHRANGE);
	LineAttack(dir, PunchDagger::PUNCHRANGE, damage, StrifeSpark);

	// turn to face target
	if (AimTarget)
	{
		if (AimTarget.bNoBlood)
		{
			PlaySound('misc/metalhit', CHAN_WEAPON);
		}
		else
		{
			PlaySound('misc/meathit', CHAN_WEAPON);
		}
		Angles.yaw = atan2(AimTarget.Origin.y - Origin.y,
			AimTarget.Origin.x - Origin.x);
		Player.bFixAngle = true;
		bJustAttacked = true;
		// Sys1eae0 (actor->player, linetarget);
	}
	else
	{
		PlaySound('misc/swish', CHAN_WEAPON);
	}
}

states
{
Ready:
	PNCH A 1 A_WeaponReady
	Loop
Deselect:
	PNCH A 1 A_Lower
	Loop
Select:
	PNCH A 1 A_Raise
	Loop
Fire:
	PNCH B 4
	PNCH C 4 A_DaggerAttack
	PNCH D 5
	PNCH C 4
	PNCH B 5 A_ReFire
	Goto Ready
}

defaultproperties
{
	Slot = 1;
	SelectionOrder = 3900;
	bNoAlert = true;
	bBotMelee = true;
}
