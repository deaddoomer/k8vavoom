class PeasantBase : Pawn
	abstract;

//==========================================================================
//
//	A_PeasantAttack
//
//==========================================================================

void A_PeasantAttack()
{
	if (!Enemy)
		return;

	A_FaceTarget();

	if (CheckMeleeRange())
	{
		Enemy.Damage(self, self, (P_Random() % 5) * 2 + 2);
	}
}

