	BURN A 3 A_BurnScream
	BURN B 3 A_Burn
	BURN C 3 A_Walk
	BURN D 3 A_Fall
	BURN E 5 A_Burn
	BURN FGH 5 A_Walk
	BURN I 5 A_Burn
	BURN JKL 5 A_Walk
	BURN M 3 A_Burn
	BURN N 3
	BURN OPQPQ 5
	BURN RSTU 7
	BURN V 700 //FIXME A_Dying
	Stop
Disintegrate:
	DISR A 5 A_Yeargh
	DISR BC 5
	DISR D 5 A_Fall
	DISR EF 5
	DISR GHIJ 4
	MEAT D 700
	Stop
}

defaultproperties
{
	MaxStepHeight = 16.0;
}
