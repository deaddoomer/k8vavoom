class StrifeHumanoid : Pawn
	abstract;

//==========================================================================
//
//	A_PeasantAttack
//
//==========================================================================

final void A_PeasantAttack()
{
	if (!Target)
		return;

	A_FaceTarget();

	if (CheckMeleeRange())
	{
		Target.Damage(self, self, (P_Random() % 5) * 2 + 2);
	}
}

states
{
