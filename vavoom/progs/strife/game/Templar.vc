class Templar : Pawn
	__mobjinfo__(3003);

//==========================================================================
//
//	A_TemplarAttack
//
//==========================================================================

void A_TemplarAttack()
{
	int i;
	int damage;
	TVec aimDir;
	TVec dir;

	if (!Enemy)
		return;

	PlaySound('templar/shoot', CHAN_WEAPON);
	A_FaceTarget();
	aimDir = AimLineAttack(self, Angles, MAULERRANGE);
	for (i = 0; i < 3; i++)
	{
		dir = aimDir;
		VectorRotateAroundZ(&dir, (Random() - Random()) * 45.0 / 2.0);
		damage = ((P_Random() % 5) + 1) * 3;
		bDisruptDamage = true;
		LineAttack(self, dir, MAULERRANGE, damage);
		bDisruptDamage = false;
	}
}

