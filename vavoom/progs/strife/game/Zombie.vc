class Zombie : StrifeHumanoid
	__mobjinfo__(169);

states
{
Spawn:
	PEAS A 5 A_CheckTerrain
	Loop
Pain:
	AGRD A 5 A_CheckTerrain
	Loop
Death:
	GIBS M 5 A_TossGib
	GIBS N 5 A_XScream
	GIBS O 5 A_Fall
	GIBS PQRS 4 A_TossGib
	GIBS T 4
	GIBS U 5
	GIBS V 1400
	Stop
}

defaultproperties
{
	Health = 31;
	Radius = 20.0;
	Height = 56.0;
	Mass = 100.0;
	MaxStepHeight = 16.0;
	Translation = (TRANSL_Standard << TRANSL_TYPE_SHIFT) + 0;
	DeathSound = 'zombie/death';
}
