class AlarmIndicator : Decoration
	__mobjinfo__(24);

//==========================================================================
//
//	A_AlarmActive
//
//==========================================================================

void A_AlarmActive()
{
	PlaySound('misc/alarm', CHAN_VOICE);
	ReactionCount--;
	if (!ReactionCount)
	{
		SetState(IdleState);
		ReactionCount = 60;
	}
}

__states__
{
	S_KLAX('KLAX', 0, 5.0 / 35.0, S_KLAX) { A_CheckAlarm(); }
	S_KLAX_ACT1('KLAX', 1, 6.0 / 35.0, S_KLAX_ACT2) { A_AlarmActive(); }
	S_KLAX_ACT2('KLAX', 2, 60.0 / 35.0, S_KLAX_ACT1) { }
}

defaultproperties
{
	ReactionCount = 60;
	bNoBlockmap = true;
	bStanding = true;
	bSpawnCeiling = true;
	bNoGravity = true;
	IdleState = S_KLAX;
	SeeState = S_KLAX_ACT1;
}

