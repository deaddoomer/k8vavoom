//==========================================================================
//
//  ParseServerCommand
//
//==========================================================================

bool ParseServerCommand(int cmd_type)
{
	switch (cmd_type)
	{
	case svc_gun_shot:
		ParseGunShot();
		break;

	case svc_blood:
		ParseBlood();
		break;

	case svc_speech:
		StartSpeech(MSG_ReadShort());
		break;

	case svc_voice:
		LocalSound(StrToName(va("svox/voc%d", MSG_ReadShort())));
		break;

	case svc_slideshow1:
		PushMenuScreen(SpawnMenu(ConSlideshow1));
		break;

	case svc_slideshow2:
		PushMenuScreen(SpawnMenu(ConSlideshow2));
		break;

	case svc_finale_type:
		FinaleType = MSG_ReadByte();
		break;

	default:
		return false;
	}
	return true;
}

