// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

enum
{
	SBP_INVBACK,
	SBP_INVTOP,
	SBP_PAUSE,
	NUM_SB_PATCHES
};

// TYPES -------------------------------------------------------------------

// FUNCTION PROTOTYPES -----------------------------------------------------

// DATA DECLARATIONS -------------------------------------------------------

string sb_patch_names[] = {
	"INVBACK",
	"INVTOP",
	"M_PAUSE",
	""
};

int sb_height = 32;

//
//  WIDGET VISIBILITY
//

// whether left-side main status bar is active
boolean st_statusbaron;

// whether fullscreen statusbar is on
boolean st_fullscreen;

boolean st_pauseon;

// CODE --------------------------------------------------------------------

//==========================================================================
//
//  SB_CreateWidgets
//
//==========================================================================

void SB_CreateWidgets(void)
{
	//  background
	SB_CreateWidget(SBW_PATCH, 0, 168, SBP_INVBACK, SB_STYLE_NORMAL,
		&st_statusbaron, 0, NULL);
	SB_CreateWidget(SBW_PATCH, 0, 160, SBP_INVTOP, SB_STYLE_NORMAL,
		&st_statusbaron, 0, NULL);

	//  Pause
	SB_CreateWidget(SBW_PATCH, 126, 4, SBP_PAUSE, SB_STYLE_NORMAL,
		&st_pauseon, 0, NULL);
}

//==========================================================================
//
//  SB_OnDraw
//
//==========================================================================

void SB_OnDraw(int sb_view)
{
	st_statusbaron = sb_view != SB_VIEW_FULLSCREEN;
	st_fullscreen = !st_statusbaron;
	st_pauseon = cl->paused && GetCvar("draw_pause");
}

//==========================================================================
//
//  SB_UpdateWidgets
//
//==========================================================================

void SB_UpdateWidgets(void)
{
}

