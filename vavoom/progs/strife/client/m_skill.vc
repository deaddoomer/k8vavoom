//==========================================================================
//
//	MenuChoice_Skill
//
//==========================================================================

class MenuChoice_Skill:MenuBigTextButton
{
	int SkillLevel;

	void ActivateEvent(void)
	{
		SetCvar("Skill", SkillLevel);

		CmdBuf_AddText("Disconnect\n");
		CmdBuf_AddText("MaxPlayers 1\n");

		if (shareware)
			CmdBuf_AddText("Map MAP33\n");
		else
			CmdBuf_AddText("Map MAP02\n");

		ForceMenuOff();
	}
}

//==========================================================================
//
//	MenuScreenSkill
//
//==========================================================================

class MenuScreenSkill:MenuScreen
{
	string SkillNames[5];

	void CreateChoices(void)
	{
		MenuChoice_Skill newChoice;
		int i;

		for (i = 0; i < 5; i++)
		{
			newChoice = MenuChoice_Skill(AddItem(MenuChoice_Skill));
			newChoice.SetPos(ChoicesStartX, ChoicesStartY + i * 18);
			newChoice.Text = SkillNames[i];
			newChoice.SkillLevel = i;
		}
	}

	void SetDefaultChoice(void)
	{
		::SetDefaultChoice();
		SetCursor(CursorPos + 2);
	}

	defaultproperties
	{
		ChoicesStartX = 48;
		ChoicesStartY = 40;
		SelectorType = MenuSelector_Spinner;
		Title = "CHOOSE SKILL LEVEL:";
		SkillNames[0] = "training";
		SkillNames[1] = "rookie";
		SkillNames[2] = "veteran";
		SkillNames[3] = "elite";
		SkillNames[4] = "bloodbath";
	}
}

void menu_skill(void)
{
	PushMenuScreen(SpawnMenu(MenuScreenSkill));
}

