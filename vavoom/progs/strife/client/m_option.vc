//==========================================================================
//
//	MenuChoice_Controls
//
//==========================================================================

class MenuChoice_Controls:MenuSmallTextButton
{
	void ActivateEvent(void)
	{
		menu_controls();
	}

	defaultproperties
	{
		Text = "Controls";
	}
}

