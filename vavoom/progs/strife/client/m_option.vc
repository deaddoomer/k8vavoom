class MenuChoice_GoToConsole:MenuSmallTextButton
{
	void ActivateEvent(void)
	{
		CmdBuf_AddText("ToggleConsole\n");
	}

	defaultproperties
	{
		Text = "Go to console";
	}
}

//==========================================================================
//
//	MenuScreenOptions
//
//==========================================================================

class MenuScreenOptions:MenuScreen
{
	defaultproperties
	{
		Choices[0] = MenuChoice_Controls;
		Choices[1] = MenuChoice_Controls2;
		Choices[2] = MenuChoice_MouseOptions;
		Choices[3] = MenuChoice_ScreenResolution;
		Choices[4] = MenuChoice_VideoOptions;
		Choices[5] = MenuChoice_SoundSettings;
		Choices[6] = MenuChoice_GoToConsole;
		ChoicesStartX = 160;
		ChoicesStartY = 32;
		SelectorType = MenuSelector_SmallRight;
		Title = "OPTIONS";
	}
}

void menu_options(void)
{
	PushMenuScreen(SpawnMenu(MenuScreenOptions));
}

