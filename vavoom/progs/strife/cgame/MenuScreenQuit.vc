class MenuScreenQuit : MenuScreen;

MenuHelpPage	Page;
bool			bPageShown;

void CreateChoices()
{
	::CreateChoices();
	Page = MenuHelpPage(NewChild(MenuHelpPage));
	Page.SetPage("PANEL7");
}

bool Key(int key)
{
	return true;
}

void Tick(float DeltaTime)
{
	//	Wait till next frame to make sure the page has been drawn.
	if (!bPageShown)
	{
		bPageShown = true;
		return;
	}

	if (shareware)
		LocalSoundTillDone(TeaserQuitSounds[P_Random() % 5]);
	else
		LocalSoundTillDone(QuitSounds[P_Random() % 8]);

	CmdBuf_AddText("Quit\n");
}

defaultproperties
{
	bTickEnabled = true;
}

