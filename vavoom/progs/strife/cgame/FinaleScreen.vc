class FinaleScreen : Window;

int				FinaleType;
int				FinalePage;
int				FinalePic;
float			FinaleTimer;

//==========================================================================
//
//  StartFinale
//
//==========================================================================

void StartFinale()
{
	FinalePage = FinaleType * 10;
	F_PlayPage();
}

//==========================================================================
//
//	Tick
//
//==========================================================================

void Tick(float DeltaTime)
{
	FinaleTimer -= DeltaTime;
	if (FinaleTimer <= 0.0)
	{
		F_PlayPage();
	}
}

//==========================================================================
//
//  DrawWindow
//
//==========================================================================

void DrawWindow(GC gc)
{
	gc.DrawFullScreenPic(FinalePic);
}

//===========================================================================
//
//  F_PlayPage
//
//===========================================================================

void F_PlayPage()
{
	switch (FinalePage)
	{
		//	Happy ending.
	case 0:
		CmdBuf_AddText("music loop d_happy\n");
		FinalePic = R_RegisterPic('ss4f1');
		LocalSound('svox/rie01');
		FinaleTimer = 13.0;
		FinalePage = 1;
		break;

	case 1:
		FinalePic = R_RegisterPic('ss4f2');
		LocalSound('svox/bbx01');
		FinaleTimer = 11.0;
		FinalePage = 2;
		break;

	case 2:
		FinalePic = R_RegisterPic('ss4f3');
		LocalSound('svox/bbx02');
		FinaleTimer = 14.0;
		FinalePage = 3;
		break;

	case 3:
		FinalePic = R_RegisterPic('ss4f4');
		FinaleTimer = 28.0;
		FinalePage = -1;
		break;

		//	Sad ending.
	case 10:
		CmdBuf_AddText("music loop d_sad\n");
		FinalePic = R_RegisterPic('ss5f1');
		LocalSound('svox/ss501b');
		FinaleTimer = 11.0;
		FinalePage = 11;
		break;

	case 11:
		FinalePic = R_RegisterPic('ss5f2');
		LocalSound('svox/ss502b');
		FinaleTimer = 10.0;
		FinalePage = 12;
		break;

	case 12:
		FinalePic = R_RegisterPic('ss5f3');
		LocalSound('svox/ss503b');
		FinaleTimer = 11.0;
		FinalePage = -1;
		break;

		//	Dark ending.
	case 20:
		CmdBuf_AddText("music loop d_end\n");
		FinalePic = R_RegisterPic('ss6f1');
		LocalSound('svox/ss601a');
		FinaleTimer = 8.0;
		FinalePage = 21;
		break;

	case 21:
		FinalePic = R_RegisterPic('ss6f2');
		LocalSound('svox/ss602a');
		FinaleTimer = 8.0;
		FinalePage = 22;
		break;

	case 22:
		FinalePic = R_RegisterPic('ss6f3');
		LocalSound('svox/ss603a');
		FinaleTimer = 9.0;
		FinalePage = -1;
		break;
	}
}

//==========================================================================
//
//	VisibilityChanged
//
//==========================================================================

void VisibilityChanged(bool bNewVisibility)
{
	bTickEnabled = bNewVisibility;
}

defaultproperties
{
	bTickEnabled = true;
	Width = 640;
	Height = 480;
}
