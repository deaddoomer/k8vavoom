class MenuScreenHelp:MenuScreen;

MenuHelpPage Page;
int NumPages;
int CurPage;
name PageNames[3];

void CreateChoices()
{
	::CreateChoices();
	Page = MenuHelpPage(NewChild(MenuHelpPage));
	Page.SetPage(PageNames[CurPage]);
}

bool Key(int key)
{
	LocalSound('menu/clear');
	CurPage++;
	if (key == K_ESCAPE || CurPage >= NumPages)
	{
		ClGame.ForceMenuOff();
	}
	else
	{
		Page.SetPage(PageNames[CurPage]);
	}
	return true;
}

defaultproperties
{
	PageNames[0] = 'help1';
	PageNames[1] = 'help2';
	PageNames[2] = 'help3';
	NumPages = 3;
	CurPage = 0;
}
