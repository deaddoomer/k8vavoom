top_srcdir=@top_srcdir@
srcdir=@srcdir@
CXX=@CXX@
CXXFLAGS=@VLUMPY_CXXFLAGS@
CPPFLAGS=@VLUMPY_CPPFLAGS@
EXEEXT=@EXEEXT@
LDFLAGS=@VLUMPY_LDFLAGS@
LIBS=@VLUMPY_LIBS@
OBJEXT=@OBJEXT@

OBJS = cmdlib.$(OBJEXT) \
	imglib.$(OBJEXT) \
	scrlib.$(OBJEXT) \
	wadlib.$(OBJEXT) \
	vlumpy.$(OBJEXT)

all: ../bin/vlumpy$(EXEEXT)

install:

distdir:

dist:

clean:
	-rm *.$(OBJEXT)

../bin/vlumpy$(EXEEXT): $(OBJS)
	@mkdir -p ../bin
	$(CXX) -o $@ $(OBJS) $(LDFLAGS) $(LIBS)

%.$(OBJEXT): $(srcdir)/%.cpp $(srcdir)/../common/*.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I$(srcdir)/../common -c -o $@ $<

%.$(OBJEXT): $(srcdir)/../common/%.cpp $(srcdir)/../common/*.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c -o $@ $<
