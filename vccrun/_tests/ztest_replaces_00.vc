// ////////////////////////////////////////////////////////////////////////// //
class Test : Object;

int n = 42;

void onAction () {
  writeln("test: n=", n);
}


// ////////////////////////////////////////////////////////////////////////// //
// `SpawnObject(Test)` will spawn this instead
class TestNew : replaces(Test);


override void onAction () {
  writeln("new test! parent is '", GetClassName(GetClassParent(Class)), "'");
  ::onAction();
}


defaultproperties {
  n = 666;
}


