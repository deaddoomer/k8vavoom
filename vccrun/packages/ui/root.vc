class WidgetRoot : Widget;


// ////////////////////////////////////////////////////////////////////////// //
void onCreated () {
  mBaseWidth = Video.screenWidth;
  mBaseHeight = Video.screenHeight;
}


// ////////////////////////////////////////////////////////////////////////// //
override bool onEvent (ref event_t evt) {
  return ::onEvent(evt);
}


// ////////////////////////////////////////////////////////////////////////// //
defaultproperties {
  mAsRoot = true;
  mCanAdoptChildren = true;
  mHoriz = false;
  mFont = 'default';
}
